<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="fm_road_freight_un_location_view_form" model="ir.ui.view">
        <field name="name">fm_road.freight.un.location.view.form</field>
        <field name="model">freight.un.location</field>
        <field name="inherit_id" ref="freight_base.freight_un_location_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group/group[2]" position="inside">
                <field name="location_type_id" attrs="{'invisible': [('has_road', '=', False)], 'required': [('has_road', '=', True)]}" />
            </xpath>
        </field>
    </record>

</odoo>
