<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="truck_type_view_form" model="ir.ui.view">
        <field name="name">truck.type.view.form</field>
        <field name="model">truck.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <label for="name"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="active" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="truck_type_view_tree" model="ir.ui.view">
        <field name="name">truck.type.view.tree</field>
        <field name="model">truck.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_truck_type">
        <field name="name">Truck Type</field>
        <field name="res_model">truck.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="truck_type_menu"
        name="Truck Type"
        action="action_truck_type"
        parent="freight_base.root_freight_admin_manage_menu"
        sequence="14"/>
</odoo>
