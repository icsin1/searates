<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="freight_truck_number_view_form" model="ir.ui.view">
        <field name="name">freight.truck.number.view.form</field>
        <field name="model">freight.truck.number</field>
        <field name="arch" type="xml">
            <form string="Truck Number">
                <sheet>
                    <label for="vehicle_registration_number"/>
                    <div class="oe_title">
                        <h1>
                            <field name="vehicle_registration_number" placeholder="Vehicle Registration Number"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="truck_owned_by" />
                            <field name="truck_type_id" options="{'no_open': True}"/>
                            <field name="chassis_number" />
                            <field name="engine_number" />
                        </group>
                        <group>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="freight_truck_number_view_tree" model="ir.ui.view">
        <field name="name">freight.truck.number.view.tree</field>
        <field name="model">freight.truck.number</field>
        <field name="arch" type="xml">
            <tree string="Truck Number">
                <field name="vehicle_registration_number" />
                <field name="chassis_number" />
                <field name="engine_number" />
                <field name="truck_owned_by" />
                <field name="truck_type_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_freight_truck_number">
        <field name="name">Truck Number</field>
        <field name="res_model">freight.truck.number</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="freight_truck_number_menu"
        name="Truck Number"
        action="action_freight_truck_number"
        parent="freight_base.root_freight_admin_manage_menu"
        sequence="14"/>
</odoo>
