<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="freight_location_type_view_form" model="ir.ui.view">
        <field name="name">freight.location.type.view.form</field>
        <field name="model">freight.location.type</field>
        <field name="arch" type="xml">
            <form string="Location Type">
                <sheet>
                    <label for="name"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="active" widget="boolean_toggle" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="freight_location_type_view_tree" model="ir.ui.view">
        <field name="name">freight.location.type.view.tree</field>
        <field name="model">freight.location.type</field>
        <field name="arch" type="xml">
            <tree string="Location Type">
                <field name="name" />
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_freight_location_type">
        <field name="name">Location Type</field>
        <field name="res_model">freight.location.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="freight_location_type_menu"
        name="Location Type"
        action="action_freight_location_type"
        parent="freight_base.root_freight_admin_manage_menu"
        sequence="14"/>
</odoo>
