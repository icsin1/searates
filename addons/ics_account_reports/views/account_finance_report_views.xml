<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Report Sections -->

    <record id="account_finance_report_section_view_tree" model="ir.ui.view">
        <field name="name">account.finance.report.section.view.tree</field>
        <field name="model">account.finance.report.section</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name" />
                <field name="code" />
                <field name="level" />
            </tree>
        </field>
    </record>

    <record id="account_finance_report_section_view_form" model="ir.ui.view">
        <field name="name">account.finance.report.section.view.form</field>
        <field name="model">account.finance.report.section</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <label for="name"/>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Section Name"/></h1>
                    </div>
                    <group>
                        <field name="report_id" invisible="1"/>
                        <group string="Settings">
                            <field name="code" />
                            <field name="parent_id"/>
                            <field name="level" />
                        </group>
                        <group string="Computation Formula &amp; Filtering">
                            <field name="date_scope" />
                            <field name="computation_formula" />
                            <field name="data_domain" />
                            <field name="validation_domain" />
                            <field name="group_by" />
                        </group>
                    </group>
                    <notebook>
                        <page name="sub_sections" string="Sub Sections">
                            <field name="child_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Report View -->
    <record id="account_finance_report_view_tree" model="ir.ui.view">
        <field name="name">account.finance.report.view.tree</field>
        <field name="model">account.finance.report</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="parent_menu_id" />
                <field name="company_id" />
                <field name="country_id" />
            </tree>
        </field>
    </record>

    <record id="account_finance_report_view_form" model="ir.ui.view">
        <field name="name">account.finance.report.view.form</field>
        <field name="model">account.finance.report</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <label for="name"/>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Report Name" /></h1>
                    </div>
                    <group string="Report Settings">
                        <group>
                            <field name="has_date_range" />
                            <field name="company_id" options="{'no_create': 1}"/>
                            <field name="parent_menu_id" />
                        </group>
                        <group>
                            <field name="country_id" options="{'no_create': 1}"/>
                            <field name="menu_id" />
                            <field name="is_expanded"/>
                        </group>
                    </group>
                    <group string="Available Filters &amp; Options">
                        <group>
                            <field name="allow_comparison" />
                        </group>
                        <group>
                            <field name="allow_filter_by_journal" />
                        </group>
                    </group>
                    <notebook>
                        <page name="report_sections" string="Sections">
                            <field name="section_ids" context="{'default_report_id': active_id}"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="account_finance_report_action" model="ir.actions.act_window">
        <field name="name">Finance Reports</field>
        <field name="res_model">account.finance.report</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <menuitem
        id="account_finance_report_root_menu"
        name="Account Finance Reports"
        groups="base.group_system"
        parent="account.menu_finance_configuration"
        sequence="99"/>

    <menuitem
        id="account_finance_report_menu"
        name="Account Finance Reports"
        groups="base.group_system"
        parent="account_finance_report_root_menu"
        action="account_finance_report_action"/>
</odoo>
