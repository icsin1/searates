<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <menuitem
        id="menu_root_account_reports"
        name="Finance Reports"
        sequence="10"
        parent="account.menu_finance_reports"/>

    <menuitem
        id="menu_root_account_audit_reports"
        name="Audit Reports"
        sequence="11"
        parent="account.menu_finance_reports"/>

    <menuitem
        id="menu_root_account_partner_reports"
        name="Partner Reports"
        sequence="12"
        parent="account.menu_finance_reports"/>

    <!-- Client Action for Partner Ledger Report-->
    <record id="action_ics_account_partner_ledger" model="ir.actions.client">
        <field name="name">Partner Ledger</field>
        <field name="res_model">web.report</field>
        <field name="tag">ics_report_base.web_report</field>
        <field name="context" eval="{'report_id': ref('ics_account_reports.ics_account_partner_ledger')}"/>
    </record>

    <!-- Menu Item for Partner Ledger Report-->
    <menuitem
        id="menu_finance_report_partner_ledger_new"
        name="Partner Ledger"
        parent="menu_root_account_partner_reports"
        action="action_ics_account_partner_ledger"
        sequence="1"
    />

    <!-- Client Action for General Ledger Report-->
    <record id="action_ics_account_reports_general_ledger" model="ir.actions.client">
        <field name="name">General Ledger</field>
        <field name="res_model">web.report</field>
        <field name="tag">ics_report_base.web_report</field>
        <field name="context" eval="{'report_id': ref('ics_account_reports.ics_account_reports_general_ledger')}"/>
    </record>

    <!-- Menu Item for General Ledger Report-->
    <menuitem
        id="menu_finance_report_general_ledger_new"
        name="General Ledger"
        parent="ics_account_reports.menu_root_account_audit_reports"
        action="action_ics_account_reports_general_ledger"
        sequence="2"
    />

    <!-- Balance Sheet Report Settings -->
    <record id="finance_report_balance_sheet" model="account.finance.report">
        <field name="parent_menu_id" ref="ics_account_reports.menu_root_account_reports"/>
    </record>
    <!-- Menu Item -->
    <menuitem
        id="menu_finance_report_balance_sheet"
        name="Balance Sheet"
        parent="menu_root_account_reports"
        action="action_account_reports__balance_sheet"
        sequence="1"
    />
    <!-- Updating setting menu -->
    <record id="finance_report_balance_sheet" model="account.finance.report">
        <field name="menu_id" ref="ics_account_reports.menu_finance_report_balance_sheet"/>
    </record>

    <!-- Profit and Loss Report Settings -->
    <record id="finance_report_profit_and_loss" model="account.finance.report">
        <field name="parent_menu_id" ref="ics_account_reports.menu_root_account_reports"/>
    </record>
    <!-- Menu Item -->
    <menuitem
        id="menu_finance_report_profit_and_loss"
        name="Profit &amp; Loss"
        parent="menu_root_account_reports"
        action="action_account_reports__profit_and_loss"
        sequence="2"
    />
    <!-- Updating setting menu -->
    <record id="finance_report_profit_and_loss" model="account.finance.report">
        <field name="menu_id" ref="ics_account_reports.menu_finance_report_profit_and_loss"/>
    </record>

    <!-- Client Action for Trial Balance Report-->
    <record id="action_ics_account_reports_trial_balance" model="ir.actions.client">
        <field name="name">Trial Balance</field>
        <field name="res_model">web.report</field>
        <field name="tag">ics_report_base.web_report</field>
        <field name="context" eval="{'report_id': ref('ics_account_reports.ics_account_reports_general_trial_balance')}"/>
    </record>

    <!-- Menu Item -->
    <menuitem
        id="menu_finance_report_coe_report"
        name="Trial Balance"
        parent="menu_root_account_audit_reports"
        action="action_ics_account_reports_trial_balance"
    />

    <!-- Client Action -->
    <record id="action_account_reports__tax_report" model="ir.actions.client">
        <field name="name">Tax Report</field>
        <field name="tag">ics_account_reports.finance_reports</field>
        <field name="context" eval="{'model': 'account.html.tax.report'}"/>
        <field name="res_model">account.move.line</field>
    </record>

    <!-- Menu Item -->
    <menuitem
        id="menu_finance_report_tax_report"
        name="Tax Report"
        parent="menu_root_account_audit_reports"
        action="action_account_reports__tax_report"
        sequence="2"
    />

    <!-- Aged Reports -->
    <!-- Client Action for Aged Payable Report-->
    <record id="action_ics_account_reports_aged_payable" model="ir.actions.client">
        <field name="name">Aged Payable</field>
        <field name="res_model">web.report</field>
        <field name="tag">ics_report_base.web_report</field>
        <field name="context" eval="{'report_id': ref('ics_account_reports.ics_reports_aged_partner_account_report'), 'report_type': 'payable'}"/>
    </record>

    <!-- Menu Item for Aged Payable Report-->
    <menuitem
        id="menu_finance_report_aged_payable"
        name="Aged Payable"
        parent="ics_account_reports.menu_root_account_partner_reports"
        action="action_ics_account_reports_aged_payable"
        sequence="21"
    />
    <!-- Client Action for Aged Payable Report-->
    <record id="action_ics_account_reports_aged_receivable" model="ir.actions.client">
        <field name="name">Aged Receivable</field>
        <field name="res_model">web.report</field>
        <field name="tag">ics_report_base.web_report</field>
        <field name="context" eval="{'report_id': ref('ics_account_reports.ics_reports_aged_partner_account_report'), 'report_type': 'receivable'}"/>
    </record>

    <!-- Menu Item for Aged receivable Report-->
    <menuitem
        id="menu_finance_report_aged_receivable"
        name="Aged Receivable"
        parent="ics_account_reports.menu_root_account_partner_reports"
        action="action_ics_account_reports_aged_receivable"
        sequence="22"
    />

    <!-- Menu Item -->
    <menuitem
        id="menu_finance_report_balance_sheet"
        name="Balance Sheet"
        parent="menu_root_account_reports"
        action="action_account_reports__balance_sheet"
        sequence="1"
    />

    <!-- Updating setting menu -->
    <record id="finance_report_balance_sheet" model="account.finance.report">
        <field name="parent_menu_id" ref="ics_account_reports.menu_root_account_reports"/>
        <field name="menu_id" ref="ics_account_reports.menu_finance_report_balance_sheet"/>
    </record>

    <!-- Menu Item -->
    <menuitem
        id="menu_finance_report_profit_and_loss"
        name="Profit &amp; Loss"
        parent="menu_root_account_reports"
        action="action_account_reports__profit_and_loss"
        sequence="2"
    />

    <!-- Updating setting menu -->
    <record id="finance_report_profit_and_loss" model="account.finance.report">
        <field name="menu_id" ref="ics_account_reports.menu_finance_report_profit_and_loss"/>
        <field name="parent_menu_id" ref="ics_account_reports.menu_root_account_reports"/>
    </record>
</odoo>
