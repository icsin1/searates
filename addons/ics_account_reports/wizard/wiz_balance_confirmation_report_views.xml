<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="balance_confirmation_report_view_form" model="ir.ui.view">
        <field name="name">wiz.balance.confirmation.report.view.form</field>
        <field name="model">wiz.balance.confirmation.report</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="date" />
                            <field name="due_amount" readonly="1" force_save="1"/>
                        </group>
                        <group>
                            <field name="partner_id" options="{'no_create':1}"/>
                            <field name="company_id" readonly="1" force_save="1" groups="base.group_multi_company"/>
                            <field name="due_amount_other_currency" invisible="1"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="other_currency_id" invisible="1"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button type="object" string="Download" name="action_partner_balance_info" class="btn btn-primary"/>
                    <button type="special" special="cancel" string="Cancel" class="btn btn-default"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="balance_confirmation_action" model="ir.actions.act_window">
        <field name="name">Balance Confirmation Report</field>
        <field name="res_model">wiz.balance.confirmation.report</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="ics_account_reports.balance_confirmation_report_view_form"/>
        <field name="target">new</field>
    </record>

    <menuitem
        id="balance_confirmation_report_menu"
        name="Balance Confirmation Report"
        action="balance_confirmation_action"
        parent="ics_account_reports.menu_root_account_partner_reports"
        sequence="15"/>


</odoo>
