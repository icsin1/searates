<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="finance_report_email_template" model="mail.template">
        <field name="name">Finance Report: Send by Email</field>
        <field name="model_id" ref="base.model_res_users"/>
        <field name="subject">Financial Report: {{ctx.get('subject', '-')}}</field>
        <field name="email_from">{{ user.email_formatted }}</field>
        <field name="body_html" type="html">
            <div style="margin: 0px; padding: 0px;">
                <p style="margin: 0px; padding: 0px; font-size: 13px;">
                    Hello ,
                    <br/><br/>
                    Please see the attached PDF report for your reference.
                    <br/><br/>
                    <p>Thank You</p>
                    <br/>
                </p>
            </div>
        </field>
        <field name="auto_delete" eval="False"/>
    </record>
</odoo>
