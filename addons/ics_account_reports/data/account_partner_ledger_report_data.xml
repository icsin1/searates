        <record id="ics_account_partner_ledger" model="web.report">
            <field name="name">Partner Ledger</field>
            <field name="model_id" ref="account.model_account_move_line"/>
            <field name="data_match_domain" eval="[('move_id.state', '=', 'posted'), ('account_id.internal_type', 'in', ['payable', 'receivable']), ('partner_id', '!=', False)]"/>
            <field name="filter_multi_company">selector</field>
            <field name="filter_date_type">date_range</field>
            <field name="default_opening_date">this_month</field>
            <field name="date_field" ref="account.field_account_move_line__date"/>
            <field name="report_handler_model_id" ref="ics_report_base.model_mixin_report_handler"/>
            <field name="enable_report_handler_code" eval="True"/>
            <field name="is_account_report" eval="True"/>
            <field name="report_handler_python_code">
if not report_line.get('group_total') and report_line.get('group_by') == 'id':
  record_domain = report_line.get('record_domain')
  move_lines = model.search(record_domain)
  moves = move_lines.mapped('move_id')
  amount_foreign_currency = ''
  if moves.mapped('company_currency_id.name') != moves.mapped('currency_id.name'):
    amount_foreign_currency += model._format_currency(sum(move_lines.mapped('amount_currency')), currency=moves.currency_id)
  result = {
  'doc_no': ','.join(move_lines.mapped('move_id.name')),
  'journal_code': ','.join(move_lines.mapped('journal_id.code')),
  'account_code': ','.join(move_lines.mapped('account_id.code')),
  'amount_foreign_currency': amount_foreign_currency
  }
else:
  result = {'doc_no': '', 'journal_code': '', 'account_code': '', 'amount_foreign_currency': ''}
            </field>
        </record>

