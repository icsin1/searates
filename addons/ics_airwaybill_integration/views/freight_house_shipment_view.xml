<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="freight_house_shipment_eawb_form" model="ir.ui.view">
        <field name="name">freight.house.shipment.eawb.view.form</field>
        <field name="model">freight.house.shipment</field>
        <field name="inherit_id" ref="freight_management.freight_house_shipment_view_form"/>
        <field name="arch" type="xml">
        	<xpath expr="//header" position="inside">
                <field name="is_air_transport" invisible="1"/>
        		<button name="action_print" string="Print eAWB" type="object" class="oe_highlight" attrs="{'invisible': [('is_air_transport', '=', False)]}"/>
        	</xpath>
        </field>
    </record>
</odoo>