<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_my_dashboard_shipment" name="Show Dashboard Shipment" customize_show="True" inherit_id="ics_customer_portal_base.dashboard" priority="40">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">No of Service Jobs</t>
                <t t-set="classes">bg-success text-white</t>
                <t t-set="placeholder_count" t-value="'service_jobs_shipment_count'"/>
                <t t-set="url" t-value="'/dashboard/service_jobs_shipment'"/>
            </t>
        </xpath>
    </template>
    <template id="portal_web_layout_ff_shipment" inherit_id="ics_customer_portal_base.ics_customer_portal_menu">
      <xpath expr="//ul[hasclass('sidebar-menu')]" position="inside">
          <li class="nav-item">
              <a href="/dashboard/service_jobs_shipment" class="nav-link">
                <i class="fa fa-id-card"></i> Service Jobs
              </a>
          </li>
      </xpath>
  </template>
</odoo>
