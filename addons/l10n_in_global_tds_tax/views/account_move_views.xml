<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="inherit_view_account_move_form" model="ir.ui.view">
        <field name="name">account.move.view.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_cancel']" position="before">
                <button name="action_global_tds_tax_apply" string="TDS Apply" type="object" attrs="{'invisible' : ['|', '|', ('id', '=', False), ('state', '!=', 'draft'),
                    ('move_type', 'not in', ['in_invoice', 'in_refund'])]}"/>
                <button name="action_create_global_tds_tax_entry" string="TDS Entry" type="object" attrs="{'invisible' : ['|', '|', '|', ('tds_tax_id', '=', False), ('state', '!=', 'posted'),
                    ('move_type', 'not in', ['in_invoice', 'in_refund']), ('tds_tax_misc_move_id', '!=', False)]}"/>
            </xpath>
            <xpath expr="//field[@name='label']" position="after">
                <field name="tds_tax_id" invisible="1"/>
                <field name="global_tds_tax_total_amount" invisible="1"/>
                <field name="tds_tax_misc_move_id" invisible="1"/>
            </xpath>
        </field>
    </record>

</odoo>
