<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_tariff_service_wizard_form" model="ir.ui.view">
        <field name="name">tariff.service.wizard.form.inherit</field>
        <field name="model">tariff.service.wizard</field>
        <field name="inherit_id" ref="fm_tariff.view_tariff_service_wizard_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='shipment_type_id']/../.." position="after">
                <group attrs="{'invisible': ['|', ('tariff_for', '!=', 'job'), ('tariff_type', '=', 'charge_master')]}">
                    <group>
                        <field name="service_job_type_id" options="{'no_create': True, 'no_open': True}" attrs="{'required': [('tariff_for', '=', 'job')]}"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
