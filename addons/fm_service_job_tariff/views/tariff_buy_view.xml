<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="tariff_buy_view_tree" model="ir.ui.view">
        <field name="name">tariff.buy.tree</field>
        <field name="model">tariff.buy</field>
        <field name="inherit_id" ref="fm_tariff.tariff_buy_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tariff_for']" position="after">
                <field name="service_job_type_id" optional="show"/>
            </xpath>
        </field>
    </record>

    <record id="view_tariff_buy_form" model="ir.ui.view">
        <field name="name">tariff.buy.form</field>
        <field name="model">tariff.buy</field>
        <field name="inherit_id" ref="fm_tariff.tariff_buy_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='transport_mode_id']" position="attributes">
                <attribute name="attrs">{'invisible': [('tariff_for', '=', 'job')], 'required': [('tariff_for', '=', 'shipment')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='shipment_type_id']" position="attributes">
                <attribute name="attrs">{'invisible': [('tariff_for', '=', 'job')], 'required': [('tariff_for', '=', 'shipment')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='cargo_type_id']" position="attributes">
                <attribute name="attrs">{'invisible': [('tariff_for', '=', 'job')], 'required': [('tariff_for', '=', 'shipment')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='transport_mode_id']" position="before">
                <field name="service_job_type_id" options="{'no_open': True}" attrs="{'invisible': [('tariff_for', '!=', 'job')], 'required': [('tariff_for', '=', 'job')]}"/>
            </xpath>
        </field>
    </record>
</odoo>
