<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record model="ir.module.category" id="module_category_tech_support">
            <field name="name">Technical Support</field>
            <field name="sequence">60</field>
            <field name="visible" eval="0" />
        </record>

        <record id="group_freight_technical_support_team" model="res.groups">
            <field name="name">Freight Technical Support Team</field>
            <field name="category_id" ref="module_category_tech_support"/>
            <field name="users" eval="[Command.link(ref('base.user_root'))]"/>
        </record>
        <record id="group_odoo_all_menu_access" model="res.groups">
            <field name="name">System Base: All Menu Access</field>
            <field name="category_id" ref="module_category_tech_support"/>
        </record>
        <record id="group_odoo_all_menu_access" model="res.groups">
            <field name="users" eval="[Command.link(ref('base.user_root'))]"/>
        </record>

        <!-- Show user current company wise -->
        <record id="model_show_user_company_rule" model="ir.rule">
            <field name="name">Show User Company Wise</field>
            <field name="model_id" ref="base.model_res_users"/>
            <field name="domain_force">[('company_ids', 'in', [company_id])]</field>
            <field name="groups" eval="[Command.link(ref('base.group_user'))]"/>
        </record>
    </data>
</odoo>
