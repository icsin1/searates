<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_base_document_layout_inherit_view_form" model="ir.ui.view">
        <field name="name">base.document.layout.inherit.view.form</field>
        <field name="model">base.document.layout</field>
        <field name="inherit_id" ref="web.view_base_document_layout"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='report_footer']" position="after">
                <field name="print_timestamp_user_at_footer" widget="boolean_toggle"/>
            </xpath>
        </field>
    </record>
</odoo>
