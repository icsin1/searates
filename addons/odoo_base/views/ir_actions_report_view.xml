<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_act_report_xml_view_form" model="ir.ui.view">
        <field name="name">ir.actions.report.form</field>
        <field name="model">ir.actions.report</field>
        <field name="inherit_id" ref="base.act_report_xml_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='advanced']" position="inside">
                <separator string="Report Visibility-Labelling"/>
                <group>
                    <field name="visibility"/>
                </group>
                <field name="report_label_ids">
                    <tree editable="bottom">
                        <field name="sequence" widget="handle"/>
                        <field name="report_action_id" invisible="1"/>
                        <field name="visibility" required="1" placeholder="Python Condition based on Context value. e.g. default_move_type == 'in_invoice'"/>
                        <field name="name"/>
                    </tree>
                </field>
            </xpath>
        </field>
    </record>
</odoo>
