<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="external_layout_boxed" inherit_id="web.external_layout_boxed">
        <xpath expr="//span[hasclass('topage')]" position="after">
            <div t-if="company.allow_print_timestamp()" t-out="company._get_report_footer_print_log()"/>
        </xpath>
    </template>

    <template id="external_layout_bold" inherit_id="web.external_layout_bold">
        <xpath expr="//span[@t-field='company.report_footer']" position="after">
            <div t-if="company.allow_print_timestamp()" t-out="company._get_report_footer_print_log()"/>
        </xpath>
    </template>

    <template id="external_layout_standard" inherit_id="web.external_layout_standard">
        <xpath expr="//span[hasclass('topage')]" position="after">
            <div t-if="company.allow_print_timestamp()" t-out="company._get_report_footer_print_log()"/>
        </xpath>
    </template>

    <template id="external_layout_striped" inherit_id="web.external_layout_striped">
        <xpath expr="//span[hasclass('topage')]" position="after">
            <div t-if="company.allow_print_timestamp()" t-out="company._get_report_footer_print_log()"/>
        </xpath>
    </template>
    <template id="internal_layout" inherit_id="web.internal_layout">
        <xpath expr="//div[hasclass('col-3')]" position="replace">
            <div class="col-3" t-if="company.allow_print_timestamp()" t-out="company._get_report_footer_print_log()"/>
        </xpath>
    </template>
</odoo>
