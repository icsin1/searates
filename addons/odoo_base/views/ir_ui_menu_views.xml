<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ir_ui_menu_theme_view_tree" model="ir.ui.view">
        <field name="name">ir.ui.menu.theme.inherit.view.tree</field>
        <field name="model">ir.ui.menu</field>
        <field name="inherit_id" ref="base.edit_menu"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='complete_name']" position="after">
                <field name="theme_menu_access_allowed" widget="boolean_toggle"/>
            </xpath>
        </field>
    </record>
    <record id="ir_ui_menu_theme_view_form" model="ir.ui.view">
        <field name="name">ir.ui.menu.theme.inehrit.view.form</field>
        <field name="model">ir.ui.menu</field>
        <field name="inherit_id" ref="base.edit_menu_access"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='web_icon']" position="after">
                <field name="theme_menu_access_allowed" widget="boolean_toggle"/>
                <field name="theme_menu_icon" widget="oe_avatar"/>
            </xpath>
        </field>
    </record>
</odoo>
