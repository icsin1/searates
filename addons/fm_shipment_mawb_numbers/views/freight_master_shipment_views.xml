<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mawb_stock_freight_master_shipment_view_form" model="ir.ui.view">
        <field name="name">mawb.stock.freight.master.shipment.view.form</field>
        <field name="model">freight.master.shipment</field>
        <field name="inherit_id" ref="freight_management.freight_master_shipment_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='carrier_booking_details']//field[@name='carrier_booking_carrier_number']" position="before">
                <label for="mawb_stock_line_id" attrs="{'invisible': ['|', ('mode_type', '!=', 'air'), ('state', '=', 'cancelled')]}"/>
                <div class="o_row" attrs="{'invisible': ['|', ('mode_type', '!=', 'air'), ('state', 'in', ['completed', 'cancelled'])]}">
                    <field name="mawb_stock_line_id" class="oe_inline"
                            domain="[('status', '=', 'available'), ('mawb_stock_id.airline_id', '=', shipping_line_id), ('mawb_stock_id.home_airport_id', '=', origin_port_un_location_id)]"
                            options="{'no_create': 1, 'no_open': 1}"/>
                    <button name="add_mawb_stocks" string="Add MAWB Stocks" type="object" class="oe_inline oe_highlight"/>
                </div>
            </xpath>
            <xpath expr="//field[@name='carrier_booking_reference_number']" position="attributes">
                <attribute name="attrs">{'readonly': [('mawb_stock_line_id', '!=', False)]}</attribute>
                <attribute name="force_save">1</attribute>
            </xpath>
            <xpath expr="//page[@name='carrier_booking_details']/group[last()]" position="before">
                <group string="MAWB Stocks" invisible="1">
                    <group class="mb-2" attrs="{'invisible': [('state', '=', 'cancelled')]}">
                        <div>
                            <button name="fetch_mawb_stocks" string="Fetch MAWB Stocks" type="object" class="oe_highlight mr-2" />
                            <button name="add_mawb_stocks" string="Add MAWB Stocks" type="object" class="oe_highlight" />
                        </div>
                    </group>
                    <group colspan="2">
                        <field name="mawb_stock_line_ids" nolabel="1">
                            <tree editable="bottom" create="0" edit="0">
                                <field name="sequence_no" invisible="1"/>
                                <field name="mawb_number"/>
                                <field name="status" readonly="1"/>
                            </tree>
                        </field>
                    </group>
                </group>
            </xpath>
            <xpath expr="//field[@name='package_ids']/tree/field[@name='container_number']" position="attributes">
                <attribute name="attrs">{'column_invisible': [('parent.mode_type', '=', 'air')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='container_ids']/tree/field[@name='container_number']" position="attributes">
                <attribute name="attrs">{'column_invisible': [('parent.mode_type', '=', 'air')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='package_ids']/tree/field[@name='container_number']" position="before">
                <field name="mawb_stock_line_id" attrs="{'column_invisible': [('parent.mode_type', '!=', 'air')]}" />
            </xpath>
            <xpath expr="//field[@name='container_ids']/tree/field[@name='container_number']" position="before">
                <field name="mawb_stock_line_id" attrs="{'column_invisible': [('parent.mode_type', '!=', 'air')]}" />
            </xpath>
        </field>
    </record>
</odoo>
