<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_house_shipment_config" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.shipment.config</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="18"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='freight_base']" position="inside">
                <h2>MAWB Validation</h2>
                <div class="row mt16 o_settings_container" name="mawb_validation_container">
                    <div class="col-12 col-lg-6 o_setting_box" id="mawb_validation">
                        <div class="o_setting_left_pane">
                            <field name="skip_mawb_validations" />
                        </div>
                        <div class="o_setting_right_pane">
                            <div class="row">
                                <div class="col">
                                    <label for="skip_mawb_validations"/>
                                    <p class="text-muted">Skip MAWB validation on master shipment</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
