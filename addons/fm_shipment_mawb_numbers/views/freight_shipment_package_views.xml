<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="mawb_stock_view_freight_master_shipment_package_form" model="ir.ui.view">
        <field name="name">mawb.stcok.freight.master.shipment.package.form</field>
        <field name="model">freight.master.shipment.package</field>
        <field name="inherit_id" ref="freight_management.view_freight_master_shipment_package_form" />
        <field name="arch" type="xml">
            <xpath expr="//group//group[last()]" position="inside">
                <field name="mode_type" invisible="1" />
            </xpath>
            <xpath expr="//field[@name='container_number']" position="attributes">
                <attribute name="attrs">{'invisible': [('mode_type', '=', 'air')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='container_number']" position="before">
                <field name="mawb_stock_line_id" readonly="1" force_save="1" attrs="{'invisible': [('mode_type', '!=', 'air')]}"
                       options="{'no_create': True, 'no_open': True}"/>
            </xpath>
        </field>
    </record>

    <record id="mawb_stock_view_freight_house_shipment_package_form" model="ir.ui.view">
        <field name="name">mawb.stcok.freight.house.shipment.package.form</field>
        <field name="model">freight.house.shipment.package</field>
        <field name="inherit_id" ref="freight_management.view_freight_house_shipment_package_form" />
        <field name="arch" type="xml">
            <xpath expr="//group//group[last()]" position="inside">
                <field name="mode_type" invisible="1" />
                <field name="available_mawb_stock_line_ids" invisible="1" />
            </xpath>
            <xpath expr="//field[@name='container_number']" position="attributes">
                <attribute name="attrs">{'invisible': [('mode_type', '=', 'air')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='container_number']" position="before">
                <field name="mawb_stock_line_id" attrs="{'invisible': [('mode_type', '!=', 'air')]}"
                       options="{'no_create': True, 'no_open': True}" domain="[('id', 'in', available_mawb_stock_line_ids)]" readonly="1" force_save="1"/>
            </xpath>
        </field>
    </record>

</odoo>
