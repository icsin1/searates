<odoo>
    <data noupdate="1">
        <record id="email_template_charges_send_by_email" model="mail.template">
            <field name="name">Job Cost Sheet: Send by email</field>
            <field name="model_id" ref="freight_management.model_freight_house_shipment"/>
            <field name="subject">{{ object.company_id.name }}</field>
            <field name="email_from">{{user.email_formatted}}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Hello,
                        <br/><br/>
                        Your Job cost sheet details are attachedhere for Your Reference.
                        <br/><br/>
                        Do not hesitate to contact us if you have any questions.
                        <br/>
                    </p>
                </div>
            </field>
            <field name="report_name">{{ (object.name or '').replace('/','_') }}</field>
            <field name="report_template" ref="fm_jobcost_sheet.action_report_job_cost_sheet"/>
            <field name="auto_delete" eval="False"/>
        </record>
    </data>
</odoo>
