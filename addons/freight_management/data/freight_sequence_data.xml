<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="1">

        <record id="freight_master_shipment_auto_sequence" model="freight.sequence">
            <field name="name">Master Shipment</field>
            <field name="ir_model_id" ref="freight_management.model_freight_master_shipment"/>
            <field name="ir_field_id" ref="freight_management.field_freight_master_shipment__name"/>
            <field name="ir_sequence_id" ref="freight_management.sequence_master_freight_shipment"/>
            <field name="sequence_format">{{object.transport_mode_id.code}}-{{ object.shipment_type_id.code[0] }}-{{object.cargo_type_id.code}}-M</field>
            <field name="number_increment">1</field>
            <field name="padding">5</field>
            <field name="company_id" ref="base.main_company"/>
        </record>

        <record id="freight_house_shipment_auto_sequence" model="freight.sequence">
            <field name="name">House Shipment</field>
            <field name="ir_model_id" ref="freight_management.model_freight_house_shipment"/>
            <field name="ir_field_id" ref="freight_management.field_freight_house_shipment__booking_nomination_no"/>
            <field name="ir_sequence_id" ref="freight_management.sequence_house_freight_shipment"/>
            <field name="sequence_format">{{object.transport_mode_id.code}}-{{object.shipment_type_id.code[0]}}-{{object.cargo_type_id.code}}-H-{{'N' if object.hbl_number_type == 'nomination_no' else 'F'}}</field>
            <field name="number_increment">1</field>
            <field name="padding">5</field>
            <field name="company_id" ref="base.main_company"/>
        </record>

    </data>

</odoo>
