<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="freight_master_package_commodity_view_tree" model="ir.ui.view">
        <field name="name">freight.master.package.commodity.view.tree</field>
        <field name="model">freight.master.package.commodity</field>
        <field name="arch" type="xml">
            <tree>
                <field name="commodity_id" />
                <field name="pieces" />
                <field name="pack_uom_id" />
                <field name="gross_weight" />
                <field name="weight_uom_id"/>
                <field name="volume" />
                <field name="volume_uom_id"/>
                <field name="shipping_bill_no" />
                <field name="customer_order_no" />
                <field name="shipper_ref_number" />
            </tree>
        </field>
    </record>
    <record id="freight_master_package_commodity_view_form" model="ir.ui.view">
        <field name="name">freight.master.package.commodity.view.form</field>
        <field name="model">freight.master.package.commodity</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <label for="commodity_id"/>
                    <div class="oe_title">
                        <h1><field name="commodity_id" placeholder="Commodity Item" /></h1>
                    </div>
                    <group>
                        <group>
                            <label for="length" string="Dimentions (L-W-H)"/>
                            <div class="o_row">
                                <field name="length" />x
                                <field name="width" />x
                                <field name="height" />
                                <field name="dimension_uom_id" options="{'no_create': True}"/>
                            </div>
                            <label for="pieces"/>
                            <div class="o_row">
                                <field name="pieces" /><field name="pack_uom_id" options="{'no_create': 1, 'no_open': 1}"/>
                            </div>
                            <label for="gross_weight"/>
                            <div class="o_row">
                                <field name="gross_weight" /><field name="weight_uom_id" options="{'no_create': 1, 'no_open': 1}"/>
                            </div>
                            <label for="volume"/>
                            <div class="o_row">
                                <field name="volume" /><field name="volume_uom_id" options="{'no_create': 1, 'no_open': 1}"/>
                            </div>
                            <label for="volumetric_weight"/>
                            <div class="o_row">
                                <field name="volumetric_weight" /><field name="volumetric_weight_uom_id" options="{'no_create': 1, 'no_open': 1}"/>
                            </div>
                        </group>
                        <group>
                            <field name="transport_mode_id" invisible="1"/>
                            <field name="mode_type" invisible="1"/>
                            <label for="chargeable_weight"/>
                            <div class="o_row">
                                <field name="chargeable_weight" force_save="1" readonly="1"/>
                                <field name="chargeable_uom_id" class="oe_inline" options="{'no_open': True, 'no_create': True}"/>
                            </div>
                            <field name="is_hazardous" widget="boolean_toggle" attrs="{'invisible': [('mode_type', '=', 'air')]}"/>
                            <field name="haz_class_id" attrs="{'invisible': [('is_hazardous', '=', False)], 'required': [('is_hazardous', '=', True)]}" options="{'no_create': 1, 'no_open': 1}"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <label for="shipping_bill_no" string="Shipping Info"/>
                            <div class="o_row">
                                <field name="shipping_bill_no" placeholder="Bill No"/>
                                <field name="shipping_bill_date" placeholder="Bill Date" />
                            </div>
                            <field name="shipper_ref_number" />
                        </group>
                        <group>
                            <label for="customer_order_no" string="Customer Order"/>
                            <div class="o_row">
                                <field name="customer_order_no" placeholder="Order No"/>
                                <field name="order_received_date" placeholder="Order Date"/>
                            </div>
                        </group>
                    </group>
                    <notebook>
                        <page name="remarks" string="Remarks">
                            <field name="remarks" />
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button type="object" string="Save" name="action_commodity_save" class="btn btn-primary"/>
                    <button type="special" special="cancel" string="Discard" class="btn btn-default"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
