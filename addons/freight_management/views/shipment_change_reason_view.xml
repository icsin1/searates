<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_shipment_change_reason_tree" model="ir.ui.view">
        <field name="name">shipment.change.reason.tree</field>
        <field name="model">shipment.change.reason</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Shipment Change Reason" editable="top" delete="false">
                <field name="name"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="act_open_shipment_change_reason_view">
        <field name="name">Shipment Change Reason</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">shipment.change.reason</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <menuitem id="menu_shipment_change_reason"
        parent="freight_base.root_freight_admin_manage_menu"
        sequence="20"
        action="act_open_shipment_change_reason_view"/>
</odoo>
