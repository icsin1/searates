<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="freight_shipment_house_action" model="ir.actions.act_window">
        <field name="name">House Shipment</field>
        <field name="res_model">freight.house.shipment</field>
        <field name="view_mode">kanban,calendar,tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{
            'control_panel_class': 'house', 'search_default_open_house': True,
            'show_house_shipment': True}
        </field>
    </record>

    <record id="freight_shipment_master_action" model="ir.actions.act_window">
        <field name="name">Master Shipment</field>
        <field name="res_model">freight.master.shipment</field>
        <field name="view_mode">kanban,calendar,tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{
            'control_panel_class': 'master',
            'search_default_open_master': True,
            'show_master_shipment': True}
        </field>
    </record>

    <menuitem
        id="freight_shipment_house_menu"
        name="House Shipment"
        action="freight_shipment_house_action"
        parent="freight_base.root_freight_operations"
        sequence="2"/>

    <menuitem
        id="freight_shipment_master_menu"
        name="Master Shipment (Consol)"
        action="freight_shipment_master_action"
        parent="freight_base.root_freight_operations"
        sequence="2"/>
</odoo>
