<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="wizard_master_shipment_status_form_view" model="ir.ui.view">
        <field name="name">wizard.master.shipment.status.form</field>
        <field name="model">wizard.master.shipment.status</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="allow_status_change" invisible="1"/>
                    <field name="shipment_id" invisible="1"/>
                    <field name="mode_type" invisible="1"/>
                    <field name="state" attrs="{'invisible': [('mode_type', '!=', 'sea')], 'required': [('mode_type', '=', 'sea')]}"/>
                    <field name="air_state" string="State" attrs="{'invisible': [('mode_type', '!=', 'air')], 'required': [('mode_type', '=', 'air')]}"/>
                    <field name="change_reason_id" attrs="{'invisible' : [('state', 'not in', ['cancelled'])], 'required': [('state', 'in', ['cancelled'])]}" options="{'no_create': True, 'no_open': True}"/>
                    <field name="remark" attrs="{'invisible' : [('state', 'not in', ['cancelled'])], 'required': [('change_reason_id', '==', %(freight_management.shipment_state_change_reason_other)d)]}"/>
                    <field name="reason" attrs="{'invisible': ['|', ('allow_status_change', '=', False), ('state', 'not in', ['completed'])], 'required': [('allow_status_change', '=', True), ('state', '=', 'completed')]}"/>
                </group>
                <footer>
                    <button type="object" string="Confirm" name="action_change_status" class="btn btn-primary"/>
                    <button type="special" special="cancel" string="Cancel" class="btn btn-default"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="wizard_master_shipment_status_action">
        <field name="name">Master Shipment Change Status</field>
        <field name="res_model">wizard.master.shipment.status</field>
        <field name="view_mode">form</field>
    </record>

</odoo>
