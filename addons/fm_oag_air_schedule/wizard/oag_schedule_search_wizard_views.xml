<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_oag_schedule_search_wizard_form" model="ir.ui.view">
        <field name="name">oag.schedule.search.wizard.form</field>
        <field name="model">oag.schedule.search.wizard</field>
        <field name="arch" type="xml">
            <form>
                <field name="transport_mode_id" invisible="1"/>
                <field name="source" invisible="1"/>
                <div class="row">
                    <div class="col-3">
                        <label for="aircraft_type" string="Aircraft Type"/>
                        <field nolabel="1" name="aircraft_type" required="1"/>
                    </div>					
                    <div class="col-3">
                        <label for="origin_port_id"/>
                        <field nolabel="1" name="origin_port_id" options="{'no_open': 1, 'no_create': True}"/>
                    </div>
                    <div class="col-3">
                        <label for="destination_port_id"/>
                        <field nolabel="1" name="destination_port_id" options="{'no_open': 1, 'no_create': True}"/>
                    </div>
                    <div class="col-3">
                        <label for="search_date_mode"/>
                        <field name="search_date_mode" />
                    </div>
                    <div class="col-3">
                        <label for="date" string="Date" class="d-block"/>
                        <field name="date" />
                    </div>
                </div>
                <separator string="Schedules" attrs="{'invisible': [('schedule_ids', '=', [])]}"/>
                <label for="import_all_schedule" attrs="{'invisible': [('schedule_ids', '=', [])]}"/>
                <field name="import_all_schedule" widget="boolean_toggle" attrs="{'invisible': [('schedule_ids', '=', [])]}"/>
                <field name="schedule_ids" attrs="{'invisible': [('schedule_ids', '=', [])]}">
                    <tree limit="10" create="0" editable="bottom">
                        <field name="import_schedule" string="#" widget="boolean_toggle" attrs="{'column_invisible': [('parent.import_all_schedule', '=', True)]}"/>
                        <field name="flight_number" readonly="1" force_save="1"/>
                        <field name="flight_status" readonly="1" force_save="1" optional="hide"/>
                        <field name="iata_code" readonly="1" force_save="1"/>
                        <field name="aircraft_type" readonly="1" force_save="1"/>
                        <field name="origin_terminal" optional="hide" readonly="1" force_save="1"/>
                        <field name="destination_terminal"  optional="hide" readonly="1" force_save="1"/>
                        <field name="departure_datetime" readonly="1" force_save="1" />
                        <field name="arrival_datetime" readonly="1" force_save="1" />
                        <field name="terminal_cutoff" readonly="1" force_save="1" invisible="1"/>
                    </tree>
                </field>
                <footer>
					<button type="object" string="Search" name="action_search_air_schedules" class="btn-primary"/>
                    <button type="object" string="Import Schedules" name="action_import_schedules" class="btn-primary" attrs="{'invisible': [('schedule_ids', '=', [])]}"/>
                    <button type="special" special="cancel" string="Cancel" class="btn-default"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
