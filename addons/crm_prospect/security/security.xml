<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="crm_prospect_company_rule" model="ir.rule">
            <field name="name">CRM Prospect Multi-Company</field>
            <field name="model_id" ref="crm_prospect.model_crm_prospect"/>
            <field name="domain_force">['|',('company_id','=',False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record model="ir.rule" id="crm_prospect_salesman_rule">
            <field name="name">crm_prospect: Salesman Access</field>
            <field name="model_id" ref="crm_prospect.model_crm_prospect"/>
            <field name="domain_force">	[('create_uid','=', user.id)]</field>
            <field name="groups" eval="[(4, ref('fm_sale_crm.group_salesman'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="active" eval="True"/>
        </record>

        <record model="ir.rule" id="crm_prospect_target_admin_rule">
            <field name="name">crm_prospect: Admin Access</field>
            <field name="model_id" ref="crm_prospect.model_crm_prospect"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('fm_sale_crm.group_sales_administrator'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>
