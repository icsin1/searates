<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_move_inherited_form" model="ir.ui.view">
        <field name="name">account.move.inherited.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree//field[@name='product_id']" position="before">
                <field name="service_job_id" options="{'no_create':1}"
                    attrs="{'column_invisible': ['|', ('parent.from_shipment_charge', '=', False), ('parent.add_charges_from', '!=', 'job')]}"/>
            </xpath>
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button name="action_open_service_job" type="object"
                    class="oe_stat_button" icon="fa-truck" attrs="{'invisible': [('service_job_ids', '=', [])]}">
                    <field name="service_job_ids" invisible="1"/>
                    <span class="o_stat_text">Service Job</span>
                </button>
            </xpath>
            <xpath expr="//group[@id='header_left_group']" position="inside">
                <field name="allowed_service_job_ids" widget="many2many_tags" invisible="1"/>
                <label for="charge_service_job_ids" attrs="{'invisible': ['|', ('move_type', 'not in', ['in_invoice', 'out_invoice']), ('add_charges_from', '!=', 'job')]}"/>
                <div class="o_row" name="service_jobs" attrs="{'invisible': ['|', ('move_type', 'not in', ['in_invoice', 'out_invoice']), ('add_charges_from', '!=', 'job')]}">
                    <field name="charge_service_job_ids" domain="[('id', 'in', allowed_service_job_ids)]"
                           widget="many2many_tags" attrs="{'readonly': [('payment_state', 'in', ['paid', 'partial'])]}" options="{'no_create': True}"/>
                    <button name="add_charges_from_house_shipment" id="job_charge_update_button" type="object" string="Add/Update Charges"
                            class="oe_highlight oe_edit_only"
                            attrs="{'invisible': ['|', ('charge_service_job_ids', '=', False), ('payment_state', 'in', ['paid', 'partial'])]}"/>
                </div>
            </xpath>
        </field>
    </record>

    <record id="inherit_view_invoice_tree" model="ir.ui.view">
        <field name="name">account.move.tree.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <field name="invoice_date" position="after">
                <field name="service_job_ids" widget="many2many_tags"/>
            </field>
        </field>
    </record>

</odoo>
