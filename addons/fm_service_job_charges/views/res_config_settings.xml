<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_proforma_service_job_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.proforma.service.job.option.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="50"/>
        <field name="inherit_id" ref="freight_base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='freight_base']" position="inside">
                <h2>Pro Forma - Service Job</h2>
                <div class="row mt16 o_settings_container" name="fm_service_job_proforma_settings">
                    <div class="col-12 col-lg-12 o_setting_box" id="fm_service_job_proforma_option">
                        <div class="o_setting_left_pane">
                            <field name="module_fm_service_job_proforma" />
                        </div>
                        <div class="o_setting_right_pane">
                            <div class="row">
                                <div class="col">
                                    <p>Enable for Pro Forma Invoice from Service Job Charges</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>