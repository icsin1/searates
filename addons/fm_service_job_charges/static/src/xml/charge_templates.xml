<?xml version="1.0" encoding="utf-8"?>
<templates>
    <t t-extend="ListView.buttons" t-name="ServiceJobCharges.buttons">
        <t t-jquery="button.o_list_button_add" t-operation="after">
            <div class="btn-group dropdown charges_download_upload">
                <button type="button" class="o-no-caret fa fa-2x btn btn-primary dropdown-toggle" data-toggle="dropdown">
                    <i class="fa fa-ellipsis-v"/>
                </button>
                <div class="dropdown-menu o_filter_menu" role="menu">
                    <a role="menuitem" data-action="action_charges_download" data-pycontext="{'excel_type': 'download'}" class="ics_charge_button dropdown-item o_button_charges_download_excel" title="Download Charges">Download Charges (Excel)</a>
                    <a role="menuitem" data-action="action_charges_upload" data-pycontext="{'excel_type': 'upload'}" class="ics_charge_button dropdown-item o_button_charges_upload_excel" title="Upload Charges">Upload Charges (Excel)</a>
                </div>
            </div>
        </t>
    </t>
</templates>
