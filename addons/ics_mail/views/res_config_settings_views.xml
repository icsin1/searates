<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sale</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="15"/>
        <field name="inherit_id" ref="mail.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='activities_setting']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="ics_mail_settings">
                    <div class="o_setting_left_pane">
                    </div>
                    <div class="o_setting_right_pane">
                        <div class="row">
                            <div class="col">
                                <h3>Outgoing Email Grouping Settings</h3>
                                <p>Group outgoing email by Audience</p>
                            </div>
                        </div>
                        <group>
                            <field name="ics_outgoing_email_mode" widget="radio" options="{'horizontal': True}" nolabel="1"/>
                        </group>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
