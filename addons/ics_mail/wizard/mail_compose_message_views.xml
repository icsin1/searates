<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mail_compose_message_email_cc_view_form" model="ir.ui.view">
        <field name="name">mail.compose.message.email_cc.view.form</field>
        <field name="model">mail.compose.message</field>
        <field name="inherit_id" ref="mail.email_compose_message_wizard_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='subject']" position="before">
                <field name="email_cc" placeholder="emails with separated by comma" attrs="{'invisible': [('is_log', '=', True)]}"/>
            </xpath>
        </field>
    </record>

</odoo>
