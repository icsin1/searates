<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_freight_measurement_basis_tree" model="ir.ui.view">
        <field name="name">freight.measurement.basis.tree</field>
        <field name="model">freight.measurement.basis</field>
        <field name="inherit_id" ref="freight_base.freight_measurement_basis_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='package_group']" position="after">
                <field name="is_job_measurement" widget="boolean_toggle" optional="show"/>
            </xpath>
        </field>
    </record>

    <record id="view_freight_measurement_basis_form" model="ir.ui.view">
        <field name="name">freight.measurement.basis.form</field>
        <field name="model">freight.measurement.basis</field>
        <field name="inherit_id" ref="freight_base.freight_measurement_basis_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='active']" position="after">
                <field name="is_job_measurement" widget="boolean_toggle"/>
            </xpath>
        </field>
    </record>
</odoo>
