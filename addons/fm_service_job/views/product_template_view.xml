<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_product_template_form" model="ir.ui.view">
        <field name="name">product.template.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="freight_base.product_template_freight_form_view_inherited"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='measurement_basis_id']" position="attributes">
                <attribute name="domain">[('is_job_measurement', '=', is_service_job_categ)]</attribute>
            </xpath>
            <xpath expr="//field[@name='measurement_basis_id']" position="after">
                <field name="is_service_job_categ" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>
