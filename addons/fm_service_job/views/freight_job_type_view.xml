<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_freight_job_type_tree" model="ir.ui.view">
        <field name="name">freight.job.type.tree</field>
        <field name="model">freight.job.type</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_freight_job_type_search" model="ir.ui.view">
        <field name="name">freight.job.type.search</field>
        <field name="model">freight.job.type</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="act_open_freight_job_type_view">
        <field name="name">Service Job Type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">freight.job.type</field>
        <field name="view_mode">tree</field>
        <field name="search_view_id" ref="view_freight_job_type_search"/>
        <field name="context">{}</field>
    </record>

    <menuitem id="menu_freight_job_type"
        parent="freight_base.root_freight_admin_manage_menu"
        sequence="20"
        action="act_open_freight_job_type_view"/>
</odoo>
