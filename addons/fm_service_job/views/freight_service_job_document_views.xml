<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_freight_service_job_document_form" model="ir.ui.view">
        <field name="name">freight.service.job.document.form</field>
        <field name="model">freight.service.job.document</field>
        <field name="arch" type="xml">
            <form string="Service Job Document">
                <sheet>
                    <label for="name"/>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Description"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="service_job_id"/>
                            <field name="datetime"/>
                        </group>
                        <group>
                            <field name="document_type_id" domain="[('model_id.model', '=', 'freight.service.job'), ('document_mode', '=', 'in')]"/>
                            <field name="document_file" filename="document_file_name"/>
                            <field name="document_file_name" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_freight_service_job_doc_tree" model="ir.ui.view">
        <field name="name">freight.service.job.document</field>
        <field name="model">freight.service.job.document</field>
        <field name="arch" type="xml">
           <tree editable="bottom" delete="0">
                <field name="name"/>
                <field name="service_job_id" invisible="1"/>
                <field name="datetime"/>
                <field name="document_type_id" attrs="{'readonly': [('document_mode', '=', 'out')]}" options="{'no_create': True}" domain="[('model_id.model', '=', 'freight.service.job'), ('document_mode', '=', 'in')]"/>
                <field name='document_mode' groups="base.group_no_one"/>
                <field name="document_file_name" invisible="1"/>
                <field name="document_file" filename="document_file_name" string="Upload" widget="binary" attrs="{'invisible': [('document_mode', '=', 'out')]}"/>
                <field name="report_action_id" string=" " widget="web_preview" options="{'res_id': 'service_job_id', 'document_type': 'document_type_id', 'class': 'fa fa-eye btn-sm o_list_button pull-right', 'nolable': True, 'no_header': True}" attrs="{'invisible': [('report_action_id', '=', False)]}"/>
                <button name="action_send_by_email" title="Send" class="btn btn-primary fa fa-envelope mr-2" type="object"/>
                <button name="action_download_report" title="Download Document" class="btn btn-primary btn-icon fa fa-download" type="object" attrs="{'invisible': [('document_mode', '=', 'in')]}"/>
                <button name="action_doc_version_history" title="Document History" class="btn btn-secondary btn-icon btn-sm fa fa-history" type="object" attrs="{'invisible': [('document_mode', '=', 'out')]}"/>
            </tree>
        </field>
    </record>

    <record id="freight_service_job_document_view_search" model="ir.ui.view">
        <field name="name">freight.service.job.document.view.search</field>
        <field name="model">freight.service.job.document</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="document_type_id" />
                <filter name="group_by_mode" string="Mode" context="{'group_by': 'document_mode'}" />
            </search>
        </field>
    </record>
</odoo>
