<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_wizard_service_job_status_form" model="ir.ui.view">
        <field name="name">wizard.service.job.status.form</field>
        <field name="model">wizard.service.job.status</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="service_job_id" invisible="1"/>
                    <field name="state" required="1"/>
                    <field name="change_reason_id" attrs="{'invisible' : [('state', 'not in', ['cancelled'])], 'required': [('state', 'in', ['cancelled'])]}" options="{'no_create': True, 'no_open': True}"/>
                    <field name="remark" attrs="{'invisible' : [('state', 'not in', ['cancelled','created'])], 'required': ['|', ('state', '=', 'created'), 
                        ('change_reason_id', '==', %(freight_management.shipment_state_change_reason_other)d)]}"/>
                </group>
                <footer>
                    <button type="object" string="Confirm" name="action_change_status" class="btn btn-primary"/>
                    <button type="special" special="cancel" string="Cancel" class="btn btn-default"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="wizard_service_job_status_wizard_action">
        <field name="name">Service Job Change Status</field>
        <field name="res_model">wizard.service.job.status</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>

</odoo>
