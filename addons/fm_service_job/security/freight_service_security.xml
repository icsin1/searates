<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_category_service_job" model="ir.module.category">
        <field name="name">Service Job</field>
        <field name="description">Helps you handle your Service Job .</field>
        <field name="sequence">1</field>
    </record>

    <record id="group_super_admin" model="res.groups">
        <field name="name">Super Admin</field>
        <field name="comment">The user will have super admin access.</field>
        <field name="category_id" ref="module_category_service_job"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <data noupdate="1">
        <record id="model_freight_service_job_company_rule" model="ir.rule">
            <field name="name">Service Job Multi-Company</field>
            <field name="model_id" ref="fm_service_job.model_freight_service_job"/>
            <field name="domain_force">['|',('company_id','=',False), ('company_id', 'in', company_ids)]</field>
        </record>
        <record model="ir.rule" id="freight_service_job_admin_rule">
            <field name="name">freight_service_job: Admin Access</field>
            <field name="model_id" ref="fm_service_job.model_freight_service_job"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system')), (4, ref('freight_base.group_operation_manager')),
             (4, ref('freight_base.group_operation_administrator'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
        </record>

        <record model="ir.rule" id="freight_service_job_associate_rule">
            <field name="name">freight_service_job: Associate Access</field>
            <field name="model_id" ref="fm_service_job.model_freight_service_job"/>
            <field name="domain_force">	[('user_id','=', user.id)]</field>
            <field name="groups" eval="[(4, ref('freight_base.group_operation_associate'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
        </record>
    </data>

</odoo>
