<?xml version="1.0" encoding="UTF-8"?>

<templates>

    <t t-extend="FormView.buttons">
        <t t-jquery="button.o_form_button_create" t-operation="attributes">
            <attribute name="class">d-none</attribute>
        </t>
    </t>
    <t t-name="odoo_web.dashboard.buttons">
        <div class="o_list_buttons">
            <button class="btn btn-primary btn-icon fa fa-refresh"/>
            <button class="btn btn-secondary btn-icon fa fa-download" t-if="widget.getExportFields().length"/>
        </div>
    </t>
    <t t-name="odoo_web.dashboard">
        <div class="o_action o_view_controller main_component"/>
    </t>

    <t t-extend="ImportView">
        <t t-jquery="div.o_nocontent_help a[href='https://www.odoo.com/documentation/15.0/applications/general/export_import_data.html']" t-operation="attributes">
            <attribute name="class">d-none</attribute>
        </t>
        <t t-jquery="div[class='mt16 mb4']" t-operation="attributes">
            <attribute name="class">d-none</attribute>
        </t>
    </t>

    <t t-name="leavePageConfirmation">
        <div>
            <h2>Are you sure you want to leave this page?</h2> <br/>
            <span>Hey there! It looks like you're in the middle of writing something, and you haven't saved all of your content.</span>
            <span>Save before you go!</span>
        </div>
    </t>

    </templates>
