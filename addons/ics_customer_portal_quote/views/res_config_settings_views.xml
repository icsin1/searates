<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_inherit_quote_config" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.quote.config</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="freight_base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='fm_account_expense_entry']" position="after">
                <h2>Portal Quotes</h2>
                <div class="row mt16 o_settings_container" name="quote_approver_setting">
                    <div class="col-12 col-lg-6 o_setting_box" id="default_quote_approver_setting">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="quote_approver_id"/>
                            <div class="text-muted">
                                <field name="quote_approver_id"  options="{'no_create': True, 'no_create_edit': True}"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" id="weight_setting">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="quote_sale_agent_id"/>
                            <div class="text-muted">
                                <field name="quote_sale_agent_id"  options="{'no_create': True, 'no_create_edit': True}"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>

        </field>
    </record>

</odoo>
