<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_move_form_inherit_asset" model="ir.ui.view">
        <field name="name">account.move.form.inherit.asset</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button class="oe_stat_button" name="action_open_deferred_assets" type="object" icon="fa-list" attrs="{'invisible': [('account_asset_ids', '=', [])]}">
                    <field name="display_name_deferred_asset" />
                </button>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page name="account_assets" string="Deferred Assets" invisible="1">
                    <field name="account_asset_ids"/>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
