<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_account_form_wizard" model="ir.ui.view">
        <field name="name">account.account.form.wizard</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='accounting']//group/field[@name='company_id']" position="after">
                <field name="can_create_asset" invisible="0"/>
                <field name="asset_type" invisible="0"/>
            </xpath>
            <xpath expr="//page[@name='accounting']" position="after">
                <page name="automation" string="Automation" attrs="{'invisible': [('can_create_asset', '=', False)]}">
                    <group>
                        <group name="deferred_options" string="Deferred Options">
                            <td class="o_td_label">
                                <label for="create_asset" string="Automate Deferred Expense" attrs="{'invisible': [('asset_type', '=', 'sale')]}"/>
                                <label for="create_asset" string="Automate Deferred Revenue" attrs="{'invisible': [('asset_type', '=', 'expense')]}"/>
                            </td>
                            <field name="create_asset" nolabel="1" widget="radio"/>
                            <field name="asset_model_id" domain="[('state', '=', 'model'), ('asset_type', '=', asset_type)]"
                                   context="{'default_state': 'model', 'default_asset_type': asset_type}" string="Deferred Model"
                                   attrs="{'invisible': [('create_asset', '=', 'no')], 'required': [('create_asset', '=', 'validate')]}"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
