<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_asset_view_tree" model="ir.ui.view">
        <field name="name">account.asset.view.tree</field>
        <field name="model">account.asset</field>
        <field name="arch" type="xml">
            <tree string="Deferred Revenue">
                <field name="name"/>
                <field name="recognition_interval" invisible="1"/>
                <field name="interval_period" invisible="1"/>
                <field name="first_recognition_date"/>
                <field name="residual_amount"/>
                <field name="currency_id"/>
                <field name="state"/>
                <field name="account_depreciation_id" invisible="1"/>
                <field name="account_depreciation_expense_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="account_asset_view_form" model="ir.ui.view">
        <field name="name">account.asset.view.form</field>
        <field name="model">account.asset</field>
        <field name="arch" type="xml">
            <form string="Deferred Revenue">
                <header>
                    <button string="Confirm" states="draft" class="oe_highlight" name="button_confirm" type="object"/>
                    <button string="Compute" states="draft" class="oe_highlight" name="button_compute_depreciation_board" type="object"/>
                    <button string="Set to Draft" class="oe_highlight" name="button_set_to_draft" type="object" groups="account.group_account_manager" attrs="{'invisible': ['|', ('state', '!=', 'running'), ('depreciated_entry_count', '!=', 0)]}"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,running" attrs="{'invisible': [('state', '=', 'model')]}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="action_open_journal_entries" type="object" context="{'move_type': 'entry'}" icon="fa-list"
                                attrs="{'invisible': [('state', '=', 'model')]}">
                            <field name="depreciated_entry_count" string="Posted Entries" widget="statinfo" icon="fa-list"/>
                            <field name="total_depreciation_entry_count" invisible="1"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" name="name_label" attrs="{'invisible': ['|', ('asset_type', '=', 'expense'), ('state', '=', 'model')]}" string="Deferred Revenue Name"/>
                        <label for="name" name="name_label" attrs="{'invisible': ['|', ('asset_type', '=', 'sale'),('state', '=', 'model')]}" string="Deferred Expense Name"/>
                        <h1>
                            <field name="name" attrs="{'readonly': [('state', 'not in', ['draft', 'model'])]}"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Asset Values" name="asset_values" attrs="{'invisible': [('state', '=', 'model')]}">
                            <field name="original_value" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="acquisition_date" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                        <group string="Current Values" name="current_values" attrs="{'invisible': [('state', '=', 'model')]}">
                            <field name="residual_amount" force_save="1"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group string="Depreciation Method" name="depreciation_method">
                            <field name="active" invisible="1"/>
                            <field name="asset_type" invisible="1"/>
                            <label for="recognition_interval"/>
                            <div class="o_row">
                                <field name="recognition_interval" attrs="{'readonly': [('state', 'not in', ['draft', 'model'])]}"/>
                                <field name="interval_period" nolabel="1" attrs="{'readonly': [('state', 'not in', ['draft', 'model'])]}"/>
                            </div>
                            <label for="prorata"/>
                            <div name="prorata" class="o_row">
                                <field name="prorata"/>
                                <label class="col-12 col-sm-auto" for="prorata_date" attrs="{'invisible': ['|', ('prorata', '=', False), ('state', '=', 'model')]}"/>
                                <field name="prorata_date"
                                       attrs="{'required': [('prorata', '=', True)], 'invisible': ['|', ('prorata', '=', False), ('state', '=', 'model')], 'readonly': [('state', 'not in', ['draft'])]}"/>
                            </div>
                            <field name="first_recognition_date" attrs="{'invisible': [('state', '=', 'model')], 'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="user_type_id" invisible="1"/>
                            <field name="expense_user_type_id" invisible="1"/>
                        </group>
                        <group string="Accounting" name="accounting">
                            <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="account_depreciation_id"
                                   attrs="{'readonly': [('state', 'not in', ['draft', 'model'])]}"
                                   context="{'default_user_type_id': user_type_id}"
                            />
                            <field name="account_depreciation_expense_id"
                                   attrs="{'readonly': [('state', 'not in', ['draft', 'model'])]}"
                                   context="{'default_user_type_id': expense_user_type_id}"
                            />
                            <field name="journal_id" attrs="{'readonly': [('state', 'not in', ['draft', 'model'])]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="depreciation_lines" string="Depreciation Lines" attrs="{'invisible' : [('total_depreciation_entry_count', '=', 0)]}">
                            <field name="depreciation_move_ids" attrs="{'readonly': [('state', 'not in', ['draft', 'model'])]}">
                                <tree editable="bottom" default_order="id asc" decoration-info="state == 'draft'" create="0" delete="0">
                                    <field name="ref"/>
                                    <field name="state" invisible="1"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="date" string="Expense Date"/>
                                    <field name="amount_total" string="Expense"/>
                                    <field name="asset_deprecated_value"/>
                                    <field name="asset_remaining_value"/>
                                    <field name="name" string="Journal Entry" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="deferred_revenue_expenses_action" model="ir.actions.act_window">
        <field name="name">Deferred Revenue</field>
        <field name="res_model">account.asset</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('asset_type', '=', 'sale'), ('state', '!=', 'model')]</field>
        <field name="context">{'default_asset_type': 'sale'}</field>
    </record>

    <record id="deferred_expenses_action" model="ir.actions.act_window">
        <field name="name">Deferred Expenses</field>
        <field name="res_model">account.asset</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('asset_type', '=', 'expense'), ('state', '!=', 'model')]</field>
        <field name="context">{'default_asset_type': 'expense'}</field>
    </record>

    <menuitem
            id="deferred_expenses_menu"
            name="Deferred Expenses"
            action="deferred_expenses_action"
            parent="account.menu_finance_entries_management"/>

    <menuitem
            id="deferred_revenue_menu"
            name="Deferred Revenue"
            action="deferred_revenue_expenses_action"
            parent="account.menu_finance_entries_management"/>
</odoo>
