<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="res_config_settings_view_form_fixed_assets" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.fixed.assets</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="ics_account.res_config_settings_view_form_reference_number" />
        <field name="arch" type="xml">
        	<xpath expr="//field[@name='module_ics_account_deferred_revenue_expense']/parent::div/parent::div/parent::div" position="inside">
        		<div class="col-12 col-lg-6 o_setting_box div_fixed_assets_management" attrs="{'invisible': [('module_ics_account_deferred_revenue_expense','=',False)]}">
                    <div class="o_setting_left_pane">
                        <field name="module_ics_fixed_assets_management"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_ics_fixed_assets_management" class="o_form_label" string="Fixed Assets Management"/>
                        <div class="text-muted">
                            Manage Fixed Assets Management
                        </div>
                    </div>
                </div>
        	</xpath>
        </field>
    </record>

</odoo>
