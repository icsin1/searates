<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="deferred_expense_models_view_tree" model="ir.ui.view">
        <field name="name">account.asset.expense.models.view.tree</field>
        <field name="model">account.asset</field>
        <field name="arch" type="xml">
            <tree string="Deferred Expense Models">
                <field name="name" string="Expense"/>
                <field name="recognition_interval" invisible="1"/>
                <field name="interval_period" invisible="1"/>
                <field name="account_depreciation_id" string="Expense Account"/>
                <field name="account_depreciation_expense_id" string="Deferred Expense Account"/>
            </tree>
        </field>
    </record>

    <record id="account_asset_view_form_inherited_expense_models" model="ir.ui.view">
        <field name="name">account.asset.view.form.inherit.expense.models</field>
        <field name="model">account.asset</field>
        <field name="inherit_id" ref="account_asset_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_title')]/h1" position="before">
                <label for="name" name="name_label_expense_models" attrs="{'invisible': ['|', ('asset_type', '!=', 'expense'), ('state', '!=', 'model')]}" string="Deferred Expense Models Name"/>
            </xpath>
        </field>
    </record>

    <record id="deferred_expense_models_action" model="ir.actions.act_window">
        <field name="name">Deferred Expense Models</field>
        <field name="res_model">account.asset</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="deferred_expense_models_view_tree"/>
        <field name="domain">[('asset_type', '=', 'expense'), ('state', '=', 'model')]</field>
        <field name="context">{'default_asset_type': 'expense', 'default_state': 'model'}</field>
    </record>

    <menuitem
            id="deferred_expense_models_menu"
            name="Deferred Expense Models"
            action="deferred_expense_models_action"
            parent="account.account_management_menu"/>
</odoo>
