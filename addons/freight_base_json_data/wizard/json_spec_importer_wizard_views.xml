<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_json_spec_importer_wizard_form" model="ir.ui.view">
            <field name="name">json.spec.importer.wizard.form</field>
            <field name="model">json.spec.importer.wizard</field>
            <field name="arch" type="xml">
                <form string="Import JSON Spec">
                    <group>
                        <group>
                            <field name="json_exported_file" required="1"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Import Spec" name="action_import_spec" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
    </data>

    <record id="json_spec_importer_wizard_action" model="ir.actions.act_window">
        <field name="name">JSON Importer</field>
        <field name="res_model">json.spec.importer.wizard</field>
        <field name="view_mode">form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>

    <menuitem
        id="json_spec_import_menu"
        name="JSON Spec Importer"
        action="json_spec_importer_wizard_action"
        groups="base.group_no_one,odoo_base.group_freight_technical_support_team"
        parent="freight_base.root_freight_master_configuration"
        sequence="3"/>
</odoo>
