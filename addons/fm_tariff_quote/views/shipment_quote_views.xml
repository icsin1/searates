<?xml version="1.0" ?>
<odoo>
    <record id="view_shipment_quote_form" model="ir.ui.view">
        <field name="name">shipment.quote.inherit.form</field>
        <field name="model">shipment.quote</field>
        <field name="inherit_id" ref="fm_quote.view_shipment_quote_form"/>
        <field name="arch" type="xml">
            <field name="show_incl_single_line" position="after">
                <div colspan="2">
                    <button type="object" colspan="2" name="action_tariff_services_wizard" string="Fetch Buy Tariff"
                        context="{'tariff_type': 'buy_tariff'}"
                        class="btn btn-primary btn-sm mb-2 mr-2" attrs="{'invisible': [('quote_for', '=', 'shipment'), '|', '|', '|', ('state', '!=', 'draft'), ('transport_mode_id', '=', False), ('shipment_type_id', '=', False), ('cargo_type_id', '=', False)]}"/>
                    <button type="object" colspan="2" name="action_tariff_services_wizard" string="Fetch Sell Tariff"
                        context="{'tariff_type': 'sell_tariff'}"
                        class="btn btn-primary btn-sm mb-2 mr-2" attrs="{'invisible': [('quote_for', '=', 'shipment'), '|', '|', '|', ('state', '!=', 'draft'), ('transport_mode_id', '=', False), ('shipment_type_id', '=', False), ('cargo_type_id', '=', False)]}"/>
                    <button type="object" colspan="2" name="action_tariff_services_wizard" string="Fetch Charge Master (Buy &amp; Sell)"
                        context="{'tariff_type': 'charge_master'}"
                        class="btn btn-primary btn-sm mb-2 mr-2" attrs="{'invisible': [('quote_for', '=', 'shipment'), '|', '|', '|', ('state', '!=', 'draft'), ('transport_mode_id', '=', False), ('shipment_type_id', '=', False), ('cargo_type_id', '=', False)]}"/>
                    <button type="object" name="action_remove_all_services" string="Detach All Charges" class="btn btn-danger btn-sm mb-2" confirm="Are you sure you want to remove all Charges?"
                        attrs="{'invisible': [('quote_for', '=', 'shipment'), '|', '|', '|',  '|', ('state', '!=', 'draft'), ('quotation_line_ids', '=', []), ('transport_mode_id', '=', False), ('shipment_type_id', '=', False), ('cargo_type_id', '=', False)]}"/>
                </div>
            </field>
        </field>
    </record>

</odoo>
