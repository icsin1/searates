<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_tariff_service_wizard_form" model="ir.ui.view">
        <field name="name">tariff.service.wizard.form</field>
        <field name="model">tariff.service.wizard</field>
        <field name="inherit_id" ref="fm_tariff.view_tariff_service_wizard_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='house_shipment_id']" position="after">
                <field name="shipment_quote_id" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='creditor_partner_id']" position="attributes">
                <attribute name="attrs">{'column_invisible': ['|', ('parent.buy_charge_master', '=', False), ('parent.tariff_type', 'not in', ['buy_tariff', 'charge_master'])], 'readonly': [('parent.tariff_type', '=', 'buy_tariff')], 'required': [('parent.tariff_type', '=', 'charge_master'), '|', ('parent.house_shipment_id', '!=', False), '|', ('parent.master_shipment_id', '!=', False), ('parent.shipment_quote_id', '!=', False)]}</attribute>
            </xpath>
        </field>
    </record>

</odoo>
