<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="l10n_tz_tax_web_report" model="web.report">
            <field name="name">VAT Report (Tanzania)</field>
            <field name="model_id" ref="account.model_account_move_line"/>
            <field name="data_match_domain" eval="[('move_id.state', '=', 'posted')]"/>
            <field name="filter_multi_company">selector</field>
            <field name="filter_date_type">date_range</field>
            <field name="default_opening_date">this_month</field>
            <field name="date_field" ref="account.field_account_move_line__date"/>
            <field name="report_handler_model_id" ref="l10n_tz_reports.model_vat_report_handler"/>
            <field name="is_account_report" eval="True"/>
        </record>

        <record id="l10n_tz_tax_report_part_two_base" model="web.report.column">
            <field name="web_report_id" ref="l10n_tz_tax_web_report"/>
            <field name="name">a. Amount (Exclusive of VAT)</field>
            <field name="expression_label">sale_parent_section_base</field>
            <field name="sequence">2</field>
            <field name="value_type">monetary</field>
            <field name="hide_if_zero" eval="True"/>
        </record>

        <record id="l10n_tz_tax_report_part_two_vat" model="web.report.column">
            <field name="web_report_id" ref="l10n_tz_tax_web_report"/>
            <field name="name">b. VAT Charged</field>
            <field name="expression_label">sale_parent_section_vat</field>
            <field name="sequence">3</field>
            <field name="value_type">monetary</field>
            <field name="hide_if_zero" eval="True"/>
        </record>

    </data>
</odoo>
