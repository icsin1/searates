<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hsn_view_search" model="ir.ui.view">
        <field name="name">hsn.view.search</field>
        <field name="model">freight.hsn.master</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="HSN Code"/>
            </search>
        </field>
    </record>

    <record id="hsn_view_tree" model="ir.ui.view">
        <field name="name">hsn.view.tree</field>
        <field name="model">freight.hsn.master</field>
        <field name="arch" type="xml">
            <tree import="1" delete="1">
                <field name="name"/>
                <field name="hsn_name" required="1"/>
                <field name="govt_code" required="1"/>
                <field name="govt_category_name" required="1"/>
                <field name="vendor_tax_id" options="{'no_create':1}" required="1"/>
                <field name="customer_tax_id" options="{'no_create':1}" required="1"/>
                <field name="company_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="hsn_view_form" model="ir.ui.view">
        <field name="name">hsn.view.form</field>
        <field name="model">freight.hsn.master</field>
        <field name="arch" type="xml">
            <form string="HSN Master">
                <sheet>
                    <label for="name"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" required="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="hsn_name" required="1"/>
                            <field name="govt_code" required="1"/>
                        </group>
                        <group>
                            <field name="govt_category_name" required="1"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="vendor_tax_id" options="{'no_create':1}" required="1"/>
                        </group>
                        <group>
                            <field name="customer_tax_id" options="{'no_create':1}" required="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hsn_type_action" model="ir.actions.act_window">
        <field name="name">HSN Master</field>
        <field name="res_model">freight.hsn.master</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
    </record>

    <menuitem
            id="hsn_master_menu"
            name="HSN Master"
            action="hsn_type_action"
            parent="freight_base.root_freight_admin_manage_menu"
            sequence="9"/>
</odoo>