<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_type_sequence_view_tree" model="ir.ui.view">
        <field name="name">account.type.sequence.view.tree</field>
        <field name="model">account.type.sequence</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code" />
                <field name="account_type_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record id="account_type_sequence_view_form" model="ir.ui.view">
        <field name="name">account.type.sequence.view.form</field>
        <field name="model">account.type.sequence</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create':1,'no_open':1}"/>
                        </group>
                        <group>
                            <field name="account_type_id" widget="account_hierarchy_selection" options="{'no_create':1,'no_open':1}"/>
                            <field name="next_no" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="account_type_sequence_view_search" model="ir.ui.view">
        <field name="name">account.type.sequence.view.search</field>
        <field name="model">account.type.sequence</field>
        <field name="arch" type="xml">
            <search>
                <field name="code" />
                <field name="account_type_id" />
                <group name="group_by" expand="0" string="Group By">
                    <filter name="account_type_id" string="Account Type" context="{'group_by': 'account_type_id'}"/>
                    <filter name="company_id" string="Company" groups="base.group_multi_company" context="{'group_by': 'company_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="account_type_sequence_action" model="ir.actions.act_window">
        <field name="name">Chart Of Account Sequence</field>
        <field name="res_model">account.type.sequence</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="account_type_sequence_menu"
        name="Chart Of Account Sequence"
        action="account_type_sequence_action"
        parent="account.account_account_menu"
        sequence="11"/>

</odoo>