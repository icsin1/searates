<?xml version="1.0" encoding="utf-8"?>
<odoo>

     <record id="spreadsheet_template_view_tree" model="ir.ui.view">
        <field name="name">spreadsheet.template.view.tree</field>
        <field name="model">spreadsheet.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="res_model_id" />
            </tree>
        </field>
    </record>

    <record id="spreadsheet_template_view_form" model="ir.ui.view">
        <field name="name">spreadsheet.template.view.form</field>
        <field name="model">spreadsheet.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" class="oe_inline"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="report_id" readonly="1" groups="base.group_no_one"/>
                            <field name="res_model_id" string="Module" options="{'no_create': True, 'no_create_edit': True}" required="1"/>
                            <field name="output_type"/>
                        </group>
                        <group>
                            <field name="model_name" groups="base.group_no_one"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

