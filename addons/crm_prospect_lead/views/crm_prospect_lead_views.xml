<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="crm_prospect_lead_view_tree" model="ir.ui.view">
        <field name="name">crm.prospect.lead.view.tree</field>
        <field name="model">crm.prospect.lead</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"></field>
                <field name="prospect_id"/>
                <field name="date"/>
                <field name="lead_source" invisible="1"/>
                <field name="lead_source_id"/>
                <field name="user_id"/>
                <field name="company_id" />
                <field name="stage_id"/>
                <field name="turnover_currency_id" invisible="1"/>
                <field name="company_turnover"/>
            </tree>
        </field>
    </record>

    <record id="crm_prospect_lead_view_form" model="ir.ui.view">
        <field name="name">crm.prospect.lead.view.form</field>
        <field name="model">crm.prospect.lead</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="stage_id" widget="statusbar"/>
                    <field name="is_create_opportunity" invisible="1"/>
                    <button string="Change Status" name="action_change_status" type="object" class="oe_highlight" groups="fm_sale_crm.group_salesman"/>
                    <button string="Create Opportunity" name="action_create_opportunity" type="object" class="oe_highlight"
                        attrs="{'invisible':[('is_create_opportunity','=',False)]}" groups="fm_sale_crm.group_salesman"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_opportunity" type="object"
                            class="oe_stat_button" icon="fa-star" attrs="{'invisible': [('opportunity_count', '=', 0)]}">
                            <field name="opportunity_count" string="Opportunity"
                                widget="statinfo"
                                attrs="{'invisible': [('opportunity_count', '=', 0)]}"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name"></field>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="prospect_id" options="{'no_create':1}" context="{'skip_validation': True}"/>
                            <field name="target_id" options="{'no_create':1}"/>
                            <field name="lead_source" invisible="1"/>
                            <field name="lead_source_id"/>
                            <field name="lead_category" attrs="{'invisible': [('lead_category', '=', False)]}"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="user_id" options="{'no_create':1, 'no_open':1}" context="{'access_all_team_member': True, 'team_id': team_id}"/>
                            <field name="company_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="team_id" options="{'no_create': True}" required="1"/>
                        </group>
                    </group>
                    <group name="business_lead" string="Business Lead">
                        <group>
                            <field name="shipment_type_id" options="{'no_create':1}"/>
                            <field name="transport_mode_id" options="{'no_create':1}" required="1"/>
                            <field name="mode_type" invisible="1"/>
                            <field name="origin_country_id" options="{'no_create': True}" attrs="{'invisible': [('mode_type', '!=', 'air')],'required': [('mode_type', '=', 'air')]}"/>
                            <div class="o_td_label" attrs="{'invisible': [('mode_type', '=', 'land')]}">
                                <field name="port_of_loading_domain" invisible="1" />
                                <label for="port_of_loading_id" string="Origin Port" attrs="{'invisible': [('mode_type','in',['air', 'land'])]}"/>
                                <label for="port_of_loading_id" string="Origin Airport" attrs="{'invisible': [('mode_type','!=','air')]}"/>
                            </div>
                            <field name="port_of_loading_id" domain="port_of_loading_domain" context="{'default_transport_mode_id': transport_mode_id}" nolabel="1" options="{'no_create': True}" attrs="{'required': [('mode_type', 'in', ['sea', 'air'])], 'invisible': [('mode_type', '=', 'land')]}"/>
                            <label for="expected_annual_revenue"/>
                            <div class="o_row">
                                <field name="expected_annual_revenue"/>
                                <field name="annual_revenue_currency_id" options="{'no_create':1}" placeholder="Currency"/>
                            </div>
                        </group>
                        <group>
                            <field name="target_date"/>
                            <field name="business_service_id" options="{'no_create':1}"/>
                            <field name="destination_country_id" options="{'no_create': True}" attrs="{'invisible': [('mode_type','!=','air')],'required': [('mode_type','=','air')]}"/>
                            <div class="o_td_label" attrs="{'invisible': [('mode_type', '=', 'land')]}">
                                <label for="port_of_discharge_id" string="Destination Port" attrs="{'invisible': [('mode_type','in',['air', 'land'])]}"/>
                                <label for="port_of_discharge_id" string="Destination Airport" attrs="{'invisible': [('mode_type','!=','air')]}"/>
                            </div>
                            <field name="port_of_discharge_id" domain="port_of_discharge_domain" context="{'default_transport_mode_id': transport_mode_id}" nolabel="1" options="{'no_create': True}" attrs="{'required': [('mode_type', 'in', ['sea', 'air'])], 'invisible': [('mode_type', '=', 'land')]}"/>
                            <field name="port_of_discharge_domain" invisible="1"/>
                            <label for="expected_annual_volume"/>
                            <div class="o_row">
                                <field name="expected_annual_volume"/>
                                <field name="volume_uom_id" options="{'no_create':1}" placeholder="Volume"/>
                            </div>
                            <field name="commodity_id" options="{'no_create':1}"/>
                        </group>
                    </group>
                    <group name="revenue_voumne" string="Revenue &amp; Volume">
                        <group>
                            <field name="nature_of_business"/>
                        </group>
                        <group>
                            <label for="company_turnover"/>
                            <div class="o_row">
                                <field name="company_turnover"/>
                                <field name="turnover_currency_id" options="{'no_create':1}" placeholder="Currency"/>
                            </div>
                        </group>
                        <group>
                            <field name="remarks"/>
                        </group>
                    </group>
                    <group name="contact_info" string="Contact Information">
                        <group>
                            <label for="street" string="Address"/>
                            <div class="o_address_format">
                                <field name="street" required="1" placeholder="Street..." class="o_address_street"/>
                                <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                <field name="country_id" required="1" placeholder="Country" class="o_address_country" options="{'no_create': True,'no_open':True}"/>
                                <field name="state_id" class="o_address_state" placeholder="State" options="{'no_create': True,'no_open':True}"/>
                                <field name="city_id" placeholder="City" class="o_address_city" options="{'no_open':True}"
                                    domain="[('country_id','=',country_id),('state_id','=',state_id)]"
                                    context="{'default_country_id':country_id,'default_state_id':state_id,'default_zipcode':zip}"/>
                                <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                            </div>
                            <field name="designation"/>
                            <field name="department"/>
                        </group>
                        <group>
                            <field name="contact_name"/>
                            <field name="email" widget="email"/>
                            <field name="phone_no" widget="phone"/>
                            <field name="mobile" widget="phone"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="crm_prospect_lead_view_search" model="ir.ui.view">
        <field name="name">crm.prospect.lead.view.search</field>
        <field name="model">crm.prospect.lead</field>
        <field name="arch" type="xml">
            <search>
                <field name="prospect_id"/>
                <field name="name"/>
                <field name="target_id"/>
                <field name="lead_source" invisible="1"/>
                <field name="lead_source_id"/>
                <field name="email"/>
                <field name="phone_no" filter_domain="['|', ('phone_no', 'ilike', self), ('mobile', 'ilike', self)]"/>
                <field name="contact_name"/>
                <field name="user_id"/>
                <group expand="0" name="group_by" string="Group By">
                    <filter name="group_date" string="Date" context="{'group_by' : 'date'}"/>
                    <filter name="group_prospect_id" string="Customer" context="{'group_by': 'prospect_id'}"/>
                    <filter name="group_target_id" string="Target" context="{'group_by': 'target_id'}"/>
                    <filter name="group_user_id" string="Lead Owner" context="{'group_by': 'user_id'}"/>
                    <filter name="group_stage_id" string="Lead Stage" context="{'group_by': 'stage_id'}"/>
                    <filter string="Company" name="company" context="{'group_by':'company_id'}" groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>

    <record id="crm_prospect_lead_action" model="ir.actions.act_window">
        <field name="name">Leads</field>
        <field name="res_model">crm.prospect.lead</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Prospect Leads.
            </p>
        </field>
    </record>

    <menuitem
        id="crm_prospect_lead_menu"
        name="Leads"
        action="crm_prospect_lead_action"
        parent="fm_sale_crm.fm_sales_root_menu"
        groups="fm_sale_crm.group_salesman,freight_base.group_manage_pricing,base.group_system"
        sequence="2"/>
</odoo>
