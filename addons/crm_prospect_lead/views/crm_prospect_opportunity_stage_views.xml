<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="crm_prospect_opportunity_stage_view_tree" model="ir.ui.view">
        <field name="name">crm.prospect.opportunity.stage.view.tree</field>
        <field name="model">crm.prospect.opportunity.stage</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="crm_prospect_opportunity_stage_view_form" model="ir.ui.view">
        <field name="name">crm.prospect.opportunity.stage.view.form</field>
        <field name="model">crm.prospect.opportunity.stage</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Negotiation"/>
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="crm_prospect_opportunity_stage_action" model="ir.actions.act_window">
        <field name="name">Opportunity Stage</field>
        <field name="res_model">crm.prospect.opportunity.stage</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Prospect Opportunity Stage.
            </p>
        </field>
    </record>

    <menuitem
        id="crm_prospect_opportunity_stage_menu"
        name="Opportunity Stage"
        action="crm_prospect_opportunity_stage_action"
        parent="fm_sale_crm.fm_sales_configuration_menu"
        sequence="1"/>

</odoo>
