<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="customer_visit_lines_view_tree" model="ir.ui.view">
        <field name="name">customer.visit.lines.view.tree</field>
        <field name="model">customer.visit.lines</field>
        <field name="arch" type="xml">
            <tree>
                <field name="serial_no" readonly="1"/>
                <field name="date_of_visit" required="1"/>
                <field name="communication_mode" string="Mode of Communication" required="1" optional="show"/>
                <field name="time_of_visit" required="1" widget="float_time"/>
                <field name="visited_by_id" required="1"/>
                <field name="purpose_of_visit" required="1" optional="show"/>
                <field name="next_visit"/>
                <field name="next_followup_date"/>
                <field name="assign_to_id" required="1"/>
                <field name="notes"/>
                <field name="company_id" invisible="1"/>
                <field name="customer_id" invisible="1"/>
                <field name="user_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="customer_visit_lines_view_form" model="ir.ui.view">
        <field name="name">customer.visit.lines.view.form</field>
        <field name="model">customer.visit.lines</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <label for="date_of_visit" string="Date &amp; Time"/>
                            <div class="o_row">
                                <field name="date_of_visit" required="1"/>
                                <field name="time_of_visit" required="1" widget="float_time" class="oe_inline" />
                            </div>
                            <field name="serial_no" force_save="1" invisible="1" readonly="1"/>
                            <field name="communication_mode" string="Mode of Communication" required="1"/>
                            <field name="visited_by_id" required="1"/>
                            <field name="purpose_of_visit" string="Purpose" required="1"/>
                            <field name="opportunity_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="company_id" invisible="1"/>
                            <field name="customer_id" invisible="1"/>
                            <field name="user_id" invisible="1"/>
                            <field name="next_visit"/>
                            <field name="next_followup_date"  attrs="{'invisible':[('next_visit','!=','yes')], 'required':[('next_visit','=','yes')]}"/>
                            <field name="assign_to_id" attrs="{'invisible':[('next_visit','!=','yes')], 'required':[('next_visit','=','yes')]}"/>
                            <field name="notes"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="customer_visit_lines_action" model="ir.actions.act_window">
        <field name="name">Customer Visit Information</field>
        <field name="res_model">customer.visit.lines</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new Information.
            </p>
        </field>
    </record>
</odoo>
