<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<template id="report_customer_visit">
		<t t-call="web.html_container">
			<t t-call="web.external_layout" style="border: none;">
				<div class="bg-200 p-2">
					<h2 class="text-center">Customer visit Report </h2>
                </div>
				<t t-foreach="docs" t-as="o">
					<div class="page">
                		<table width="100%" class="table table-sm o_main_table">
							<thead>
								<tr style="font-size: 0.66rem;">
									<th style="border: 1px solid black; border-right: none;" class="text-left">Total Visit</th>
									<th style="border: 1px solid black; border-right: none;" class="text-left">Customer Name</th>
									<th style="border: 1px solid black; border-right: none;" class="text-left">Company Name</th>
									<th style="border: 1px solid black; border-right: none;" class="text-left" width="100px">Company Address</th>
									<th style="border: 1px solid black; border-right: none;" class="text-left">Contact Person</th>
									<th style="border: 1px solid black; border-right: none;" class="text-center">Designation</th>
									<th style="border: 1px solid black; border-right: none;" class="text-left">Contact Number</th>
									<th style="border: 1px solid black; border-right: none;" class="text-center">Email</th>
									<th style="border: 1px solid black; border-right: none;" class="text-left">Customer Visit Date</th>
									<th style="border: 1px solid black; border-right: none;" class="text-left">Customer Visit Time</th>
									<th style="border: 1px solid black; border-right: none;" class="text-left">Communication Mode</th>
									<th style="border: 1px solid black; border-right: none;" class="text-left">Visitor Name</th>
									<th style="border: 1px solid black; border-right: none;" class="text-left">Next Visit Scheduled</th>
									<th style="border: 1px solid black; border-right: none;" class="text-left">Next Follow Up Date</th>
									<th style="border: 1px solid black;" class="text-left">Assigned Person</th>
								</tr>
							</thead>
							<tbody>
								<t t-foreach="data['visit_list']" t-as="visit">
									<tr style="font-size: 0.66rem">
										<td style="border: 1px solid black; border-right: none;"><span t-esc="visit['serial_no']"/></td>
										<td style="border: 1px solid black; border-right: none;"><span t-esc="visit['visited_by_id'].name"/></td>
										<td style="border: 1px solid black; border-right: none;"><span t-esc="visit['company_id'].name"/></td>
										<td style="border: 1px solid black; border-right: none;"><span t-esc="visit['address']"/></td>
										<td style="border: 1px solid black; border-right: none;"><span t-esc="visit['contact_name']"/></td>
										<td style="border: 1px solid black; border-right: none;"><span t-esc="visit['designation']"/></td>
										<td style="border: 1px solid black; border-right: none;"><span t-esc="visit['mobile']"/></td>
										<td style="border: 1px solid black; border-right: none;"><span t-esc="visit['email']"/></td>
										<td style="border: 1px solid black; border-right: none;"><span t-esc="visit['date_of_visit']" t-options="{'widget': 'date'}"/></td>
										<td style="border: 1px solid black; border-right: none;"><span t-esc="visit['time_of_visit']"/></td>
										<td style="border: 1px solid black; border-right: none;"><span t-esc="visit['opportunity_source']"/></td>
										<td style="border: 1px solid black; border-right: none;"><span t-esc="visit['user_id'].name"/></td>
										<td style="border: 1px solid black; border-right: none;"><span t-esc="visit['next_visit']"/></td>
										<td style="border: 1px solid black; border-right: none;"><span t-esc="visit['next_followup_date']" t-options="{'widget': 'date'}"/></td>
										<td style="border: 1px solid black;"><span t-esc="visit['assign_to_id'].name"/></td>
									</tr>
								</t>
							</tbody>
                		</table>
					</div>
				</t>
			</t>
        </t>
    </template>
</odoo>
