<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="wizard_prospect_lead_status_view_form" model="ir.ui.view">
        <field name="name">wizard.prospect.lead.status.form</field>
        <field name="model">wizard.prospect.lead.status</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="prospect_lead_id" invisible="1"/>
                    <field name="stage_id" optional="{'no_create':1}"/>
                    <field name="show_lead_category" invisible="1"/>
                </group>
                <group col="4">
                    <field name="lead_category" attrs="{'invisible':[('show_lead_category','=',False)],'required':[('show_lead_category','=',True)]}"/>
                    <field name="remarks" attrs="{'invisible':[('show_lead_category','=',False)],'required':[('show_lead_category','=',True)]}"/>
                </group>
                <footer>
                    <button string="Confirm" name="action_change_status" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default" special="cancel" />
                </footer>
            </form>
            
        </field>
    </record>

    <record id="wizard_prospect_lead_status_action" model="ir.actions.act_window">
        <field name="name">Change Status</field>
        <field name="res_model">wizard.prospect.lead.status</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="wizard_prospect_lead_status_view_form"/>
        <field name="target">new</field>
    </record>

</odoo>
