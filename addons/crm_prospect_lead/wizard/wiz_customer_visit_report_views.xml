<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="customer_visit_wizard_form" model="ir.ui.view">
		<field name="name">customer.visit.report.form</field>
		<field name="model">customer.visit.report</field>
		<field name="arch" type="xml">
			<form>
				<group>
					<group>
						<field name="from_date" required="1"/>
						<field name="customer_ids" required="1" widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True}"/>
					</group>
					<group>
						<field name="to_date" required="1"/>
						<field name="sales_agent_ids" widget="many2many_tags" required="1" options="{'no_create': True, 'no_create_edit': True}"/>
					</group>
				</group>
				<footer>
					<button type="object" string="PDF" name="print_report_pdf" class="btn btn-primary"/>
					<button type="object" string="XLS" name="print_report_xlsx" class="btn btn-primary"/>
					<button type="special" special="cancel" string="Cancel" class="btn-default"/>
				</footer>
			</form>
		</field>
	</record>

	<record id="action_customer_visit_report" model="ir.actions.act_window">
		<field name="name">Customer Visit Report</field>
		<field name="res_model">customer.visit.report</field>
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>

	<menuitem
		id="menu_customer_visit_report"
		parent="fm_sale_crm.fm_sales_crm_reports"
		action="action_customer_visit_report"
		/>
</odoo>