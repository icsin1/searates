<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_view_customization" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.view_customization</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='user_default_rights']" position="after">
                <h2>View Customization Group</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 o_setting_box">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="view_customization"/>
                            <div class="text-muted">
                                Show view customization option on list view
                            </div>
                            <div class="mt8">
                                <field name="view_customization"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
