<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="user_role_to_users_action" model="ir.actions.act_window">
            <field name="name">Users</field>
            <field name="res_model">res.users</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[('user_role_id', '=', active_id)]</field>
            <field name="context">{'default_user_role_id': active_id}</field>
        </record>
        <record id="res_user_role_view_tree" model="ir.ui.view">
            <field name="name">res.user.role.view.tree</field>
            <field name="model">res.user.role</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="id" />
                    <field name="name" string="Department Name"/>
                    <field name="user_count" />
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>
        <record id="action_res_user_role_form" model="ir.ui.view">
            <field name="name">res.user.role.form</field>
            <field name="model">res.user.role</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="%(user_role_to_users_action)d"
                                    type="action" icon="fa-users">
                                <div class="o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="user_count"/>
                                    </span>
                                    <span class="o_stat_text">
                                        Users
                                    </span>
                                </div>
                            </button>
                        </div>
                        <label for="name" string="Department Name"/>
                        <div class="oe_title">
                            <h1><field name="name" class="oe_inline"/></h1>
                        </div>
                        <notebook>
                            <page string="Access Rights">
                                <field name="groups_id"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="res_user_role_groups_form" model="ir.ui.view">
            <field name="name">res.user.role.groups.form</field>
            <field name="model">res.user.role</field>
            <field name="inherit_id" ref="action_res_user_role_form"/>
            <field name="arch" type="xml">
                <field name="groups_id" position="after"/>
            </field>
        </record>


        <record id="action_message_dialog_form" model="ir.ui.view">
            <field name="name">message.dialog.form</field>
            <field name="model">message.dialog</field>
            <field name="arch" type="xml">
                <form class="p-0">
                    <div class="alert alert-success m-0 rounded-0 p-3" role="alert">
                        <h4 class="alert-heading" role="alert">Succeed!</h4>
                        <p>New Department is created.</p>
                        <hr/>
                        <p class="mb-0">You can see departments inside <strong>Settings &gt; Users &amp; Company &gt; Departmenrs</strong></p>
                    </div>
                    <footer class="pull-right">
                        <button special="cancel" string="OK" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_res_user_role" model="ir.actions.act_window">
            <field name="name">Departments</field>
            <field name="res_model">res.user.role</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create the Department</p>
            </field>
        </record>

        <record id="action_grant_access_wizard_form" model="ir.ui.view">
            <field name="name">user.access.wizard.form</field>
            <field name="model">user.access.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="user_ids" widget="many2many_tags"/>
                                <field name="user_role_id"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Grant Access" class="oe_highlight" type="object" name="action_grant_access"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_grant_access_wizard" model="ir.actions.act_window">
            <field name="name">User Access Role Wizard</field>
            <field name="res_model">user.access.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create the first User Role</p>
            </field>
        </record>

        <record id="res_users_grant_access_action" model="ir.actions.server">
            <field name="name">Change Access Role</field>
            <field name="model_id" ref="freight_base_security.model_res_users"/>
            <field name="binding_model_id" ref="freight_base_security.model_res_users"/>
            <field name="state">code</field>
            <field name="code">
[wizard] = env.ref('freight_base_security.action_grant_access_wizard').sudo().read()
wizard.update({'context': env.context})
action = wizard
            </field>
        </record>

        <menuitem
            id="menu_res_user_role"
            name="Departments"
            action="action_res_user_role"
            groups="base.group_erp_manager"
            parent="freight_base.root_freight_users_companies"
            sequence="2"/>
    </data>
</odoo>
