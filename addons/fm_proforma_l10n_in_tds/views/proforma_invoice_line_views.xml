<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="inherit_pro_forma_invoice_view_form" model="ir.ui.view">
        <field name="name">pro.forma.invoice.view.form.inherit</field>
        <field name="model">pro.forma.invoice</field>
        <field name="inherit_id" ref="fm_proforma.pro_forma_invoice_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="company_calculate_tds" invisible="1"/>
            </xpath>
            <xpath expr="//page[@name='charges_lines']/field/tree/field[@name='tax_ids']" position="after">
                <field name="income_tds_rate_id" attrs="{'column_invisible':[('parent.company_calculate_tds','=',False)]}"  options="{'no_create': 1}"/>
                <field name="tds_amount" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='amount_total']" position="after">
                <field name="total_tds_amount" colspan="2" class="oe_subtotal_footer_separator"
                    attrs="{'invisible':[('company_calculate_tds', '=', False)]}"/>
            </xpath>
        </field>
    </record>

</odoo>
