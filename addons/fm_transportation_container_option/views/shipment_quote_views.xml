<?xml version="1.0" ?>
<odoo>

    <record id="view_shipment_quote_form_inherit_transport_detail" model="ir.ui.view">
        <field name="name">shipment.quote.form.transport.details</field>
        <field name="model">shipment.quote</field>
        <field name="priority" eval="18"/>
        <field name="inherit_id" ref="fm_quote.view_shipment_quote_form" />
        <field name="arch" type="xml">
             <xpath expr="/form/sheet/separator[2]" position="attributes">
                <attribute name="attrs">{'invisible':['|', '|', ('quote_for', '!=', 'shipment'), ('is_package_group', '!=', True), ('mode_type','=','land')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='quote_cargo_line_ids']" position="attributes">
                <attribute name="attrs">{'invisible':['|', '|', ('quote_for', '!=', 'shipment'), ('is_package_group', '!=', True), ('mode_type','=','land')]}</attribute>
            </xpath>
            <xpath expr="//group[@name='container']" position="attributes">
                <attribute name="attrs">{'invisible':['|', '|', ('quote_for', '!=', 'shipment'), ('is_package_group', '=', True), ('mode_type','=','land')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='add_transportation_details']" position="after">
                <field name="divide_value" invisible="1" readonly="1"/>
            </xpath>
        </field>
    </record>

    <record id="fm_road_view_shipment_quote_form_inherit_transport_detail" model="ir.ui.view">
        <field name="name">fm_road.shipment.quote.form.transport.details</field>
        <field name="model">shipment.quote</field>
        <field name="priority" eval="18"/>
        <field name="inherit_id" ref="fm_road_quote.fm_road_view_shipment_quote_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='transportation_detail_ids']" position="attributes">
                <attribute name="attrs">{'invisible': True}</attribute>
            </xpath>
            <xpath expr="//field[@name='transportation_detail_ids']" position="after">
                <field name="transportation_pack_detail_ids" nolabel="1" attrs="{'invisible': ['|', ('mode_type','!=','land'), ('add_transportation_details','=', False)]}">
                    <tree>
                        <field name="transport_mode_id" invisible="1"/>
                        <field name="is_refrigerated" invisible="1"/>
                        <field name="quote_for" invisible="1"/>
                        <field name="is_package_group" invisible="1"/>
                        <field name="truck_number_id" options="{'no_create': True}" width="15"/>
                        <field name="trailer_number_id" options="{'no_create': True}" width="15"/>
                        <field name="container_type_id" width="15" options="{'no_create': True}" domain="[('transport_mode_id', '=', transport_mode_id)]"
                               attrs="{'required': [('parent.is_package_group', '=', False)], 'column_invisible': ['|', ('parent.quote_for', '!=', 'shipment'),
                               ('parent.is_package_group', '=', True)]}"/>
                        <field name="container_temperature" attrs="{'invisible': [('is_refrigerated', '=', False)], 'required': [('is_refrigerated', '=', True)]}" width="12" optional="hide"/>
                        <field name="container_temperature_uom_id" options="{'no_create': True, 'no_open': True}" width="12"
                                attrs="{'invisible': [('is_refrigerated', '=', False)], 'required': [('is_refrigerated', '=', True)]}" optional="hide"/>
                        <field name="max_temperature" attrs="{'invisible': [('is_refrigerated', '=', False)], 'required': [('is_refrigerated', '=', True)]}" width="12" optional="hide"/>
                        <field name="max_temperature_uom_id" options="{'no_create': True, 'no_open': True}" width="12"
                                attrs="{'invisible': [('is_refrigerated', '=', False)], 'required': [('is_refrigerated', '=', True)]}" optional="hide"/>
                        <field name="pack_type_id" attrs="{'column_invisible': ['|', ('parent.quote_for', '!=', 'shipment'), ('parent.is_package_group', '!=', True)]}" width="15"/>
                        <field name="count" attrs="{'column_invisible': [('parent.quote_for', '!=', 'shipment')]}" width="10" string="Truck Quantity"/>
                        <field name="weight" attrs="{'column_invisible': [('parent.is_package_group', '=', False)]}" width="12" optional="hide"/>
                        <field name="weight_uom_id" attrs="{'column_invisible': [('parent.is_package_group', '=', False)]}" width="12" options="{'no_create': True}" optional="hide"/>
                        <field name="volume" attrs="{'column_invisible': [('parent.is_package_group', '=', False)]}" width="12" optional="hide"/>
                        <field name="volume_uom_id" attrs="{'column_invisible': [('parent.is_package_group', '=', False)]}" width="12" options="{'no_create': True}" optional="hide"/>
                        <field name="volumetric_weight" attrs="{'column_invisible': [('parent.is_package_group', '=', False)]}" width="12" optional="hide"/>
                        <field name="volumetric_weight_uom_id" attrs="{'column_invisible': [('parent.is_package_group', '=', False)]}" width="12" options="{'no_create': True}" optional="hide"/>
                        <field name="commodity_id" width="12" options="{'no_create': True}"/>
                        <field name="commodity_hs_code" attrs="{'column_invisible': ['|', ('parent.quote_for', '!=', 'shipment'), ('parent.is_package_group', '!=', True)]}" width="10" />
                        <field name="is_hazardous" attrs="{'column_invisible': ['|', ('parent.quote_for', '!=', 'shipment'), ('parent.is_package_group', '!=', True)]}" width="8" />
                        <field name="notes" attrs="{'column_invisible': ['|', ('parent.quote_for', '!=', 'shipment'), ('parent.is_package_group', '!=', True)]}" width="10" />
                        <field name="service_name" width="10" optional="hide"/>
                        <field name="teu" attrs="{'column_invisible': ['|', ('parent.quote_for', '!=', 'shipment'), ('parent.is_package_group', '=', True)]}" width="8"/>
                        <field name="pickup_location_type_id" width="10" optional="hide"/>
                        <field name="road_origin_un_location_id" width="10" optional="hide"/>
                        <field name="delivery_location_type_id" width="10" optional="hide"/>
                        <field name="road_destination_un_location_id" width="10" optional="hide"/>
                        <field name="estimated_pickup" width="10" optional="hide"/>
                        <field name="expected_delivery" width="10" optional="hide"/>
                        <field name="transit_time" width="8" optional="hide"/>
                        <field name="length" width="8" optional="hide"/>
                        <field name="width" width="8" optional="hide"/>
                        <field name="height" width="8" optional="hide"/>
                        <field name="lwh_uom_id" width="8" optional="hide"/>
                    </tree>
                </field>
            </xpath>
        </field>
    </record>

</odoo>
