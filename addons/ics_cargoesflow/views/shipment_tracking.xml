<odoo>
    <template id="shipment_tracking_portal_template_inherit_container" inherit_id="freight_management.shipment_tracking_portal_template">
        <xpath expr="//div[@id='status_details']" position="inside">
            <t t-if="shipment and shipment.mode_type != 'air'">
                <t t-foreach="events" t-as="event">
                    <t t-if="event.public_visible">
                        <div class="col-md-6">
                            <p class="mb-0">
                                <b>Container Number :</b>
                                <span class="font-weight-bold">
                                    <span t-field="event.container_id" />
                                </span>
                            </p>
                        </div>
                    </t>
                </t>
            </t>
        </xpath>
    </template>
</odoo>
