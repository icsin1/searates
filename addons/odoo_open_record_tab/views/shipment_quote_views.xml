<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_shipment_quote_tree" model="ir.ui.view">
        <field name="name">shipment.quote.tree.new.tab</field>
        <field name="model">shipment.quote</field>
        <field name="inherit_id" ref="fm_quote.view_shipment_quote_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="before">
                <button name="action_open_on_new_tab" type="object" title="Open on new tab" context="{'action': 'fm_quote.action_shipment_quote'}" class="btn p-0 fa fa-external-link text-info"/>
            </xpath>
        </field>
    </record>

    <record id="shipment_quote_view_kanban" model="ir.ui.view">
        <field name="name">shipment.quote.view.kanban.new.tab</field>
        <field name="model">shipment.quote</field>
        <field name="inherit_id" ref="fm_quote.shipment_quote_view_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='title']" position="inside">
                <button name="action_open_on_new_tab" type="object" context="{'action': 'fm_quote.action_shipment_quote'}" title="Open on new tab" class="btn p-0 fa fa-external-link text-info"/>
            </xpath>
        </field>
    </record>
</odoo>
