<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="freight_master_shipment_view_tree" model="ir.ui.view">
        <field name="name">freight.master.shipment.view.tree.new.tab</field>
        <field name="model">freight.master.shipment</field>
        <field name="inherit_id" ref="freight_management.freight_master_shipment_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="before">
                <button name="action_open_on_new_tab" type="object" title="Open on new tab" context="{'action': 'freight_management.freight_shipment_master_action'}" class="btn p-0 fa fa-external-link text-info"/>
            </xpath>
        </field>
    </record>

    <record id="freight_master_shipment_view_kanban" model="ir.ui.view">
        <field name="name">freight.master.shipment.view.kanban</field>
        <field name="model">freight.master.shipment</field>
        <field name="inherit_id" ref="freight_management.freight_master_shipment_view_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='title']" position="inside">
                <button name="action_open_on_new_tab" type="object" title="Open on new tab" context="{'action': 'freight_management.freight_shipment_master_action'}" class="btn p-0 fa fa-external-link text-info"/>
            </xpath>
        </field>
    </record>
</odoo>
