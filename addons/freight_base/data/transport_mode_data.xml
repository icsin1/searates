<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="transport_mode_sea" model="transport.mode">
            <field name="code">SEA</field>
            <field name="name">Sea Freight</field>
            <field name="mode_type">sea</field>
            <field name="sequence">1</field>
        </record>
        <record id="transport_mode_air" model="transport.mode">
            <field name="code">AIR</field>
            <field name="name">Air Freight</field>
            <field name="mode_type">air</field>
            <field name="sequence">2</field>
        </record>
        <record id="transport_mode_land" model="transport.mode">
            <field name="code">ROA</field>
            <field name="name">Road Freight</field>
            <field name="mode_type">land</field>
            <field name="sequence">3</field>
        </record>
    </data>
    <!--Marking Data as Noupdate after defining transport modes Because only after record creation one can set Allowed Route with those IDs-->
    <data noupdate="1">
        <record id="freight_base.transport_mode_sea" model="transport.mode">
            <field name="allowed_route_mode_ids" eval="[Command.set([ref('transport_mode_sea'), ref('transport_mode_land')])]"/>
        </record>
        <record id="freight_base.transport_mode_air" model="transport.mode">
            <field name="allowed_route_mode_ids" eval="[Command.set([ref('transport_mode_air'), ref('transport_mode_land')])]"/>
        </record>
        <record id="freight_base.transport_mode_land" model="transport.mode">
            <field name="allowed_route_mode_ids" eval="[Command.set([ref('transport_mode_sea'), ref('transport_mode_air'), ref('transport_mode_land')])]"/>
        </record>
    </data>

    <!-- Add Air transport mode on Sea -->
    <data noupdate="1">
        <record id="freight_base.transport_mode_sea" model="transport.mode">
            <field name="allowed_route_mode_ids" eval="[Command.set([
                ref('freight_base.transport_mode_sea'),
                ref('freight_base.transport_mode_land'),
                ref('freight_base.transport_mode_air')])]"/>
        </record>
    </data>

</odoo>
