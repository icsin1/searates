<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="shipment_other_charge_category" model="product.category">
            <field name="parent_id" ref="product.product_category_all"/>
            <field name="name">Addtional Services</field>
        </record>
        <record id="shipment_charge_category" model="product.category">
            <field name="parent_id" ref="product.product_category_all"/>
            <field name="name">Shipment Services</field>
        </record>
        <function model="uom.uom" name="set_uom_transport_mode"/>
        <record id="product_template_pickup" model="product.template">
            <field name="name">Pickup</field>
            <field name="categ_id" ref="freight_base.shipment_charge_category"/>
            <field name="detailed_type">service</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="uom_po_id" ref="uom.product_uom_unit"/>
            <field name="company_id" ref="base.main_company"/>
            <field name="default_code">PU</field>
            <field name="measurement_basis_id" ref="freight_base.measurement_basis_shipment"/>
        </record>
        <record id="product_template_delivery" model="product.template">
            <field name="name">Delivery</field>
            <field name="categ_id" ref="freight_base.shipment_charge_category"/>
            <field name="detailed_type">service</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="uom_po_id" ref="uom.product_uom_unit"/>
            <field name="company_id" ref="base.main_company"/>
            <field name="default_code">DL</field>
            <field name="measurement_basis_id" ref="freight_base.measurement_basis_shipment"/>
        </record>
        <record id="product_template_on_carriage" model="product.template">
            <field name="name">On Carriage</field>
            <field name="categ_id" ref="freight_base.shipment_charge_category"/>
            <field name="detailed_type">service</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="uom_po_id" ref="uom.product_uom_unit"/>
            <field name="company_id" ref="base.main_company"/>
            <field name="default_code">OCAG</field>
            <field name="measurement_basis_id" ref="freight_base.measurement_basis_shipment"/>
        </record>
        <record id="product_template_pre_carriage" model="product.template">
            <field name="name">Pre Carriage</field>
            <field name="categ_id" ref="freight_base.shipment_charge_category"/>
            <field name="detailed_type">service</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="uom_po_id" ref="uom.product_uom_unit"/>
            <field name="default_code">PCAG</field>
            <field name="measurement_basis_id" ref="freight_base.measurement_basis_shipment"/>
        </record>
        <record id="product_template_main_carriage" model="product.template">
            <field name="name">Main Carriage</field>
            <field name="categ_id" ref="freight_base.shipment_charge_category"/>
            <field name="detailed_type">service</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="uom_po_id" ref="uom.product_uom_unit"/>
            <field name="company_id" ref="base.main_company"/>
            <field name="default_code">MCAG</field>
            <field name="measurement_basis_id" ref="freight_base.measurement_basis_shipment"/>
        </record>
        <record id="base.main_company" model="res.company">
            <field name="code">MyCo</field>
            <field name="pickup_product_id" ref="freight_base.product_template_pickup"/>
            <field name="on_carriage_product_id" ref="freight_base.product_template_on_carriage"/>
            <field name="pre_carriage_product_id" ref="freight_base.product_template_pre_carriage"/>
            <field name="delivery_product_id" ref="freight_base.product_template_delivery"/>
        </record>
    </data>
</odoo>
