<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Land/Road -->
        <record id="cargo_type_land_ftl" model="cargo.type">
            <field name="code">FTL</field>
            <field name="name">Full Truck Load</field>
            <field name="transport_mode_id" ref="freight_base.transport_mode_land"/>
            <field name="sequence">1</field>
        </record>
        <record id="cargo_type_land_ltl" model="cargo.type">
            <field name="code">LTL</field>
            <field name="name">Less Truck Load</field>
            <field name="is_package_group" eval="True"/>
            <field name="calculated_dimension_lwh" eval="True"/>
            <field name="transport_mode_id" ref="freight_base.transport_mode_land"/>
            <field name="sequence">2</field>
        </record>
        <record id="cargo_type_land_courier" model="cargo.type">
            <field name="code">CR</field>
            <field name="name">Courier</field>
            <field name="transport_mode_id" ref="freight_base.transport_mode_land"/>
            <field name="is_package_group" eval="True"/>
            <field name="sequence">6</field>
            <field name="is_courier_shipment" eval="True"/>
        </record>

        <record id="cargo_type_land_bcn" model="cargo.type">
            <field name="code">BCN</field>
            <field name="name">Buyer's Consolidation</field>
            <field name="transport_mode_id" ref="freight_base.transport_mode_land"/>
            <field name="is_package_group" eval="True"/>
            <field name="sequence">1000</field>
            <field name="active" eval="False"/>
        </record>
        <record id="cargo_type_land_fcl" model="cargo.type">
            <field name="code">FCL</field>
            <field name="name">Full Container Load</field>
            <field name="transport_mode_id" ref="freight_base.transport_mode_land"/>
            <field name="sequence">1000</field>
            <field name="active" eval="False"/>
        </record>
        <record id="cargo_type_land_lcl" model="cargo.type">
            <field name="code">LCL</field>
            <field name="name">Less Container Load</field>
            <field name="transport_mode_id" ref="freight_base.transport_mode_land"/>
            <field name="is_package_group" eval="True"/>
            <field name="sequence">1000</field>
            <field name="is_package_group" eval="True"/>
            <field name="active" eval="False"/>
        </record>
    </data>
    <function name="write" model="ir.model.data">
    <function name="search" model="ir.model.data">
        <value eval="[('module', '=', 'freight_base'), ('name', '=', 'cargo_type_land_ltl')]"/>
    </function>
        <value eval="{'noupdate': False}" />
    </function>

    <record id="freight_base.cargo_type_land_ltl" model="cargo.type">
        <field name="calculated_dimension_lwh" eval="True"/>
    </record>
    <function name="write" model="ir.model.data">
        <function name="search" model="ir.model.data">
            <value eval="[('module', '=', 'freight_base'), ('name', '=', 'cargo_type_land_ltl')]"/>
        </function>
        <value eval="{'noupdate': True}" />
    </function>
</odoo>
