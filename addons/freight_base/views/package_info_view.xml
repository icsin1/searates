<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="package_info_form_view" model="ir.ui.view">
		<field name="name">package.info.form.view</field>
		<field name="model">package.info</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group>
						<group>
							<field name="name"/>
							<field name="kind"/>
							<field name="type"/>
						</group>
						<group>
							<field name="material_code"/>
							<field name="material"/>
							<field name="category"/>
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>
	
	<record id="package_info_tree_view" model="ir.ui.view">
		<field name="name">package.info.tree.view</field>
		<field name="model">package.info</field>
		<field name="arch" type="xml">
			<tree>
				<field name="name"/>
				<field name="kind"/>
				<field name="type"/>
				<field name="material_code"/>
				<field name="material"/>
				<field name="category"/>
			</tree>
		</field>
	</record>
	
	<record id="package_info_action" model="ir.actions.act_window">
		<field name="name">Package Info</field>
		<field name="res_model">package.info</field>
		<field name="view_mode">tree,form</field>
	</record>

	<menuitem 
		id="package_info_menu"
		name="Package Info"
		action="package_info_action"
		groups="base.group_system"
		parent="freight_base.haz_class_main_menu"/>
</odoo>