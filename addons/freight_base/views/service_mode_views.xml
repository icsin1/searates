<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="service_mode_view_form" model="ir.ui.view">
        <field name="name">freight.service.mode.view.form</field>
        <field name="model">freight.service.mode</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <label for="name"/>
                    <div class="oe_title">
                        <h1><field name="name" /></h1>
                    </div>
                    <group>
                        <group>
                            <field name="code" />
                        </group>
                        <group>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="description" string="Summary">
                            <field name="description" />
                        </page>
                        <page name="configurations" string="Configurations">
                            <group>
                                <group>
                                    <field name="have_main_carriage" widget="boolean_toggle"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="service_mode_view_tree" model="ir.ui.view">
        <field name="name">freight.service.mode.view.tree</field>
        <field name="model">freight.service.mode</field>
        <field name="arch" type="xml">
            <tree import="0" delete="0">
                <field name="sequence" widget="handle"/>
                <field name="code" />
                <field name="name" />
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>
    <record id="service_mode_action" model="ir.actions.act_window">
        <field name="name">Service Mode</field>
        <field name="res_model">freight.service.mode</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
    <menuitem
        id="service_mode_menu"
        name="Service Modes"
        action="service_mode_action"
        groups="base.group_system,odoo_base.group_freight_technical_support_team"
        parent="freight_base.root_freight_master_configuration"/>
</odoo>
