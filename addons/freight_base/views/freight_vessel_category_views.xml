<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="freight_vessel_category_view_form" model="ir.ui.view">
        <field name="name">freight.vessel.category.view.form</field>
        <field name="model">freight.vessel.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <label for="name"/>
                    <div class="oe_title">
                        <h1><field name="name" /></h1>
                    </div>
                        <label for="description"/>
                        <field name="description"/>
                        <field name="active" invisible="1"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="freight_vessel_category_tree" model="ir.ui.view">
        <field name="name">freight.vessel.category.tree</field>
        <field name="model">freight.vessel.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="freight_vessel_category_action" model="ir.actions.act_window">
        <field name="name">Vessel Category</field>
        <field name="res_model">freight.vessel.category</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="freight_vessel_submenu_category"
        name="Vessel Category"
        action="freight_vessel_category_action"
        parent="freight_base.freight_vessels_menu"
        sequence="2"/>
</odoo>