<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="freight_partner_contract_view_form" model="ir.ui.view">
        <field name="name">freight.partner.contract.view.form</field>
        <field name="model">freight.partner.contract</field>
        <field name="arch" type="xml">
            <form string="Contract">
                <header>
                    <field name="status" widget="statusbar" clickable="1"/>
                </header>
                <sheet>
                    <label for="contract_number"/>
                    <div class="oe_title">
                        <h1><field name="contract_number" placeholder="Contract ID"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" domain="[('parent_id', '=', False)]" options="{'no_create':True}" />
                            <field name="origin_location_id" options="{'no_create': True}" />
                            <field name="destination_location_id" options="{'no_create': True}" />
                        </group>
                        <group>
                            <div class="o_td_label">
                                <label for="date_from" />
                            </div>
                            <div class="o_row">
                                <field name="date_from" widget="daterange" nolabel="1" placeholder="Valid Date From" options="{'related_end_date': 'date_to'}"/>
                                <field name="date_to" widget="daterange" nolabel="1" placeholder="Valid Date To" options="{'related_start_date': 'date_from'}"/>
                            </div>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="freight_partner_contract_view_tree" model="ir.ui.view">
        <field name="name">freight.partner.contract.view.tree</field>
        <field name="model">freight.partner.contract</field>
        <field name="arch" type="xml">
            <tree string="Contracts">
                <field name="contract_number" />
                <field name="partner_id" />
                <field name="origin_location_id" />
                <field name="destination_location_id" />
                <field name="status" />
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_freight_partner_contract">
        <field name="name">Contract</field>
        <field name="res_model">freight.partner.contract</field>
        <field name="view_mode">tree,form</field>
    </record>
