<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="freight_adjustment_ratio_type_view_form" model="ir.ui.view">
        <field name="name">freight.adjustment.ratio.type.view.form</field>
        <field name="model">freight.adjustment.ratio.type</field>
        <field name="arch" type="xml">
            <form string="Adjustment Ratio Type">
                <sheet>
                    <label for="name"/>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="is_package_group" widget="boolean_toggle" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="freight_adjustment_ratio_type_view_tree" model="ir.ui.view">
        <field name="name">freight.adjustment.ratio.type.view.tree</field>
        <field name="model">freight.adjustment.ratio.type</field>
        <field name="arch" type="xml">
            <tree string="Adjustment Ratio Type">
                <field name="name" />
                <field name="is_package_group" widget="boolean_toggle" />
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_freight_adjustment_ratio_type">
        <field name="name">Adjustment Ratio Type</field>
        <field name="res_model">freight.adjustment.ratio.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="freight_adjustment_ratio_type_menu"
        name="Adjustment Ratio Type"
        action="action_freight_adjustment_ratio_type"
        parent="freight_base.root_freight_master_configuration"/>
</odoo>
