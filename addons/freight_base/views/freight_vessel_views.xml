<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="freight_vessel_view_form" model="ir.ui.view">
        <field name="name">freight.vessel.view.form</field>
        <field name="model">freight.vessel</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <label for="name"/>
                    <div class="oe_title">
                        <h1><field name="name" /></h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="carrier_id" />
                            <field name="imo_number" required="1"/>
                            <field name="mmsi_number"/>
                        </group>
                        <group>
                            <field name="category_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="country_id"  options="{'no_create': True, 'no_open': True}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="freight_vessel_view_tree" model="ir.ui.view">
        <field name="name">freight.vessel.view.tree</field>
        <field name="model">freight.vessel</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code"/>
                <field name="name"/>
                <field name="imo_number"/>
                <field name="mmsi_number"/>
            </tree>
        </field>
    </record>

    <record id="freight_vessel_action" model="ir.actions.act_window">
        <field name="name">Vessel</field>
        <field name="res_model">freight.vessel</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="freight_vessels_menu"
        name="Vessels"
        parent="root_freight_admin_manage_menu"
        sequence="99"/>
    <menuitem
        id="freight_vessels_submenu"
        name="Vessel"
        action="freight_vessel_action"
        parent="freight_vessels_menu"
        sequence="1"/>    
</odoo>
