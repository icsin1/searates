<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="cargo_type_view_search" model="ir.ui.view">
        <field name="name">cargo.type.view.search</field>
        <field name="model">cargo.type</field>
        <field name="arch" type="xml">
            <search>
                <field name="display_name" string="Cargo"/>
                <filter name="group_by_transport_mode" string="Transport Mode" context="{'group_by': 'transport_mode_id'}" />
            </search>
        </field>
    </record>
    <record id="cargo_type_view_form" model="ir.ui.view">
        <field name="name">cargo.type.view.form</field>
        <field name="model">cargo.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <label for="name"/>
                    <div class="oe_title">
                        <h1><field name="name" /></h1>
                    </div>
                    <group>
                        <group>
                            <field name="code" />
                            <field name="transport_mode_id" options="{'no_create': True}"/>
                            <field name="calculated_dimension_lwh" widget="boolean_toggle" string="Calculated Dimension LWH"/>
                        </group>
                        <group>
                            <field name="is_package_group" widget="boolean_toggle"/>
                            <field name="active" widget="boolean_toggle"/>
                            <field name="is_courier_shipment" widget="boolean_toggle"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="description" string="Summary">
                            <field name="description" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="cargo_type_view_tree" model="ir.ui.view">
        <field name="name">cargo.type.view.tree</field>
        <field name="model">cargo.type</field>
        <field name="arch" type="xml">
            <tree import="0" delete="1">
                <field name="sequence" widget="handle"/>
                <field name="code" />
                <field name="name" />
                <field name="transport_mode_id" />
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>
    <record id="cargo_type_action" model="ir.actions.act_window">
        <field name="name">Cargo Type</field>
        <field name="res_model">cargo.type</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{'search_default_group_by_transport_mode': 1}</field>
    </record>
    <menuitem
        id="cargo_type_menu"
        name="Cargo Types"
        action="cargo_type_action"
        groups="base.group_system,odoo_base.group_freight_technical_support_team"
        parent="freight_base.root_freight_master_configuration"/>
</odoo>
