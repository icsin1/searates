<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="transport_mode_view_form" model="ir.ui.view">
        <field name="name">transport.mode.view.form</field>
        <field name="model">transport.mode</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <label for="name"/>
                    <div class="oe_title">
                        <h1><field name="name" /></h1>
                    </div>
                    <group>
                        <group>
                            <field name="code" />
                            <field name="mode_type" required="1" widget="radio" options="{'horizontal': True}"/>
                        </group>
                        <group>
                            <field name="active" widget="boolean_toggle"/>
                            <field name="allowed_route_mode_ids" widget="many2many_tags" options="{'no_create': True}" required="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="description" string="Summary">
                            <field name="description" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="transport_mode_view_tree" model="ir.ui.view">
        <field name="name">transport.mode.view.tree</field>
        <field name="model">transport.mode</field>
        <field name="arch" type="xml">
            <tree import="0" delete="0">
                <field name="sequence" widget="handle"/>
                <field name="code" />
                <field name="name" />
                <field name="mode_type" />
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>
    <record id="transport_mode_action" model="ir.actions.act_window">
        <field name="name">Transport Mode</field>
        <field name="res_model">transport.mode</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
    <menuitem
        id="transport_mode_menu"
        name="Transport Modes"
        action="transport_mode_action"
        groups="base.group_system,odoo_base.group_freight_technical_support_team"
        parent="freight_base.root_freight_master_configuration"/>
</odoo>
