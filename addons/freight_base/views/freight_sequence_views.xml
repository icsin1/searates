<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="freight_sequence_view_tree" model="ir.ui.view">
        <field name="name">freight.sequence.view.tree</field>
        <field name="model">freight.sequence</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="freight_product_id" />
                <field name="ir_model_id" class="font-weight-bold text-primary"/>
                <field name="ir_field_id" class="font-weight-bold text-info"/>
                <field name="ir_sequence_id" optional="hide"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="freight_sequence_view_form" model="ir.ui.view">
        <field name="name">freight.sequence.view.form</field>
        <field name="model">freight.sequence</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1 class="float-right"><field name="preview" class="badge badge-info"/></h1>
                    <label for="name"/>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="ir_model_id" options="{'no_create':1}"/>
                            <field name="freight_product_id" domain="[('model_id', '=', ir_model_id)]" context="{'default_model_id': ir_model_id}" />
                            <field name="ir_field_id" options="{'no_create':1}"/>
                            <field name="company_id" options="{'no_create':1}" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name="date_field_id" options="{'no_create': 1}"/>
                            <field name="ir_sequence_id"/>
                            <field name="number_increment"/>
                            <field name="padding"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="sequence_format"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="freight_sequence_action" model="ir.actions.act_window">
        <field name="name">Serial Number</field>
        <field name="res_model">freight.sequence</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="freight_sequence_menu"
        name="Serial Number"
        action="freight_sequence_action"
        parent="freight_base.root_freight_admin_manage_menu"
        sequence="11"/>

</odoo>
