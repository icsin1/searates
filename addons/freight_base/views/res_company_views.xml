<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_company_form_inherit_freight_base" model="ir.ui.view">
        <field name="name">freight_base.res.company.view.form.inherit</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="reg_tax_info" string="Registration/Tax Info">
                    <group>
                        <group>
                            <field name="vat" string="Vat"/>
                            <field name="customs_reg_number"/>
                            <field name="agent_iata_code"/>
                        </group>
                        <group>
                            <field name="company_registry" string="Company Registration No."/>
                            <field name="agent_iata_number"/>
                            <field name="date_of_incorporation"/>
                        </group>
                    </group>
                </page>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="code" required="1"/>
                <field name="un_location_id"/>
                <field name="tz" required="1" />
            </xpath>
            <xpath expr="//field[@name='vat']" position='attributes'>
                <attribute name='invisible'>1</attribute>
            </xpath>
            <xpath expr="//field[@name='company_registry']" position='attributes'>
                <attribute name='invisible'>1</attribute>
            </xpath>
        </field>
    </record>
</odoo>
