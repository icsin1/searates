<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_partner_address_form" model="ir.ui.view">
        <field name="name">res_partner_address.view.form</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <form string="Contact / Address">
                <sheet>
                    <field name="type" groups="base.group_no_one"/>
                    <field name="parent_id" invisible="1"/>
                    <group>
                        <group>
                            <field name="name" string="Title/Name" required="1"/>
                            <label for="street" string="Address"/>
                            <div>
                                <div class="o_address_format" name="div_address">
                                    <field name="street" placeholder="Street..." class="o_address_street"/>
                                    <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                    <field name="city" placeholder="City" class="o_address_city"/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                    <field name="country_id" placeholder="Country" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" required="1"/>
                                </div>
                            </div>
                        </group>
                        <group>
                            <field name="email" widget="email"/>
                            <field name="phone" widget="phone"/>
                            <field name="mobile" widget="phone"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="comment" placeholder="Internal notes..."/>
                    </group>
                    <field name="lang" invisible="True"/>
                    <field name="user_id" invisible="True"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="res_partner_freight_inehrit_view_form" model="ir.ui.view">
        <field name="name">res.partner.freight.inehrit.view.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group/group" position="inside">
                <field name="category_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="freight_carrier_id" required="context.get('carrier_agent')" />
            </xpath>
            <xpath expr="//field[@name='bank_ids']//field[@name='acc_number']" position="after">
                <field name="visible_on_report" widget="boolean_toggle"/>
            </xpath>
            <xpath expr="//field[@name='bank_ids']/tree" position="attributes">
                <attribute name="editable"></attribute>
            </xpath>
            <xpath expr="//label[@for='email']" position="before">
                <field name="fax" string="Fax"/>
            </xpath>
            <xpath expr="//page[@name='contact_addresses']/field/form/sheet/field[@name='type']" position="replace">
                <field name="addr_type" required="1"/>
                <field name="type" invisible="1"/>
            </xpath>
            <xpath expr="//page[@name='contact_addresses']/field/form/sheet/group[1]/group[2]/field[@name='company_id']" position="before">
                <field name="fax" string="Fax"/>
            </xpath>
            <xpath expr="//page[@name='contact_addresses']" position="attributes">
                <attribute name="string">Addresses</attribute>
            </xpath>
            <xpath expr="//span[@name='address_name']/field[@name='type']" position="attributes">
                <attribute name="attrs">{'invisible': True, 'required': [('is_company','!=', True)], 'readonly': [('user_ids', '!=', [])]}</attribute>
            </xpath>
            <xpath expr="//form[1]/sheet[1]/group[1]/group[1]/span[@name='address_name']/b" position="replace">
                <span>Address</span>
            </xpath>
            <xpath expr="//span[@name='address_name']" position="before">
                <field name="mark_as_default"  widget="boolean_toggle"/>
            </xpath>
            <xpath expr="//field[@name='child_ids']//form//field[@name='name']" position="before">
                <field name="mark_as_default"  widget="boolean_toggle"/>
            </xpath>
            <xpath expr="//div[hasclass('oe_title')]" position="after">
                <field name="customer_code" />
            </xpath>
            <xpath expr="//form" position="attributes">
                <attribute name="js_class">partner_form</attribute>
            </xpath>
            <xpath expr="//field[@name='category_id']" position="after">
                <field name="contact_person" />
            </xpath>
			<xpath expr="//field[@name='state_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='child_ids']//form//field[@name='state_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='child_ids']//kanban//div[hasclass('oe_kanban_details')]//field[@name='state_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='contact_person']" position="after">
                <field name="internal_ref_no"/>
            </xpath>
            <xpath expr="//field[@name='email']" position="attributes">
                <attribute name="required">1</attribute>
            </xpath>
        </field>
    </record>
    <record id="res_partner_inherit_view_kanban" model="ir.ui.view">
        <field name="name">res.partner.inherit.view.kanban</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.res_partner_kanban_view"/>
        <field name="arch" type="xml">
            <xpath expr="//strong[hasclass('o_kanban_record_title')]" position="after">
                <field name="category_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
            </xpath>
        </field>
    </record>
    <record id="res_partner_inherit_view_search" model="ir.ui.view">
        <field name="name">res.partner.inherit.view.search</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='parent_id']" position="after">
                <field name="category_ids" string="Party Types"/>
            </xpath>
            <xpath expr="//filter[@name='group_company']" position="attributes">
                <attribute name="context">{'group_by': 'company_id'}</attribute>
            </xpath>
            <xpath expr="//filter[@name='group_country']" position="after">
                <filter name="group_party_types" string="Party Types" context="{'group_by': 'category_ids'}"/>
            </xpath>
        </field>
    </record>

</odoo>
