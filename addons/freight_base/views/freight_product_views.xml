<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="freight_product_view_tree" model="ir.ui.view">
        <field name="name">freight.product.view.tree</field>
        <field name="model">freight.product</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="model_id" />
                <field name="model_name" invisible="1"/>
                <field name="product_type" />
            </tree>
        </field>
    </record>

    <record id="freight_product_view_form" model="ir.ui.view">
        <field name="name">freight.product.view.form</field>
        <field name="model">freight.product</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <label for="name"/>
                    <div class="oe_title">
                        <h1><field name="name" /></h1>
                    </div>
                    <group>
                        <group>
                            <field name="model_id" />
                            <field name="model_name" invisible="1"/>
                        </group>
                        <group>
                            <field name="product_type" />
                        </group>
                    </group>
                    <group string="Shipment Matching Rule">
                        <field name="match_domain" nolabel="1" widget="domain" options="{'model': 'model_name', 'in_dialog': True}" attrs="{'invisible': [('model_id', '=', False)]}"/>
                    </group>
                    <notebook>
                        <page name="description" string="Summary">
                            <field name="description" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="freight_product_action" model="ir.actions.act_window">
        <field name="name">Freight Product</field>
        <field name="res_model">freight.product</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('product_type', '=', 'general')]</field>
        <field name="context">{'default_product_type': 'general'}</field>
    </record>

    <menuitem
        id="freight_product_menu"
        name="Freight Product"
        action="freight_product_action"
        parent="root_freight_master_configuration"
        sequence="0"/>
</odoo>
