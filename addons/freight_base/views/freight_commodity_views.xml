<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="freight_commodity_view_form" model="ir.ui.view">
        <field name="name">freight.commodity.view.form</field>
        <field name="model">freight.commodity</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <label for="name"/>
                    <div class="oe_title">
                        <h1><field name="name" /></h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="hazardous" widget="boolean_toggle"/>
                        </group>
                        <group>
                            <field name="hs_code_id" options="{'no_create':True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="description" string="Summary">
                            <field name="description" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="freight_commodity_view_tree" model="ir.ui.view">
        <field name="name">freight.commodity.view.tree</field>
        <field name="model">freight.commodity</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="hs_code_id"/>
            </tree>
        </field>
    </record>

    <record id="freight_commodity_view_search" model="ir.ui.view">
        <field name="name">freight.commodity.view.search</field>
        <field name="model">freight.commodity</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="hs_code_id"/>
                <separator/>
                <filter string="Hazardous" name="is_hazardous" domain="[('hazardous', '=', True)]"/>
                <separator/>
                <group expand="0" name="group_by" string="Group By">
                    <filter name="group_hs_code_id" string="HS Code" context="{'group_by': 'hs_code_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="freight_commodity_action" model="ir.actions.act_window">
        <field name="name">Commodity</field>
        <field name="res_model">freight.commodity</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="freight_commodity_menu"
        name="Commodity"
        action="freight_commodity_action"
        parent="freight_base.root_freight_admin_manage_menu"
        sequence="4"/>
</odoo>
