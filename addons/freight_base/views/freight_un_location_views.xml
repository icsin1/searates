<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="freight_un_location_view_form" model="ir.ui.view">
        <field name="name">freight.un.location.view.form</field>
        <field name="model">freight.un.location</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h2 class="float-right"><field name="source" class="badge badge-info"/></h2>
                    <label for="name"/>
                    <div class="oe_title">
                        <h1><field name="name" attrs="{'readonly': [('source', '!=', 'manual')]}"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="country_id" options="{'no_create':True}" attrs="{'readonly': [('source', '!=', 'manual')]}"/>
                            <field name="loc_code" attrs="{'readonly': [('source', '!=', 'manual')]}"/>
                            <field name="coordinates" attrs="{'readonly': [('source', '!=', 'manual')]}"/>
                            <field name="has_rail" attrs="{'readonly': [('source', '!=', 'manual')]}"/>
                            <field name="has_customs" attrs="{'readonly': [('source', '!=', 'manual')]}"/>
                            <field name="has_seaport" attrs="{'readonly': [('source', '!=', 'manual')]}"/>
                            <field name="has_outport" attrs="{'readonly': [('source', '!=', 'manual')]}"/>
                            <field name="has_airport" attrs="{'readonly': [('source', '!=', 'manual')]}"/>
                            <field name="has_post" attrs="{'readonly': [('source', '!=', 'manual')]}"/>
                            <field name="port_name" attrs="{'readonly': [('source', '!=', 'manual')]}"/>
                        </group>
                        <group>
                            <field name="country_state_id" options="{'no_create':True}" attrs="{'readonly': [('source', '!=', 'manual')]}"/>
                            <field name="sub_division" attrs="{'readonly': [('source', '!=', 'manual')]}"/>
                            <field name="tz" attrs="{'readonly': [('source', '!=', 'manual')]}"/>
                            <field name="has_discharge" attrs="{'readonly': [('source', '!=', 'manual')]}"/>
                            <field name="has_road" attrs="{'readonly': [('source', '!=', 'manual')]}"/>
                            <field name="sea_port_name" attrs="{'invisible':[('has_seaport','!=',True)], 'required':[('has_seaport','=',True)], 'readonly': [('source', '!=', 'manual')]}"/>
                            <field name="has_store" attrs="{'readonly': [('source', '!=', 'manual')]}"/>
                            <field name="has_unload" attrs="{'readonly': [('source', '!=', 'manual')]}"/>
                            <field name="has_terminal" attrs="{'readonly': [('source', '!=', 'manual')]}"/>
                            <field name="air_port_name" attrs="{'invisible':[('has_airport','!=',True)], 'required':[('has_airport','=',True)], 'readonly': [('source', '!=', 'manual')]}"/>
                            <field name="iata_code" attrs="{'readonly': [('source', '!=', 'manual')]}"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="freight_un_location_view_tree" model="ir.ui.view">
        <field name="name">freight.un.location.view.tree</field>
        <field name="model">freight.un.location</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="country_id"/>
                <field name="loc_code"/>
                <field name="sub_division"/>
                <field name="coordinates"/>
                <field name="active" invisible="1"/>
                <field name="source" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="freight_un_location_view_search" model="ir.ui.view">
        <field name="name">freight.un.location.view.search</field>
        <field name="model">freight.un.location</field>
        <field name="arch" type="xml">
            <search>
                <field name="country_id"/>
                <field name="loc_code"/>
                <field name="sub_division"/>
                <field name="port_name"/>
                <field name="active"/>
                <field name="source" invisible="1"/>
                <separator/>
                <filter name="archived" string="Archived" domain="[('active', '=', False)]"/>
                <separator/>
                <filter name="manual_source" string="Manual Entry" domain="[('source', '=', 'manual')]"/>
                <separator/>
                <filter string="Rail" name="has_rail" domain="[('has_rail', '=', True)]"/>
                <filter string="Road" name="has_road" domain="[('has_road', '=', True)]"/>
                <filter string="Seaport" name="has_seaport" domain="[('has_seaport', '=', True)]"/>
                <filter string="Airport" name="has_airport" domain="[('has_airport', '=', True)]"/>
                <filter string="Terminal" name="has_terminal" domain="[('has_terminal', '=', True)]"/>
                <separator/>
                <group expand="0" name="group_by" string="Group By">
                    <filter name="group_country_id" string="Country" context="{'group_by': 'country_id'}"/>
                    <filter name="group_source" string="Data Source" context="{'group_by': 'source'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="freight_un_location_action" model="ir.actions.act_window">
        <field name="name">UN/LOCODE Locations</field>
        <field name="res_model">freight.un.location</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="freight_un_location_menu"
        name="UN/LOCODE Locations"
        action="freight_un_location_action"
        parent="root_freight_admin_manage_menu"
        sequence="3"/>

</odoo>
