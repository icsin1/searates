<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_freight_shipment_tag_tree" model="ir.ui.view">
        <field name="name">freight.shipment.tag.tree</field>
        <field name="model">freight.shipment.tag</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_freight_shipment_tag_form" model="ir.ui.view">
        <field name="name">freight.shipment.tag.form</field>
        <field name="model">freight.shipment.tag</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group col="4">
                        <field name="name"/>
                        <field name="active" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_freight_shipment_tag_search" model="ir.ui.view">
        <field name="name">freight.shipment.tag.search</field>
        <field name="model">freight.shipment.tag</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="act_open_freight_shipment_tag_view">
        <field name="name">Freight Shipment Tag</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">freight.shipment.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_freight_shipment_tag_search"/>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <menuitem id="menu_freight_shipment_tag"
        parent="freight_base.root_freight_master_configuration"
        sequence="100"
        action="act_open_freight_shipment_tag_view"/>
</odoo>
