<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.actions.act_window" id="action_countries_view">
        <field name="name">countries</field>
        <field name="res_model">res.country</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="action_countries_state_view">
        <field name="name">Fed. States</field>
        <field name="res_model">res.country.state</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="action_countries_group_view">
        <field name="name">Country Group</field>
        <field name="res_model">res.country.group</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="action_countries_cities_view">
        <field name="name">Cities</field>
        <field name="res_model">res.city</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="localization_menu"
        name="Localization"
        parent="freight_base.root_freight_admin_manage_menu"
        sequence="20"/>
    <menuitem
        id="localization_countries"
        name="Countries"
        action="action_countries_view"
        parent="localization_menu"
        sequence="1"/>
    <menuitem
        id="localization_countries_state"
        name="Fed. States"
        action="action_countries_state_view"
        parent="localization_menu"
        sequence="2"/>
    <menuitem
        id="localization_countries_group"
        name="Country Group"
        action="action_countries_group_view"
        parent="localization_menu"
        sequence="3"/>
    <menuitem
        id="localization_countries_cities"
        name="Cities"
        action="action_countries_cities_view"
        parent="localization_menu"
        sequence="4"/>
</odoo>
