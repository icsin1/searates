<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="freight_event_type_view_form" model="ir.ui.view">
        <field name="name">freight.event.type.view.form</field>
        <field name="model">freight.event.type</field>
        <field name="arch" type="xml">
            <form string="Events">
                <sheet>
                    <label for="name"/>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Event Name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="code" />
                            <field name="public_visible" optional="hide" widget="boolean_toggle" />
                        </group>
                    </group>
                    <notebook>
                        <page name="description" string="Summary">
                            <field name="description" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="freight_event_type_view_tree" model="ir.ui.view">
        <field name="name">freight.event.type.view.tree</field>
        <field name="model">freight.event.type</field>
        <field name="arch" type="xml">
            <tree string="Events">
                 <field name="sequence" widget="handle" />
                <field name="code" />
                <field name="name" />
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_freight_event_type">
        <field name="name">Event Type</field>
        <field name="res_model">freight.event.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="freight_event_type_menu"
        name="Event Types"
        action="action_freight_event_type"
        parent="freight_base.root_freight_master_configuration"/>
</odoo>
