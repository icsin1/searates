<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="freight_port_view_form" model="ir.ui.view">
        <field name="name">freight.port.view.form</field>
        <field name="model">freight.port</field>
        <field name="arch" type="xml">
            <form string="Port">
                <sheet>
                    <label for="name"/>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Port Name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="code" />
                            <field name="country_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="coordinates"/>
                        </group>
                        <group>
                            <field name="phone" />
                            <field name="website" />
                            <field name="transport_mode_id" options="{'no_create': True, 'no_open': True}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="freight_port_view_tree" model="ir.ui.view">
        <field name="name">freight.port.view.tree</field>
        <field name="model">freight.port</field>
        <field name="arch" type="xml">
            <tree string="Ports">
                <field name="code" />
                <field name="name" />
                <field name="country_id" />
                <field name="coordinates" />
                <field name="phone" />
                <field name="website" />
                <field name="transport_mode_id"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_freight_port">
        <field name="name">Port</field>
        <field name="res_model">freight.port</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="freight_port_menu"
        name="Ports"
        action="action_freight_port"
        parent="freight_base.root_freight_admin_manage_menu"
        sequence="14"/>
</odoo>
