<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="freight_warehouse_depot_view_form" model="ir.ui.view">
        <field name="name">freight.warehouse.depot.view.form</field>
        <field name="model">freight.warehouse.depot</field>
        <field name="arch" type="xml">
            <form string="Port">
                <sheet>
                    <label for="depot_name"/>
                    <div class="oe_title">
                        <h1><field name="depot_name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="wd_type"/>
                            <field name="depot_code"/>
                            <field name="freight_port_id" options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="door"/>
                            <field name="is_external_yard"/>
                        </group>
                        <group>
                            <field name="depot_name_local"/>
                            <field name="nation"/>
                            <field name="operator"/>
                            <field name="pic"/>
                            <field name="additional_details"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="freight_warehouse_depot_view_tree" model="ir.ui.view">
        <field name="name">freight.warehouse.depot.view.tree</field>
        <field name="model">freight.warehouse.depot</field>
        <field name="arch" type="xml">
            <tree string="Warehouse/Depot">
                <field name="wd_type"/>
                <field name="depot_name"/>
                <field name="depot_code"/>
                <field name="freight_port_id"/>
                <field name="nation"/>
                <field name="operator"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_freight_warehouse_depot">
        <field name="name">Warehouse/Depot</field>
        <field name="res_model">freight.warehouse.depot</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="freight_warehouse_depot_menu"
        name="Warehouse/Depot"
        action="action_freight_warehouse_depot"
        parent="freight_base.root_freight_admin_manage_menu"
        sequence="15"/>
</odoo>
