<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_res_bank_form" model="ir.ui.view">
            <field name="name">res.bank.form.inherit</field>
            <field name="model">res.bank</field>
            <field name="inherit_id" ref="base.view_res_bank_form" />
            <field name="arch" type="xml">
                <field name="bic" position="after">
                    <field name="iban_number" />
                </field>
            </field>
        </record>

        <menuitem id="menu_action_res_bank_form"
            action="base.action_res_bank_form"
            parent="account.account_banks_menu"
            sequence="1"/>

        <menuitem id="menu_action_res_partner_bank_form"
            action="base.action_res_partner_bank_account_form"
            parent="account.account_banks_menu"
            sequence="2"/>

    </data>
</odoo>