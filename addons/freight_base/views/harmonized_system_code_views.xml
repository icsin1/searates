<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="harmonized_system_code_search" model="ir.ui.view">
        <field name="name">harmonized.system.code.view.search</field>
        <field name="model">harmonized.system.code</field>
        <field name="arch" type="xml">
            <search>
                <field name="display_name" />
                <field name="country_id" />
                <filter name="filter_parent_only" string="Main Category" domain="[('parent_id', '=', False)]" />
                <filter name="group_by_country" string="Country" context="{'group_by': 'country_id'}" />
            </search>
        </field>
    </record>

    <record id="harmonized_system_code_view_tree" model="ir.ui.view">
        <field name="name">harmonized.system.code.view.tree</field>
        <field name="model">harmonized.system.code</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="code" />
                <field name="child_ids" />
                <field name="code_range" />
                <field name="country_id" />
            </tree>
        </field>
    </record>

    <record id="harmonized_system_code_child_views_action" model="ir.actions.act_window">
        <field name="name">HS Codes</field>
        <field name="res_model">harmonized.system.code</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('parent_id', '=', active_id)]</field>
        <field name="context">{'default_parent_id': active_id}</field>
    </record>

    <record id="harmonized_system_code_view_form" model="ir.ui.view">
        <field name="name">harmonized.system.code.view.form</field>
        <field name="model">harmonized.system.code</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(harmonized_system_code_child_views_action)d" type="action" class="oe_stat_button" icon="fa-bars">
                            <field name="child_count" string="Childs" widget="statinfo"/>
                        </button>
                    </div>
                    <label for="name"/>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Harmonized Name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="code" />
                        </group>
                        <group>
                            <field name="parent_id" />
                            <field name="country_id" options="{'no_create': 1}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="harmonized_system_code_action" model="ir.actions.act_window">
        <field name="name">HS Codes</field>
        <field name="res_model">harmonized.system.code</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{'search_default_filter_parent_only': 1}</field>
    </record>

    <menuitem
        id="harmonized_system_code_menu"
        name="HS Codes"
        action="harmonized_system_code_action"
        parent="root_freight_admin_manage_menu"
        sequence="2"/>
</odoo>
