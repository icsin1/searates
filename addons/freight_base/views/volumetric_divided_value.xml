<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_volumetric_divided_value_tree" model="ir.ui.view">
        <field name="name">volumetric.divided.value.tree</field>
        <field name="model">volumetric.divided.value</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="transport_mode_id" required="1" options="{'no_open': True, 'no_create': True}"/>
                <field name="uom_id" options="{'no_open': True, 'no_create': True}" required="1"/>
                <field name="divided_value" required="1"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="act_open_volumetric_divided_value">
        <field name="name">Volumetric Divided Value</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">volumetric.divided.value</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem id="menu_volumetric_divided_value"
        parent="freight_base.root_freight_master_configuration"
        sequence="100"
        action="act_open_volumetric_divided_value"/>

</odoo>
