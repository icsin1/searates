<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="container_category_view_form" model="ir.ui.view">
        <field name="name">freight.container.category.view.form</field>
        <field name="model">freight.container.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <label for="name"/>
                    <div class="oe_title">
                        <h1><field name="name" /></h1>
                    </div>
                    <group>
                        <group>
                            <field name="is_refrigerated" widget="boolean_toggle"/>
                            <field name="is_oog_container" widget="boolean_toggle"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="container_category_view_tree" model="ir.ui.view">
        <field name="name">freight.container.category.view.tree</field>
        <field name="model">freight.container.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>
    <record id="container_category_action" model="ir.actions.act_window">
        <field name="name">Container Category</field>
        <field name="res_model">freight.container.category</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
    <menuitem
        id="container_category_menu"
        name="Container Category"
        action="container_category_action"
        groups="base.group_system"
        parent="freight_base.root_freight_admin_manage_menu"/>
</odoo>
