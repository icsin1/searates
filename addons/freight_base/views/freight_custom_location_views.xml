<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="freight_custom_location_view_form" model="ir.ui.view">
        <field name="name">freight.custom.location.view.form</field>
        <field name="model">freight.custom.location</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <label for="name"/>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Custom Name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="country_id" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="state_id" options="{'no_create': True}"/>
                            <field name="city_id" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="freight_custom_location_action" model="ir.actions.act_window">
        <field name="name">Custom Location</field>
        <field name="res_model">freight.custom.location</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
    <menuitem
        id="freight_custom_location_menu"
        name="Custom Locations"
        action="freight_custom_location_action"
        parent="freight_base.root_freight_admin_manage_menu"
        sequence="5"/>
</odoo>
