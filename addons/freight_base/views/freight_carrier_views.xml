<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="freight_carrier_view_form" model="ir.ui.view">
        <field name="name">freight.carrier.view.form</field>
        <field name="model">freight.carrier</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="logo" widget="image" class="oe_avatar"/>
                    <label for="name"/>
                    <div class="oe_title">
                        <h1><field name="name" /></h1>
                    </div>
                    <group>
                        <group>
                            <field name="email" widget="email"/>
                            <field name="identifier"/>
                            <field name="transport_mode_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="is_sea_carrier" widget="boolean_toggle" attrs="{'invisible': [('mode_type', '!=', 'sea')]}"/>
                            <field name="scac_code" attrs="{'invisible':[('is_sea_carrier','!=',True)], 'required':[('is_sea_carrier','=',True)]}"/>
                            <field name="airline_prefix" attrs="{'invisible':[('is_air_carrier','!=',True)], 'required':[('is_air_carrier','=',True)]}"/>
                            <field name="mode_type" invisible="1" />
                        </group>
                        <group>
                            <field name="contact_name" string="Contact Name"/>
                            <field name="partner_id" domain="[('is_company', '=', True)]" options="{'no_create':True}"/>
                            <field name="is_air_carrier" widget="boolean_toggle" attrs="{'invisible': [('mode_type', '!=', 'air')]}"/>
                            <field name="iata_code" attrs="{'invisible':[('is_air_carrier','!=',True)], 'required':[('is_air_carrier','=',True)]}"/>
                            <field name="is_road_carrier" widget="boolean_toggle" attrs="{'invisible': [('mode_type', '!=', 'land')]}"/>
                            <field name="mode_type" invisible="1" />
                        </group>
                    </group>
                    <notebook>
                        <page name="carrier_agent" string="Carrier Agent">
                            <field name="carrier_agent_ids" context="{'default_category_ids': [%(freight_base.org_type_carrier_agent)d]}">
                                <tree>
                                    <field name="name" />
                                </tree>
                            </field>
                        </page>
                        <page name="description" string="Summary">
                            <field name="description" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="freight_carrier_view_tree" model="ir.ui.view">
        <field name="name">freight.carrier.view.tree</field>
        <field name="model">freight.carrier</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="email"/>
                <field name="contact_name"/>
                <field name="partner_id"/>
                <field name="transport_mode_id" />
            </tree>
        </field>
    </record>

    <record id="freight_carrier_view_search" model="ir.ui.view">
        <field name="name">freight.carrier.view.search</field>
        <field name="model">freight.carrier</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="email"/>
                <field name="contact_name"/>
                <field name="identifier"/>
                <field name="partner_id"/>
                <field name="transport_mode_id" />
                <field name="scac_code"/>
                <field name="iata_code"/>
                <field name="airline_prefix"/>
                <separator/>
                <filter string="Sea Carrier" name="sea_carrier" domain="[('is_sea_carrier', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <group expand="0" name="group_by" string="Group By">
                    <filter name="group_transport_mode_id" string="Transport Mode" context="{'group_by': 'transport_mode_id'}"/>
                    <filter name="group_partner_id" string="Related Organization" context="{'group_by': 'partner_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="freight_carrier_action" model="ir.actions.act_window">
        <field name="name">Carriers</field>
        <field name="res_model">freight.carrier</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_group_transport_mode_id': 1}</field>
    </record>

    <record id="freight_carrier_agent_action" model="ir.actions.act_window">
        <field name="name">Carrier Agent</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form,activity</field>
        <field name="search_view_id" ref="base.view_res_partner_filter"/>
        <field name="context" eval="{'default_is_company': True, 'default_category_ids': [(4, ref('freight_base.org_type_carrier_agent'))], 'carrier_agent': True}"/>
        <field name="domain" eval="[('category_ids', 'in', [ref('freight_base.org_type_carrier_agent')])]" />
    </record>

    <menuitem
        id="freight_carrier_menu"
        name="Carriers"
        action="freight_carrier_action"
        parent="freight_base.root_freight_admin_manage_menu"
        sequence="1"/>

    <menuitem
        id="freight_carrier_agent_menu"
        name="Carrier Agent"
        action="freight_carrier_agent_action"
        parent="freight_base.root_freight_admin_manage_menu"
        sequence="1"/>
</odoo>
