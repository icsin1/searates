<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="freight_document_type_form" model="ir.ui.view">
        <field name="name">freight.document.type.form</field>
        <field name="model">freight.document.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <label for="name"/>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Document Type"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="sequence" invisible="1"/>
                            <field name="model_id"/>
                            <field name="document_mode"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group>
                            <field name="report_template_ref_id" attrs="{'required': [('document_mode', '=', 'out')], 'invisible': [('document_mode', '=', 'in')]}"/>
                            <field name="report_action_id" groups="base.group_no_one"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="freight_document_type_tree" model="ir.ui.view">
        <field name="name">freight.document.type.tree</field>
        <field name="model">freight.document.type</field>
        <field name="arch" type="xml">
            <tree default_order="sequence">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="model_id"/>
                <field name="document_mode"/>
                <field name="active" widget="boolean_toggle" />
            </tree>
        </field>
    </record>

    <record id="freight_document_type_action" model="ir.actions.act_window">
        <field name="name">Document Type</field>
        <field name="res_model">freight.document.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="freight_document_type_menu"
        name="Document Types"
        action="freight_document_type_action"
        parent="freight_base.root_freight_master_configuration"
        sequence="10"/>

    <menuitem
        id="menu_document_report_template"
        name="Document Reports"
        parent="root_freight_admin_configurations"/>

    <menuitem
        id="menu_docx_field_template"
        name="Docx Reports"
        action="base_document_reports.action_docx_template"
        parent="freight_base.menu_document_report_template"/>

</odoo>
