<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Custom master be type -->
    <record id="custom_master_be_type_tree" model="ir.ui.view">
        <field name="name">custom.master.be.type.tree</field>
        <field name="model">custom.master.be.type</field>
        <field name="arch" type="xml">
            <tree string="Custom Master BE Type">
                <field name="name"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <record id="custom_master_be_type_form" model="ir.ui.view">
        <field name="name">custom.master.be.type.form</field>
        <field name="model">custom.master.be.type</field>
        <field name="arch" type="xml">
            <form string="Custom Master BE Type">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="active" widget="boolean_toggle"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="custom_master_be_type_action" model="ir.actions.act_window">
        <field name="name">Custom BE Type</field>
        <field name="res_model">custom.master.be.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="custom_master_be_type_menu" name="Custom BE Type"
        parent="freight_base.root_freight_admin_manage_menu" sequence="25"
        action="custom_master_be_type_action"/>

</odoo>
