<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sale</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="15"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='product_general_settings']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//div[@id='product_general_settings']" position="after">
                <div class="row mt16 o_settings_container" name="freight_base_setting">
                    <div class="col-12 col-lg-6 o_setting_box" id="pack_setting">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="pack_uom_id" />
                            <field name="pack_uom_id" class="oe_inline" options="{'no_create_edit': 1, 'no_open': 1}"/>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" id="weight_setting">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="weight_uom_id" />
                            <field name="weight_uom_id" class="oe_inline" options="{'no_create_edit': 1, 'no_open': 1}"/>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" id="volume_setting">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="volume_uom_id" />
                            <field name="volume_uom_id" class="oe_inline" options="{'no_create_edit': 1, 'no_open': 1}"/>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" id="dimension_setting">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="dimension_uom_id" />
                            <field name="dimension_uom_id" class="oe_inline" options="{'no_create_edit': 1, 'no_open': 1}"/>
                        </div>
                    </div>
                        <div class="col-12 col-lg-6 o_setting_box" id="volumetric_divided">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="volumetric_weight_divided_value" />
                            <field name="volumetric_weight_divided_value" class="oe_inline" required="1"/>
                        </div>
                    </div>
                </div>
            </xpath>

            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Freight" string="Freight" data-key="freight_base">
                    <h2>Service Type Mapping</h2>
                    <div class="row mt16 o_settings_container" name="service_type_setting">
                        <div class="col-12 col-lg-6 o_setting_box" id="pack_setting">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="pickup_product_id" />
                                <div class="text-muted">
                                    <field name="pickup_product_id" required="1" options="{'no_create': True, 'no_create_edit': True}" domain="['|', ('company_id', '=', company_id), ('company_id', '=', False)]" context="{'default_company_id': company_id}"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box" id="weight_setting">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="on_carriage_product_id" />
                                <div class="text-muted">
                                    <field name="on_carriage_product_id" required="1" options="{'no_create': True, 'no_create_edit': True}" domain="['|', ('company_id', '=', company_id), ('company_id', '=', False)]" context="{'default_company_id': company_id}"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box" id="volume_setting">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="pre_carriage_product_id" />
                                <div class="text-muted">
                                    <field name="pre_carriage_product_id" required="1" options="{'no_create': True, 'no_create_edit': True}" domain="['|', ('company_id', '=', company_id), ('company_id', '=', False)]" context="{'default_company_id': company_id}"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box" id="volume_setting">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="delivery_product_id" />
                                <div class="text-muted">
                                    <field name="delivery_product_id" required="1" options="{'no_create': True, 'no_create_edit': True}" domain="['|', ('company_id', '=', company_id), ('company_id', '=', False)]" context="{'default_company_id': company_id}"/>
                                </div>
                            </div>
                        </div>
                    </div>

                    <h2>Document Validation</h2>
                    <div class="row mt16 o_settings_container" name="freight_document_settings">
                        <div class="col-12 col-lg-6 o_setting_box" id="file_size_settings">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="doc_file_size" />
                                <field name="doc_file_size" class="oe_inline"/>MB
                                <div class="text-muted">
                                    Maximum upload size is 50 MB
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box" id="file_size_settings">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label for="max_document_history" />
                                <field name="max_document_history" class="oe_inline"/> Document
                                <div class="text-muted">
                                    Maximum number of version to keep in history
                                </div>
                            </div>
                        </div>
                    </div>

                    <h2>Freight Cost as Expense</h2>
                    <div class="row mt16 o_settings_container" name="fm_account_expense_entry">
                        <div class="col-12 col-lg-6 o_setting_box" id="fm_account_expense_entry">
                            <div class="o_setting_left_pane">
                                <field name="module_fm_account_expense_entry" />
                            </div>
                            <div class="o_setting_right_pane">
                                <div class="row">
                                    <div class="col">
                                        <label for="module_fm_account_expense_entry" class="o_form_label" string="Indirect Cost for Jobs and Shipments"/>
                                        <p class="text-muted">Create indirect expense entry for your Freight Costs</p>
                                        <p class="text-muted">This will allow you to create journal entry directly for the costs registered with Jobs and Shipments.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- hide/show contact with prefix -->
                    <h2>Show Contact with Prefix</h2>
                    <div class="row mt16 o_settings_container" name="show_partner_prefix_settings">
                        <div class="col-12 col-lg-6 o_setting_box" id="file_size_settings">
                            <div class="o_setting_left_pane">
                                <field name="show_contact_prefix"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="show_contact_prefix" />
                                <div class="text-muted">
                                    it helps to show contact with their code as prefix.
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </xpath>
        </field>
    </record>

</odoo>
