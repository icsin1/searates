<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="crm_sale_target_view_form" model="ir.ui.view">
        <field name="name">crm.sale.target.view.form</field>
        <field name="model">crm.sale.target</field>
        <field name="arch" type="xml">
            <form string="Target">
                <header>

                    <button name="action_generate_monthly_target" string="Re-Generate Monthly Target Lines"
                            type="object" />
                </header>
                <sheet>
                    <label for="name"/>
                    <div class="oe_title">
                        <h1><field name="name" /></h1>
                    </div>
                    <group>
                        <group name="target_left">
                            <field name="id" invisible="1"/>
                            <field name="is_fields_mandatory" invisible="1"/>
                            <field name="user_id" options="{'no_create': True}"/>
                            <field name="manager_id" options="{'no_create': True}"/>
                            <field name="shipment_type_id" options="{'no_create': True}" attrs="{'readonly': [('id', '>', 0)], 'required': [('is_fields_mandatory' ,'=', False)]}"/>
                            <field name="transport_mode_id" options="{'no_create': True}" attrs="{'readonly': [('id', '>', 0)], 'required': [('is_fields_mandatory' ,'=', False)]}"/>
                           <field name="cargo_type_domain" invisible="1" />
                            <field name="cargo_type_id"  domain="cargo_type_domain" options="{'no_create': True, 'no_open': True}" attrs="{'readonly': [('id', '>', 0)], 'required': [('is_fields_mandatory' ,'=', False)]}"/>
                            <field name="is_package_group" invisible="1"/>
                            <div class="o_td_label">
                                <label for="date_from" string="Target Date"/>
                            </div>
                            <div class="o_row">
                                <field name="date_from" widget="daterange" nolabel="1" placeholder="From" options="{'related_end_date': 'date_to'}"/>
                                <field name="date_to" widget="daterange" nolabel="1" placeholder="To" options="{'related_start_date': 'date_from'}"/>
                            </div>
                            <field name="target_parameter" attrs="{'invisible': [('is_package_group', '=', True)]}"/>
                            <field name="non_fcl_target_parameter" string="Target Parameter" attrs="{'required': [('is_package_group', '=', True)], 'invisible': ['|', ('cargo_type_id', '=', False), ('is_package_group', '=', False)]}"/>
                            <div class="o_td_label">
                                <label for="target_value" />
                            </div>
                            <div class="o_row">
                                <field name="target_value" nolabel="1"></field>
                                <field name="target_weight_uom_id" nolabel="1" placeholder="UOM"
                                        options="{'no_create': True, 'no_open': True}"
                                        attrs="{'invisible': [('target_parameter', '!=', 'weight')],
                                            'required': [('target_parameter', '=', 'weight')]}"></field>
                                <field name="target_volume_uom_id" nolabel="1" placeholder="UOM"
                                        options="{'no_create': True, 'no_open': True}"
                                        attrs="{'invisible': [('target_parameter', '!=', 'volume')],
                                            'required': [('target_parameter', '=', 'volume')]}"></field>
                                <field name="target_currency_id" placeholder="Target Currency"
                                        options="{'no_create': True, 'no_open': True}"
                                        attrs="{'invisible': [('target_parameter', 'not in', ['gross_revenue', 'gross_margin'])],
                                            'required': [('target_parameter', 'in', ['gross_revenue', 'gross_margin'])]}"></field>
                            </div>
                        </group>
                        <group name="target_right">
                            <field name="incentive_type"></field>
                            <div class="o_td_label">
                                <label for="incentive_unit" />
                            </div>
                            <div class="o_row">
                                <field name="incentive_unit"></field>
                                <field name="incentive_currency_id" placeholder="Currency"
                                    options="{'no_create': True}"
                                    attrs="{'invisible': [('incentive_type', '!=', 'amount')],
                                            'required': [('incentive_type', '=', 'amount')]}"></field>
                            </div>
                            <field name="incentive_unit_type"></field>
                            <field name="company_id" options="{'no_create': 1, 'no_open': 1}"/>
                        </group>
                    </group>
                    <group>
                        <field name="remarks"></field>
                    </group>

                    <button name="action_recompute_actual_values" string="Re-Compute Actual Values" type="object" class="oe_highlight" />
                    <button name="action_download" title="Download Target Line" type="object" class="oe_highlight fa fa-download pull-right"/>
                    <group>
                        <field name="sale_target_line_ids" nolabel="1">
                            <tree editable="bottom" create="0" delete="0">
                                <field name="period" readonly="1"/>
                                <field name="date_from" groups="base.group_no_one"/>
                                <field name="date_to" groups="base.group_no_one"/>
                                <field name="target_parameter" readonly="1"/>
                                <field name="target_value" />
                                <field name="target_currency_id" readonly="1"
                                       attrs="{'column_invisible': [('parent.target_parameter', 'not in', ['gross_revenue', 'gross_margin'])]}"/>
                                <field name="target_uom_id" readonly="1"
                                       attrs="{'column_invisible': [('parent.target_parameter', 'not in', ['weight', 'volume'])]}"/>
                                <field name="actual_value" readonly="1"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="crm_sale_target_view_tree" model="ir.ui.view">
        <field name="name">crm.sale.target.view.tree</field>
        <field name="model">crm.sale.target</field>
        <field name="arch" type="xml">
            <tree string="Targets">
                <field name="name"/>
                <field name="user_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="shipment_type_id"/>
                <field name="transport_mode_id"/>
                <field name="company_id" />
            </tree>
        </field>
    </record>

    <record id="crm_sale_target_view_search" model="ir.ui.view">
        <field name="name">crm.sale.target.view.search</field>
        <field name="model">crm.sale.target</field>
        <field name="arch" type="xml">
            <search string="Target">
                <field name="name"></field>
                <field name="user_id" string="Agent"></field>
                <field name="date_from" string="Period"></field>
                <field name="shipment_type_id"></field>
                <field name="transport_mode_id"></field>
                <group expand="0" string="Group By">
                    <filter string="Agent" name="agent" context="{'group_by':'user_id'}"/>
                    <filter name="shipment_type_id" string="Shipment Type" context="{'group_by':'shipment_type_id'}"/>
                    <filter name="transport_mode_id" string="Transport Modes" context="{'group_by': 'transport_mode_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="crm_sale_target_line_view_search" model="ir.ui.view">
        <field name="name">crm.sale.target.line.view.search</field>
        <field name="model">crm.sale.target.line</field>
        <field name="arch" type="xml">
            <search string="Target">
                <field name="user_id" string="Agent"></field>
                <field name="period" string="Period"></field>
                <field name="date_from" string="Date From"></field>
                <field name="date_to" string="Date To"></field>
                <filter name="current_month" string="Current Month" domain="[
                    ('date_from', '&gt;=', (context_today()).strftime('%Y-%m-01')),
                    ('date_from', '&lt;', (context_today() + relativedelta(months=1)).strftime('%Y-%m-01'))]"/>
            </search>
        </field>
    </record>

    <record id="action_crm_sale_target" model="ir.actions.act_window">
        <field name="name">Targets</field>
        <field name="res_model">crm.sale.target</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="action_fm_sales_and_crm_dashboard" model="ir.actions.client">
        <field name="name">Dashboard</field>
        <field name="tag">fm_sales_and_crm_dashboard</field>
        <field name="context">{'search_default_current_month': 1}</field>
        <field name="res_model">crm.sale.target.line</field>
    </record>

    <menuitem
        id="fm_sales_and_crm_dashboard"
        parent="sales_strategy_menu"
        action="action_fm_sales_and_crm_dashboard"
        name="Dashboard"
        groups="base.group_erp_manager,fm_sale_crm.group_sales_administrator,fm_sale_crm.group_sales_manager"
        sequence="0"/>

    <menuitem
        id="crm_sale_target_menu"
        name="Targets"
        action="action_crm_sale_target"
        groups="fm_sale_crm.group_sales_manager,base.group_system"
        parent="sales_strategy_menu" />

</odoo>
