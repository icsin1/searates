<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.crm</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="5"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="CRM" string="CRM" data-key="crm">
                    <h2>CRM</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="is_membership_multi"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_membership_multi"/>
                                <div class="text-muted">
                                    Assign salespersons into multiple Sales Teams.
                                </div>
                            </div>
                        </div>
                    </div>
                    <h2>Enable Party Type and Prospect Mandatory Fields</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="part_type_selection"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="part_type_selection"/>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="mandatory_fields"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="mandatory_fields"/>
                                <div class="text-muted">
                                    Designation, Contact Person, Email, Mobile are Mandatory
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="target_mandatory_fields"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="target_mandatory_fields"/>
                                <div class="text-muted">
                                    Shipment Type, Transport Mode, Cargo Type are Non-Mandatory
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>


</odoo>
