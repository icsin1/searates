<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_fm_contacts" model="ir.actions.act_window">
        <field name="name">Organizations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,tree,form,activity</field>
        <field name="search_view_id" ref="base.view_res_partner_filter"/>
        <field name="context">{'default_is_company': True, 'search_default_group_party_types': True, 'organization': True}</field>
        <field name="domain">[('parent_id', '=', False)]</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a organization in your address book
          </p>
        </field>
    </record>

    <menuitem
        id="fm_sales_organizations_menu"
        name="Organizations"
        action="action_fm_contacts"
        web_icon="fm_sale_crm,static/src/images/app_icon.png"
        groups="base.group_partner_manager"
        sequence="3"/>

    <record id="fm_sales_organizations_menu" model="ir.ui.menu">
        <field name="theme_menu_access_allowed" eval="True"/>
    </record>
</odoo>
