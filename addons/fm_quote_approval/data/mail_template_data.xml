<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="0">
        <!-- Activities -->
        <record id="mail_activity_type_quote_approval" model="mail.activity.type">
            <field name="name">Quote Approval</field>
            <field name="res_model">shipment.quote</field>
        </record>

        <record id="shipment_quote_approval_email_template" model="mail.template">
            <field name="name">Shipment Quote: Send Approval Email</field>
            <field name="model_id" ref="fm_quote.model_shipment_quote"/>
            <field name="subject">{{ object.company_id.name }} {{ 'Quote' }} (Ref {{ object.name or 'n/a' }})</field>
            <field name="email_from">{{user.email_formatted}}</field>
            <field name="partner_to">{{ object.approving_user_id.partner_id.id }}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Hello <stong t-out="object.approving_user_id.name"/>,
                        <br/><br/>
                        Your Quote <strong t-out="object.name or ''"></strong>
                        amounting in <strong t-out="format_amount(object.estimated_total_revenue, object.currency_id)"></strong> is ready for your review and you can approve accordingly.
                        <br/><br/>
                        To access Quote, you can use the following link:
                        <div style="margin: 16px 0px 16px 0px;">
                            <a t-att-href="'/web#model=%s&amp;id=%s&amp;view_type=form' % (object._name, object.id)"
                                style="background-color: #875A7B; padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px; font-size:13px;">
                                View Quote
                            </a>
                        </div>
                        <br/><br/>
                        <p>Thank You</p>
                        <br/>
                    </p>
                </div>
            </field>
            <field name="report_template" ref="fm_quote.quote_docx_ir_action_report_template"/>
            <field name="report_name">{{ (object.name or '').replace('/','_') }} </field>
            <field name="lang">{{ object.approving_user_id.lang }}</field>
            <field name="auto_delete" eval="True"/>
        </record>

        <record id="quote_approval_email_template" model="mail.template">
            <field name="name">Shipment Quote Approval: Approval Email</field>
            <field name="model_id" ref="fm_quote.model_shipment_quote"/>
            <field name="subject">{{ object.company_id.name }} {{ 'Quote Approval' }} (Ref {{ object.name or 'n/a' }})</field>
            <field name="email_from">{{user.email_formatted}}</field>
            <field name="partner_to">{{ object.approving_user_id.partner_id.id }}</field>
            <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px;">
    <p style="margin: 0px; padding: 0px; font-size: 12px;">
        Hello,
        <br/><br/>
        Your Quote <strong t-out="object.name or ''"></strong> amounting in <strong t-out="format_amount(object.estimated_total_revenue, object.currency_id)"></strong>
        has need to approve.<br/>Thank you for your trust!
        <br/><br/>
        Do not hesitate to contact us if you have any questions.
        <br/><br/>
    </p>
</div></field>
            <field name="report_template" ref="fm_quote.quote_docx_ir_action_report_template"/>
            <field name="report_name">{{ (object.name or '').replace('/','_') }} </field>
            <field name="lang">{{ object.client_id.lang }}</field>
        </record>
    </data>
</odoo>
