<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_shipment_quote_line_form_inherit" model="ir.ui.view">
        <field name="name">shipment.quote.line.form.inherit</field>
        <field name="model">shipment.quote.line</field>
        <field name="inherit_id" ref="fm_quote.view_shipment_quote_line_form"/>
        <field name="arch" type="xml">
			<xpath expr="//field[@name='cost_amount_rate']" position="before">
				<field name="is_margin_percent" invisible="1"/>
			</xpath>
			<xpath expr="//field[@name='cost_amount_rate']" position="attributes">
				<attribute name="attrs">{'required': [('is_margin_percent', '=', True)]}</attribute>
			</xpath>
        </field>
    </record>
</odoo>
