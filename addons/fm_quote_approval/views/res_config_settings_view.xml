<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_quote_approval" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.quote.approval</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
			<xpath expr="//div[@name='freight_document_settings']" position="after">
				<h2>Quote Approval</h2>
				<div class="row mt16 o_settings_container" name="quote_approval_setting">
					<div class="col-12 col-lg-6 o_setting_box" id="margin_percent_setting">
						<div class="o_setting_left_pane"/>
						<div class="o_setting_right_pane">
							<label for="margin_percent" />
							<field name="margin_percent" class="oe_inline"/> %
							<div class="text-muted">
								Quote approval based on Margin Percentage
							</div>
						</div>
					</div>
					<div class="col-12 col-lg-6 o_setting_box" id="revenue_setting">
						<div class="o_setting_left_pane"/>
						<div class="o_setting_right_pane">
							<label for="margin_revenue" />
							<field name="margin_revenue" class="oe_inline"/>
							<div class="text-muted">
								Quote approval based on Margin Revenue
							</div>
						</div>
					</div>
				</div>
			</xpath>
		</field>
	</record>
</odoo>
