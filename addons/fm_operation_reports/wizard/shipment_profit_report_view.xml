<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="shipment_profit_report_form_view" model="ir.ui.view">
		<field name="name">shipment.profit.report.form.view</field>
		<field name="model">shipment.profit.report</field>
		<field name="arch" type="xml">
			<form>
				<group>
					<group>
						<field name="from_date" required="1"/>
						<field name="transport_mode_id" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
						<field name="cargo_type_id" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
						<field name="report_format" widget="radio" options="{'horizontal': True}"/>
					</group>
					<group>
						<field name="to_date" required="1"/>
						<field name="shipment_type_id" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
						<field name="status" widget="radio" options="{'horizontal': True}"/>
						<field name="salesman_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True}"/>
					</group>
				</group>
				<footer>
					<button type="object" string="PDF" name="print_pdf_report" class="btn btn-primary" attrs="{'invisible': [('report_format', '=', 'xlsx')]}"/>
					<button type="object" string="XLSX" name="print_xlsx_report" class="btn btn-primary" attrs="{'invisible': [('report_format', '=', 'pdf')]}"/>
					<button type="special" special="cancel" string="Cancel" class="btn-default"/>
				</footer>
			</form>
		</field>
	</record>
	
	<record id="action_shipment_profit_report" model="ir.actions.act_window">
		<field name="name">Shipment Profit Report</field>
		<field name="res_model">shipment.profit.report</field>
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>
	
	<menuitem 
		id="menu_shipment_profit_report" 
		parent="menu_freight_operation_reporting"
		groups="freight_base.group_operation_manager,base.group_system"
		action="action_shipment_profit_report"
	/>
</odoo>