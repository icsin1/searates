<odoo>

    <menuitem
        id="menu_freight_operation_reporting"
        name="Reporting"
        parent="freight_base.root_freight_operations"
        sequence="50"/>
    
    <record id="action_fm_operation_reports_vendor_statement" model="ir.actions.client">
        <field name="name">Vendor Statement</field>
        <field name="res_model">web.report</field>
        <field name="tag">ics_report_base.web_report</field>
        <field name="context" eval="{'report_id': ref('fm_operation_reports.fm_operation_reports_vendor_statement')}"/>
    </record>

    <menuitem
        id="menu_finance_report_vendor_statement_new"
        name="Vendor Statement"
        parent="ics_account_reports.menu_root_account_partner_reports"
        action="action_fm_operation_reports_vendor_statement"
        sequence="12"
    />

    <record id="action_fm_operation_reports_customer_statement" model="ir.actions.client">
        <field name="name">Customer Statement</field>
        <field name="res_model">web.report</field>
        <field name="tag">ics_report_base.web_report</field>
        <field name="context" eval="{'report_id': ref('fm_operation_reports.fm_operation_reports_customer_statement')}"/>
    </record>

    <menuitem
        id="menu_finance_report_customer_statement_new"
        name="Customer Statement"
        parent="ics_account_reports.menu_root_account_partner_reports"
        action="action_fm_operation_reports_customer_statement"
        sequence="10"
    />

    <!-- Partner Outstanding Report -->
    <record id="action_ics_customer_outstanding_report" model="ir.actions.client">
        <field name="name">Outstanding Customer Statement Report</field>
        <field name="res_model">web.report</field>
        <field name="tag">ics_report_base.web_report</field>
        <field name="context" eval="{'report_id': ref('fm_operation_reports.ics_account_partner_outstanding_report'), 'domain': [('account_id.internal_type', 'in', ['receivable']), '|', ('partner_id.category_ids', 'in', [ref('freight_base.org_type_customer')]), ('partner_id.category_ids', '=', False)], 'report_type': 'receivable'}"/>
    </record>

    <!-- Menu Item for Outstanding Customer Statement Report-->
    <menuitem
        id="menu_fm_operation_customer_outstanding_report"
        name="Outstanding Customer Statement"
        parent="ics_account_reports.menu_root_account_partner_reports"
        action="action_ics_customer_outstanding_report"
        sequence="12"
    />


    <!-- Partner Outstanding Report -->
    <record id="action_ics_vendor_outstanding_report" model="ir.actions.client">
        <field name="name">Outstanding Vendor Statement Report</field>
        <field name="res_model">web.report</field>
        <field name="tag">ics_report_base.web_report</field>
        <field name="context" eval="{'report_id': ref('fm_operation_reports.ics_account_partner_outstanding_report'), 'domain': [('account_id.internal_type', 'in', ['payable']), '|', ('partner_id.category_ids', 'in', [ref('freight_base.org_type_vendor')]), ('partner_id.category_ids', '=', False)], 'report_type': 'payable'}"/>
    </record>

    <!-- Menu Item for Outstanding Customer Statement Report-->
    <menuitem
        id="menu_fm_operation_vendor_outstanding_report"
        name="Outstanding Vendor Statement"
        parent="ics_account_reports.menu_root_account_partner_reports"
        action="action_ics_vendor_outstanding_report"
        sequence="13"
    />

</odoo>
