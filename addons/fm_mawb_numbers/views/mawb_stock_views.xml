<?xml version="1.0" ?>
<odoo>
    <record id="action_mawb_stock" model="ir.actions.act_window">
        <field name="name">MAWB Stocks</field>
        <field name="res_model">mawb.stock</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_mawb_stock_form" model="ir.ui.view">
        <field name="name">mawb.stock.form</field>
        <field name="model">mawb.stock</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_mark_locked" states="draft" string="Lock" type="object"/>
                    <button name="action_mark_draft" states="locked" string="Unlock" type="object" groups="base.group_erp_manager"/>
                    <field name="state" widget="statusbar" readonly="1"/>
                </header>
                <sheet>
                    <label for="name" string="MAWB Stock Name" class="oe_read_only"/>
                    <div class="oe_title oe_read_only">
                        <h1><field name="name" /></h1>
                    </div>
                    <group col="6">
                        <group col="2" colspan="2">
                            <field name="airline_id"/>
                            <field name="awb_serial_no" force_save="1"/>
                            <field name="display_awb_no" invisible="1"/>
                        </group>
                        <group col="2" colspan="2">
                            <field name="home_airport_id"/>
                            <field name="borrowed_from_id"/>
                        </group>
                        <group col="2" colspan="2">
                            <field name="count"/>
                            <label for="from_no" string="Series Range"/>
                            <div class="o_row">
                                <field name="from_no"/> - <field name="to_no"/>
                            </div>
                        </group>
                    </group>
                    <notebook>
                        <page string="SR Numbers">
                            <field name="line_ids" readonly="1" force_save="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_mawb_stock_tree" model="ir.ui.view">
        <field name="name">mawb.stock.tree</field>
        <field name="model">mawb.stock</field>
        <field name="arch" type="xml">
            <tree>
                <field name="home_airport_id"/>
                <field name="awb_serial_no" options="{'format': False}"/>
                <field name="borrowed_from_id"/>
                <field name="airline_id"/>
                <field name="count"/>
                <field name="to_no"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_mawb_stock_line_tree" model="ir.ui.view">
        <field name="name">mawb.stock.line.tree</field>
        <field name="model">mawb.stock.line</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence_no" invisible="1"/>
                <field name="mawb_number"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <menuitem
        id="menu_mawb_stock_main"
        name="MAWB Stocks"
        parent="freight_base.root_freight_admin_manage_menu"
        action="action_mawb_stock"/>
</odoo>
