<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_lumpsum_discount" model="ir.ui.view">
        <field name="name">account.move.form.lumpsum.discount</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='discount']" position="before">
                <field name="lumpsum_discount" string="Discount" />
            </xpath>
            <xpath expr="//field[@name='line_ids']/tree/field[@name='discount']" position="before">
                <field name="lumpsum_discount" string="Discount" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>