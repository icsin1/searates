<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="web_report_inherit_view_form" model="ir.ui.view">
        <field name="name">web.report.inehit.view.form</field>
        <field name="model">web.report</field>
        <field name="inherit_id" ref="ics_report_base.web_report_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='filter_unfold_all']" position="after">
                <field name="is_account_report" widget="boolean_toggle"/>
                <field name="is_tax_report" widget="boolean_toggle" attrs="{'invisible': [('is_account_report', '=', False)]}"/>
                <field name="country_id" options="{'no_create': 1}" attrs="{'invisible': ['|', ('is_account_report', '=', False), ('is_tax_report', '=', False)], 'required': [('is_tax_report', '=', True)]}"/>
            </xpath>
        </field>
    </record>

    <record id="web_report_line_inherit_view_form" model="ir.ui.view">
        <field name="name">web.report.line.inehit.view.form</field>
        <field name="model">web.report.line</field>
        <field name="inherit_id" ref="ics_report_base.web_report_line_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='group_total']" position="after">
                <field name="is_account_report" invisible="1"/>
                <field name="compute_opening_and_closing_balance" widget="boolean_toggle" attrs="{'invisible': [('is_account_report', '=', False)]}"/>
            </xpath>
        </field>
    </record>
</odoo>
