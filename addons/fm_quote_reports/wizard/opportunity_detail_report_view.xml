<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="opportunity_detail_report_wizard_form" model="ir.ui.view">
        <field name="name">opportunity.detail.report.wizard.form</field>
        <field name="model">opportunity.detail.report</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="from_date" required="1"/>
                        <field name="stage_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True}"/>
                    </group>
                    <group>
                        <field name="to_date" required="1"/>
                        <field name="company_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True}"/>
                    </group>
                </group>
                <footer>
                    <button type="object" string="XLSX" name="print_xlsx" class="btn btn-primary"/>
                    <button type="object" string="Send by Email" name="send_by_email" class="btn btn-primary"/>
                    <button type="special" special="cancel" string="Cancel" class="btn-default"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_opportunity_detail_report" model="ir.actions.act_window">
        <field name="name">Opportunity Detail Report</field>
        <field name="res_model">opportunity.detail.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
        id="menu_opportunity_detail_report"
        parent="fm_sale_crm.fm_sales_crm_reports"
        action="action_opportunity_detail_report"
    />
</odoo>