<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="opportunity_report_email_template" model="mail.template">
        <field name="name">Opportunity Detail Report: Send by Email</field>
        <field name="model_id" ref="crm_prospect_lead.model_crm_prospect_opportunity"/>
        <field name="subject">Opportunity Detail Report</field>
        <field name="email_from">{{ user.email_formatted }}</field>
        <field name="body_html" type="html">
            <div style="margin: 0px; padding: 0px;">
                <p style="margin: 0px; padding: 0px; font-size: 13px;">
                    Hello ,
                    <br/><br/>
                    Please see the attached XLSX report for your reference.
                    <br/><br/>
                    <p>Thank You</p>
                    <br/>
                </p>
            </div>
        </field>
        <field name="auto_delete" eval="False"/>
    </record>
</odoo>
