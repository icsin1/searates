<?xml version="1.0" encoding="utf-8"?>
<odoo>

     <record id="stimulsoft_mrt_report_view_tree" model="ir.ui.view">
        <field name="name">stimulsoft.mrt.report.view.tree</field>
        <field name="model">stimulsoft.mrt.report</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="res_model_id" />
                <field name="show_wizard" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <record id="stimulsoft_mrt_report_view_form" model="ir.ui.view">
        <field name="name">stimulsoft.mrt.report.view.form</field>
        <field name="model">stimulsoft.mrt.report</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_download_spec" type="object" class="oe_stat_button" icon="fa-cubes" attrs="{'invisible': [('freight_product_based_format', '=', True)]}">
                            <div class="o_stat_info">
                                <span class="o_stat_value">
                                    Json
                                </span>
                                <span class="o_stat_text font-weight-bold">
                                    Specification
                                </span>
                            </div>
                        </button>
                        <button name="action_download_json_sample" type="object" class="oe_stat_button" icon="fa-database" attrs="{'invisible': [('freight_product_based_format', '=', True)]}">
                            <div class="o_stat_info">
                                <span class="o_stat_value">
                                    Download
                                </span>
                                <span class="o_stat_text font-weight-bold">
                                    Sample Data
                                </span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" class="oe_inline"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="report_id" readonly="1" groups="base.group_no_one"/>
                            <field name="res_model_id" string="Module" options="{'no_create': True, 'no_create_edit': True}" required="1"/>
                            <field name="json_spec_id" domain="[('model_id', '=', res_model_id), ('json_type', '=', 'document')]" context="{'default_model_id': res_model_id, 'default_json_type': 'document'}" attrs="{'invisible': [('freight_product_based_format', '=', True)], 'required': [('freight_product_based_format', '=', False)]}"/>
                            <field name="output_type"/>
                        </group>
                        <group>
                            <field name="filename" invisible="1"/>
                            <field name="mrt_file" filename="filename" attrs="{'required': [('freight_product_based_format', '=', False)], 'invisible': [('freight_product_based_format', '=', True)]}"/>
                            <field name="model_name" groups="base.group_no_one"/>
                            <field name="show_wizard" widget="boolean_toggle"/>
                            <field name="document_type_id" />
                        </group>
                    </group>
                    <field name="freight_product_based_format" widget="boolean_toggle"/>
                    <label for="freight_product_based_format"/>
                    <group string="Product Templates" attrs="{'invisible': [('freight_product_based_format', '=', False)]}">
                        <field name="product_report_ids" nolabel="1" context="{'bin_size': True}">
                            <tree editable="bottom">
                                <field name="sequence" widget="handle"/>
                                <field name="product_id" domain="[('model_id', '=', parent.res_model_id), ('product_type', '=', 'document')]" context="{'default_model_id': parent.res_model_id, 'default_product_type': 'document'}"/>
                                <field name="json_spec_id" domain="[('model_id', '=', parent.res_model_id), ('linked_property_ids', '=', False), ('json_type', '=', 'document')]" context="{'default_model_id': parent.res_model_id, 'default_json_type': 'document'}"/>
                                <field name="filename" invisible="1"/>
                                <field name="mrt_file" filename="filename" attrs="{'required': [('parent.freight_product_based_format', '=', True)]}"/>
                                <button name="action_download_spec" type="object" class="oe_highlight fa fa-cubes btn-icon" title="Download Json Specification"/>
                                <button name="action_download_json_sample_product" type="object" class="oe_highlight fa fa-database btn-icon" title="Download Sample Data"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="stimulsoft_mrt_report_action" model="ir.actions.act_window">
        <field name="name">MRT Report</field>
        <field name="res_model">stimulsoft.mrt.report</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <menuitem
        id="menu_mrt_reports_root"
        name="MRT Documents"
        parent="freight_base.menu_document_report_template"
        sequence="4"
        groups="odoo_base.group_freight_technical_support_team"/>

    <menuitem
        id="menu_docx_field_template"
        name="MRT Templates"
        action="stimulsoft_mrt_report_action"
        parent="menu_mrt_reports_root"
        groups="odoo_base.group_freight_technical_support_team"
        sequence="1"/>

    <record id="product_json_speicfication_document_action" model="ir.actions.act_window">
        <field name="name">MRT Json Spec</field>
        <field name="res_model">product.json.specification</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('json_type', '=', 'document')]</field>
        <field name="context">{'search_default_filter_main_only': 1, 'default_json_type': 'document'}</field>
    </record>

    <menuitem
        id="product_json_specification_menu"
        name="MRT JSON Spec"
        action="product_json_speicfication_document_action"
        parent="menu_mrt_reports_root"
        sequence="2"/>

    <record id="freight_product_document_action" model="ir.actions.act_window">
        <field name="name">Document Product</field>
        <field name="res_model">freight.product</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('product_type', '=', 'document')]</field>
        <field name="context">{'default_product_type': 'document'}</field>
    </record>

    <menuitem
        id="freight_document_product_menu"
        name="Document Product"
        action="freight_product_document_action"
        parent="freight_base.menu_document_report_template"
        groups="odoo_base.group_freight_technical_support_team"
        sequence="3"/>

</odoo>
