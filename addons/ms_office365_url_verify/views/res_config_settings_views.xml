<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.ms_office365_url_verify</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="microsoft_outlook.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='microsoft_outlook_setting']" position="inside">
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Office365 Domain Verification</span>
                        <div class="text-muted">
                            Verify your Domain on Office365 by text file on your root
                        </div>
                        <div class="content-group">
                            <div class="row mt16" id="office365_url_verifier_file">
                                <label string="Verification File" for="office365_url_verifier_file"
                                    class="col-lg-3 o_light_label"/>
                                <field name="office365_url_verifier_file" class="ml-2" filename="office365_url_verifier_filename"/>
                                <field name="office365_url_verifier_filename" invisible="1"/>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
