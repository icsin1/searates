<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_invoice_document" inherit_id="account.report_invoice_document">
        <xpath expr="//thead//th[@name='th_charge_currency']" position="after">
            <t t-if="o.from_shipment_charge">
                <th name="th_exchange_rate" class="text-right">
                    <span>Ex.Rate</span>
                </th>
                <th name="th_amount_qty" class="text-right">
                    <span>Amount/Qty</span>
                </th>
            </t>
        </xpath>
        <xpath expr="//t[@name='account_invoice_line_accountable']/td[4]" position="after">
            <t t-if="o.from_shipment_charge">
                <td class="text-right" id="exchange_rate">
                    <span t-field="line.currency_exchange_rate"/>
                </td>
                <td class="text-right" id="amount_qty">
                    <span t-field="line.charge_rate_per_unit"/>
                </td>
            </t>
        </xpath>
    </template>

</odoo>
