<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_account_move_form_view" model="ir.ui.view">
        <field name="name">account.move.inherited.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='line_ids']/tree//field[@name='currency_id']" position="after">
                <field name="currency_exchange_rate" readonly="1" force_save="1"/>
                <field name="charge_rate_per_unit" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree//field[@name='account_id']" position="after">
                <field name="currency_exchange_rate" attrs="{'column_invisible': [('parent.from_shipment_charge', '=', False)]}"
                    readonly="1" force_save="1"/>
                <field name="charge_rate_per_unit" attrs="{'column_invisible': [('parent.from_shipment_charge', '=', False)]}"
                    readonly="1" force_save="1"/>
            </xpath>
        </field>
    </record>
</odoo>