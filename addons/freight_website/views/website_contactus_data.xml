<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="inherit_website_contactus" inherit_id="website.contactus">
        <xpath expr="//div[hasclass('row')]/div[hasclass('col-lg-4')]" position="replace">
            <div class="col-lg-4 mt-4 mt-lg-0">
                <ul class="list-unstyled mb-0 pl-2">
                    <li><span t-field="res_company.name"/></li>
                    <li><i class="fa fa-map-marker fa-fw mr-2"/><span class="o_force_ltr">
                        <t t-if="res_company.street"><t t-out="res_company.street"/>,</t> <t t-out="res_company.street2"/><br/>
                        <t t-if="res_company.state_id"><t t-out="res_company.state_id.name"/>,</t> <t t-out="res_company.country_id.name"/><br/>
                        <t t-if="res_company.city"><t t-out="res_company.city"/> -</t> <t t-out="res_company.zip"/></span></li>
                    <li><i class="fa fa-phone fa-fw mr-2"/><span class="o_force_ltr"><span t-field="res_company.phone"/></span></li>
                    <li><i class="fa fa-1x fa-fw fa-envelope mr-2"/><span><span t-field="res_company.email"/></span></li>
                </ul>
            </div>
        </xpath>
    </template>

    <record id="website.contactus_thanks" model="website.page">
        <field name="name">Thanks (Contact us)</field>
        <field name="type">qweb</field>
        <field name="url">/contactus-thank-you</field>
        <field name="website_indexed" eval="False"/>
        <field name="is_published">True</field>
        <field name="key">website.contactus_thanks</field>
        <field name="arch" type="xml">
            <t name="Thanks (Contact us)" t-name="website.contactus_thanks">
                <t t-call="website.layout">
                    <div id="wrap" class="oe_structure oe_empty">
                        <section class="s_text_block pt40 pb40 o_colored_level " data-snippet="s_text_block">
                            <div class="container s_allow_columns">
                                <div class="row">
                                    <div class="col-lg-7 col-xl-6 mr-lg-auto">
                                        <span class="d-block fa fa-4x fa-thumbs-up mx-auto rounded-circle bg-primary"/><br/>
                                        <h1 class="text-center">Thank You!</h1>
                                        <div class="pb16 pt16 s_hr" data-snippet="s_hr" data-name="Separator">
                                            <hr class="mx-auto border-top w-50 border-dark text-center"/>
                                        </div>
                                        <h5 class="text-center">
                                            <span class="fa fa-check-circle"/>
                                            <span>Your message has been sent <b>successfully</b></span>
                                        </h5>
                                        <p class="text-center">We will get back to you shortly.</p>
                                    </div>
                                    <div class="col-lg-4">
                                        <ul class="list-unstyled mb-0 pl-2">
                                            <li><span t-field="res_company.name"/></li>
                                            <li><i class="fa fa-map-marker fa-fw mr-2"/><span class="o_force_ltr">
                                                <t t-if="res_company.street"><t t-out="res_company.street"/>,</t> <t t-out="res_company.street2"/><br/>
                                                <t t-if="res_company.state_id"><t t-out="res_company.state_id.name"/>,</t> <t t-out="res_company.country_id.name"/><br/>
                                                <t t-if="res_company.city"><t t-out="res_company.city"/> -</t> <t t-out="res_company.zip"/></span></li>
                                            <li><i class="fa fa-phone fa-fw mr-2"/><span class="o_force_ltr"><span t-field="res_company.phone"/></span></li>
                                            <li><i class="fa fa-1x fa-fw fa-envelope mr-2"/><span><span t-field="res_company.email"/></span></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </t>
            </t>
        </field>
    </record>
</odoo>