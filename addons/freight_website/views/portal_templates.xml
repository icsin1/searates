<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="freight_portal_layout" name="Freight Portal Layout" inherit_id="portal.portal_layout">
        <xpath expr="//t[@t-if='my_details']/div[hasclass('row')]/div" position="attributes">
            <attribute name="t-attf-class" remove="col-lg-6" separator=" "/>
        </xpath>
        <xpath expr="//div[hasclass('o_portal_wrap')]//div[hasclass('container')]" position="attributes">
            <attribute name="class" add="container-fluid" remove="container" separator=" "/>
        </xpath>
    </template>

    <template id="freight_portal_my_home" name="Freight My Portal" inherit_id="portal.portal_my_home">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="attributes">
            <attribute name="class" remove="list-group" add="card-deck" separator=" "/>
        </xpath>
    </template>

    <template id="freight_portal_docs_entry" name="Freight Portal Docs Entry" inherit_id="portal.portal_docs_entry">
        <xpath expr="//a" position="replace">
            <div class="card text-center rounded-10 border-light">
                <a t-att-href="url" t-att-title="title" class="text-decoration-none d-flex flex-column flex-fill">
                    <img t-if="img_url" t-att-src="img_url" class="card-img mx-auto w-50 pt-3" t-att-alt="title" />
                    <div class="card-body px-2 py-3 d-flex flex-column">
                        <h6 class="font-weight-bold m-0 card-title flex-fill"><t t-esc="title"/></h6>
                        <t t-if='count'>
                            <span class="h2 font-weight-bold m-0 mt-3" t-esc="count"/>
                        </t>
                        <t t-elif="placeholder_count">
                            <span class="h2 font-weight-bold m-0 mt-3" t-att-data-placeholder_count="placeholder_count">
                                <i class="fa fa-spin fa-circle-o-notch"></i>
                            </span>
                        </t>
                    </div>
                </a>
            </div>
        </xpath>
    </template>
</odoo>
