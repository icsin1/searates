<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="inherit_view_account_payment_register_form" model="ir.ui.view">
            <field name="name">account.payment.register.form.inherit</field>
            <field name="model">account.payment.register</field>
            <field name="inherit_id" ref="account.view_account_payment_register_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='communication']" position="after">
                    <field name="withholding_tax_id" options="{'no_create':1, 'no_edit':1}" domain="[('tax_on_payment', '=', True)]"
                        attrs="{'invisible': ['|', '|', ('can_edit_wizard', '=', False), ('partner_type', '!=', 'supplier'), '&amp;', ('can_group_payments', '=', True), ('group_payment', '=', False)]}"/>
                    <field name="partner_type" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>