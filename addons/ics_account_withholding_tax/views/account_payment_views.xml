<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="inherit_view_account_payment_form" model="ir.ui.view">
        <field name="name">account.payment.form.inherit</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_bank_id'][last()]" position="after">
                <field name="withholding_tax_id" options="{'no_create':1, 'no_edit':1}" domain="[('tax_on_payment', '=', True)]"
                    attrs="{'invisible': ['|', ('is_internal_transfer', '=', True), ('partner_type', '!=', 'supplier')], 'readonly': [('state', '!=', 'draft')]}"/>
            </xpath>
        </field>
    </record>

</odoo>
