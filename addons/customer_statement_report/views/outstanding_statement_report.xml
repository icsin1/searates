<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="paperformat_outstanding_report_sheet" model="report.paperformat">
        <field name="name">Outstanding Statement Report</field>
        <field name="default" eval="False"/>
        <field name="disable_shrinking" eval="False"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">33</field>
        <field name="margin_bottom">15</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_spacing">25</field>
        <field name="dpi">90</field>
    </record>

    <record id="fm_operation_reports_outstanding_customer_statement" model="ir.actions.report">
        <field name="name">Outstanding Statement Report</field>
        <field name="model">web.report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">customer_statement_report.outstanding_customer_statement_main</field>
        <field name="report_file">customer_statement_report.outstanding_customer_statement_main</field>
        <field name="paperformat_id" ref="paperformat_outstanding_report_sheet"/>
    </record>

</odoo>