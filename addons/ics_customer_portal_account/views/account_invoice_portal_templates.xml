<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="account_invoice_portal_layout" name="Account Invoice Portal Layout" inherit_id="portal.portal_breadcrumbs">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'account_invoice'" class="breadcrumb-item active">
                <span>Invoices</span>
            </li>
        </xpath>
    </template>

    <template id="portal_my_home_account_invoice" name="Show Account Invoice" customize_show="True" inherit_id="ics_customer_portal_base.dashboard" priority="20">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Invoices</t>
                <t t-set="url" t-value="'/dashboard/account_invoice'"/>
                <t t-set="classes">bg-primary-light</t>
                <t t-set="placeholder_count" t-value="'account_invoice_count'"/>
            </t>
        </xpath>
    </template>

    <template id="portal_my_account_invoice" name="My Account Invoice">
        <t t-call="ics_customer_portal_base.ics_customer_portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            <t t-set="cards">
                <div class="container pt-4">
                    <div class="row" t-if="account_invoice_ids">
                        <div class="col-md-4">
                            <div class="header_text">
                                <div class="card bg-primary text-white">
                                <div class="card-body " title="Total Due amount - The amount due for payment as on the statement date.">
                                    <h5 class="card-title" >Total Due Amount</h5>
                                    <p class="card-text" t-esc="total_due_amt"/>
                                </div>
                                </div>
                            </div>
                            </div>
                            <div class="col-md-4">
                            <div class="card bg-primary text-white">
                                <div class="card-body" title="Total Overdue Amount - Amount due post the payment due date">
                                <h5 class="card-title" >Total Over Due Amount</h5>
                                <p class="card-text" t-esc="total_overdue_amt"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>

            <t t-call="ics_customer_portal_base.ics_customer_portal_searchbar">
                <t t-set="title">Account Invoice</t>
            </t>
            <t t-if="not account_invoice_ids">
                <p>There are currently no account invoice for your account.</p>
            </t>
            <div class="info">
                <t t-if="account_invoice_ids" t-call="portal.portal_table">
                    <thead>
                        <tr class="active">
                            <th scope="col">Invoice Number</th>
                            <th scope="col">Invoice Date</th>

                            <th scope="col">House Number</th>
                            <th scope="col">Due Date</th>
                            <th scope="col">Days</th>
                            <th scope="col" class="text-right">Amount</th>
                            <th scope="col" class="text-right">Balance</th>
                           <th scope="col">Download</th>
                        </tr>
                    </thead>
                    <t t-foreach="account_invoice_ids" t-as="acc_invoice">
                        <tr>
                            <td  scope="row"><span t-field="acc_invoice.name"/></td>
                            <td><span t-field="acc_invoice.invoice_date"/></td>
                            <td><span t-field="acc_invoice.house_shipment_ids"/></td>
                            <td><span t-field="acc_invoice.invoice_date_due"/></td>
                            <td><span t-esc="acc_invoice.calculate_days()"/></td>
                            <td class="text-right"><span t-esc="acc_invoice.amount_total_in_currency_signed"/> <span t-esc="acc_invoice.currency_id.name"/></td>
                            <td class="text-right"><span t-esc="acc_invoice.amount_residual"/> <span t-esc="acc_invoice.currency_id.name"/></td>
                            <td class="text-center">
                                <a class="o_download_btn" t-att-href="acc_invoice.get_portal_url(report_type='pdf', download=True)" title="Download"><i class="fa fa-download download"/></a>
                            </td>
                        </tr>
                    </t>
                </t>
            </div>
        </t>
    </template>

</odoo>
