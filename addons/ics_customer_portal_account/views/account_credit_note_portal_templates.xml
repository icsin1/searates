<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="account_credit_note_portal_layout" name="Account Credit Note Portal Layout" inherit_id="portal.portal_breadcrumbs">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'account_credit_note'" class="breadcrumb-item active">
                <span>Credit Notes</span>
            </li>
        </xpath>
    </template>

    <template id="portal_my_home_account_credit_note" name="Show Account Credit Note" customize_show="True" inherit_id="ics_customer_portal_base.dashboard" priority="20">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Credit Notes</t>
                <t t-set="url" t-value="'/dashboard/account_credit_note'"/>
                <t t-set="placeholder_count" t-value="'account_credit_note_count'"/>
            </t>
        </xpath>
    </template>

    <template id="portal_my_account_credit_note" name="My Account Credit Note">
        <t t-call="ics_customer_portal_base.ics_customer_portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            <t t-call="ics_customer_portal_base.ics_customer_portal_searchbar">
                <t t-set="title">Credit Notes</t>
            </t>
            <t t-if="not account_credit_note_invoice_ids">
                <p>There are currently no account credit note for your account.</p>
            </t>

            <div class="info">
                <t t-if="account_credit_note_invoice_ids" t-call="portal.portal_table">
                    <thead>
                        <tr class="active">
                            <th>Credit Note Number</th>
                            <th>Credit Date</th>
                            <th>House Number</th>
                            <th class="text-right">Amount</th>
                            <th></th>
                        </tr>
                    </thead>
                    <t t-foreach="account_credit_note_invoice_ids" t-as="acc_credit_note">
                        <tr>
                            <td><span t-field="acc_credit_note.name"/></td>
                            <td><span t-field="acc_credit_note.invoice_date"/></td>
                            <td><span t-field="acc_credit_note.house_shipment_ids"/></td>
                            <td class="text-right"><span t-esc="abs(acc_credit_note.amount_total_in_currency_signed)"/> <span t-esc="acc_credit_note.currency_id.name"/></td>
                            <td class="text-center">
                                <a class="o_download_btn" t-att-href="acc_credit_note.get_portal_url(report_type='pdf', download=True)" title="Download"><i class="fa fa-download"/></a>
                            </td>
                        </tr>
                    </t>
                </t>
            </div>
        </t>
    </template>

</odoo>
