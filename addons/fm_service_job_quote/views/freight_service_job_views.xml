<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="freight_service_job_quote_state_button_inherit_view_form" model="ir.ui.view">
        <field name="name">freight.service.job.inherit.statebutton.view.form</field>
        <field name="model">freight.service.job</field>
        <field name="inherit_id" ref="fm_service_job_charges.freight_service_job_revenue_charges_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="service_job_quote_id" string="From Quote" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='vendor_bill_count']/.." position="after">
                <button class="oe_stat_button" type="object" name="action_shipment_sevice_quote" icon="fa-book" string="Quote" attrs="{'invisible': [('service_job_quote_id', '=', False)]}"/>
            </xpath>
        </field>
    </record>
</odoo>
