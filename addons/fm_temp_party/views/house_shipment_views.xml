<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="fm_temp_party_house_shipment_view_form" model="ir.ui.view">
        <field name="name">fm_temp_party.house.shipment.view.form</field>
        <field name="model">freight.house.shipment</field>
        <field name="inherit_id" ref="fm_road_operation.fm_road_operation_freight_house_shipment_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="enable_temp_party" invisible="1"/>
            </xpath>
            <xpath expr="//group[@name='shipper']/field[@name='shipper_id']" position="attributes">
                <attribute name="attrs">{'invisible': [('enable_temp_party','=',True)],
                    'required': [('enable_temp_party','!=',True), ('is_courier_shipment', '=', False), ('mode_type', '!=', 'land'), ('shipper_consignee_check', '!=', True)]}</attribute>
            </xpath>
            <xpath expr="//group[@name='shipper']/field[@name='shipper_id']" position="after">
                <field name="temp_shipper_name" string="Shipper" attrs="{'invisible': [('enable_temp_party','!=',True)], 'required': [('enable_temp_party','=',True),
                    ('is_courier_shipment', '=', False), ('mode_type', '!=', 'land'), ('shipper_consignee_check', '!=', True)]}"/>
            </xpath>
            <xpath expr="//group[@name='shipper']/field[@name='shipper_address_id']" position="attributes">
                <attribute name="attrs">{'invisible': [('enable_temp_party','=',True)]}</attribute>
            </xpath>
            <xpath expr="//group[@name='shipper']/field[@name='shipper_address_id']" position="after">
                <field name="temp_shipper_address" string="Shipper Address" attrs="{'invisible': [('enable_temp_party','!=',True)]}"/>
            </xpath>
            <xpath expr="//group[@name='sending_forwarder']/field[@name='shipper_id']" position="attributes">
                <attribute name="attrs">{'invisible': [('enable_temp_party','=',True)], 'required': [('enable_temp_party','!=',True), ('transport_mode_id','!=',False),
                    ('is_courier_shipment', '=', False), ('mode_type', 'not in', ['sea', 'air']), ('shipper_consignee_check', '!=', True)]}</attribute>
            </xpath>
             <xpath expr="//group[@name='sending_forwarder']/field[@name='shipper_id']" position="after">
                 <field name="temp_shipper_name" string="Shipper" attrs="{'invisible': [('enable_temp_party','!=',True)], 'required': [('enable_temp_party','=',True), ('transport_mode_id','!=',False),
                    ('is_courier_shipment', '=', False), ('mode_type', 'not in', ['sea', 'air']), ('shipper_consignee_check', '!=', True)]}"/>
            </xpath>
            <xpath expr="//group[@name='sending_forwarder']/field[@name='shipper_address_id']" position="after">
                <field name="temp_shipper_address" string="Shipper Address" attrs="{'invisible': [('enable_temp_party','!=',True)]}"/>
            </xpath>
            <xpath expr="//group[@name='sending_forwarder']/field[@name='shipper_address_id']" position="attributes">
                <attribute name="attrs">{'invisible': [('enable_temp_party','=',True)]}</attribute>
            </xpath>
            <xpath expr="//group[@name='consignee']/field[@name='consignee_id']" position="attributes">
                <attribute name="attrs">{'invisible': [('enable_temp_party','=',True)], 'required': [('enable_temp_party','!=',True), ('is_courier_shipment', '=', False), ('mode_type', '!=', 'land'),
                    ('shipper_consignee_check', '!=', True)]}</attribute>
            </xpath>
            <xpath expr="//group[@name='consignee']/field[@name='consignee_id']" position="after">
                <field name="temp_consignee_name" string="Consignee" attrs="{'invisible': [('enable_temp_party','!=',True)], 'required': [('enable_temp_party','=',True),
                    ('is_courier_shipment', '=', False), ('mode_type', '!=', 'land'), ('shipper_consignee_check', '!=', True)]}"/>
            </xpath>
            <xpath expr="//group[@name='consignee']/field[@name='consignee_address_id']" position="attributes">
                <attribute name="attrs">{'invisible': [('enable_temp_party','=',True)]}</attribute>
            </xpath>
            <xpath expr="//group[@name='consignee']/field[@name='consignee_address_id']" position="after">
                <field name="temp_consignee_address" string="Consignee Address" attrs="{'invisible': [('enable_temp_party','!=',True)]}"/>
            </xpath>
            <xpath expr="//group[@name='receiving_forwarder']/field[@name='consignee_id']" position="attributes">
                <attribute name="attrs">{'invisible': [('enable_temp_party','=',True)], 'required': [('enable_temp_party','!=',True), ('transport_mode_id','!=',False),
                    ('is_courier_shipment', '=', False), ('mode_type', 'not in', ['sea', 'air']), ('shipper_consignee_check', '!=', True)]}</attribute>
            </xpath>
             <xpath expr="//group[@name='receiving_forwarder']/field[@name='consignee_id']" position="after">
                 <field name="temp_consignee_name" string="Consignee" attrs="{'invisible': [('enable_temp_party','!=',True)], 'required': [('enable_temp_party','=',True),
                    ('transport_mode_id','!=',False),('is_courier_shipment', '=', False), ('mode_type', 'not in', ['sea', 'air']), ('shipper_consignee_check', '!=', True)]}"/>
            </xpath>
            <xpath expr="//group[@name='receiving_forwarder']/field[@name='consignee_address_id']" position="after">
                <field name="temp_consignee_address" string="Consignee Address" attrs="{'invisible': [('enable_temp_party','!=',True)]}"/>
            </xpath>
            <xpath expr="//group[@name='receiving_forwarder']/field[@name='consignee_address_id']" position="attributes">
                <attribute name="attrs">{'invisible': [('enable_temp_party','=',True)]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>