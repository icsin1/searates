<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="fm_temp_party_service_job_view_form" model="ir.ui.view">
        <field name="name">fm_temp_party.service.job.view.form</field>
        <field name="model">freight.service.job</field>
        <field name="inherit_id" ref="fm_service_job.freight_service_job_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='currency_id']" position="after">
                <field name="enable_temp_party" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='shipper_id']" position="attributes">
                <attribute name="attrs">{'invisible': [('enable_temp_party','=',True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='shipper_id']" position="after">
                <field name="temp_shipper_name" string="Shipper" attrs="{'invisible': [('enable_temp_party','!=',True)]}"/>
            </xpath>
            <xpath expr="//field[@name='shipper_address_id']" position="attributes">
                <attribute name="attrs">{'invisible': [('enable_temp_party','=',True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='shipper_address_id']" position="after">
                <field name="temp_shipper_address" string="Shipper Address" attrs="{'invisible': [('enable_temp_party','!=',True)]}"/>
            </xpath>
            <xpath expr="//field[@name='consignee_id']" position="attributes">
                <attribute name="attrs">{'invisible': [('enable_temp_party','=',True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='consignee_id']" position="after">
                <field name="temp_consignee_name" string="Consignee" attrs="{'invisible': [('enable_temp_party','!=',True)]}"/>
            </xpath>
            <xpath expr="//field[@name='consignee_address_id']" position="attributes">
                <attribute name="attrs">{'invisible': [('enable_temp_party','=',True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='consignee_address_id']" position="after">
                <field name="temp_consignee_address" string="Consignee Address" attrs="{'invisible': [('enable_temp_party','!=',True)]}"/>
            </xpath>
        </field>
    </record>
</odoo>