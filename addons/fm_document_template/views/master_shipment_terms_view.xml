<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="freight_master_shipment_terms_inherit_view_form" model="ir.ui.view">
        <field name="name">freight.master.shipment.terms.inherit.view.form</field>
        <field name="model">freight.master.shipment.terms</field>
        <field name="inherit_id" ref="freight_management.freight_master_shipment_terms_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='shipment_id']" position="before">
                <field name="master_template_domain" invisible="1"/>
                <label for="document_template_id"/>
                    <div class="oe_title">
                        <h2><field name="document_template_id" domain="master_template_domain" options="{'no_create': 1}"/></h2>
                    </div>
            </xpath>
        </field>
    </record>

    <record id="freight_master_shipment_terms_inherit_view_tree" model="ir.ui.view">
        <field name="name">freight.master.shipment.terms.view.tree</field>
        <field name="model">freight.master.shipment.terms</field>
        <field name="inherit_id" ref="freight_management.freight_master_shipment_terms_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='document_type_id']" position="after">
                <field name="document_template_id"/>
            </xpath>
        </field>
    </record>
</odoo>
