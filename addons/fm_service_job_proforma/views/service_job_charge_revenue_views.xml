<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="inherit_service_job_charge_revenue_view_form" model="ir.ui.view">
        <field name="name">service.job.charge.revenue.form.inherit</field>
        <field name="model">service.job.charge.revenue</field>
        <field name="inherit_id" ref="fm_service_job_charges.freight_service_job_charge_revenue_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <field name="pro_forma_invoice_line_ids" invisible="1"/>
                <button name="action_view_pro_forma_invoice" type="object" class="oe_stat_button w-auto" icon="fa-money" string="View Pro Forma Invoices"
                    attrs="{'invisible': [('pro_forma_invoice_line_ids', '=', [])]}"/>
            </xpath>
        </field>
    </record>

    <record id="inherit_service_job_charge_revenue_search_view" model="ir.ui.view">
        <field name="name">service.job.charge.revenue.search.inherit</field>
        <field name="model">service.job.charge.revenue</field>
        <field name="inherit_id" ref="fm_service_job_charges.service_job_charge_revenue_view_search"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='filter_full_invoiced']" position="before">
                <filter string="Pro Forma Invoice" name="pro_forma_invoice_status" domain="[('status', '=', 'pro_forma')]"/>
            </xpath>
        </field>
    </record>

    <record id="ir_actions_server_create_pro_forma_invoices" model="ir.actions.server">
        <field name="name">Pro Forma Invoice</field>
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="fm_service_job_charges.model_service_job_charge_revenue"/>
        <field name="state">code</field>
        <field name="code">
            if records:
                action = records.action_create_pro_forma_invoice()
        </field>
        <field name="binding_model_id" ref="fm_service_job_charges.model_service_job_charge_revenue"/>
        <field name="binding_view_types">list</field>
    </record>

</odoo>
