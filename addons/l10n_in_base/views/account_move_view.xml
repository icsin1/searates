<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_invoice_form_inherit_l10n_in" model="ir.ui.view">
        <field name="name">account.move.form.inherit.l10n.in</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="l10n_in.invoice_form_inherit_l10n_in"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='l10n_in_gst_treatment']" position="after">
                <field name="l10n_in_state_id" string="Place of Supply" attrs="{'invisible': ['|', ('country_code', '!=', 'IN'), ('move_type', '=', 'entry')], 'readonly': [('state', '!=', 'draft')]}"/>
            </xpath>
            <xpath expr="//group[@name='accounting_info_group']/field[@name='invoice_cash_rounding_id']" position="after">
                <field name="l10n_in_export_type" widget="radio" options="{'horizontal': True}" attrs="{'invisible': [
                    '|', ('move_type', '=', 'entry'), ('l10n_in_gst_treatment', 'not in', ('overseas', 'special_economic_zone'))], 'readonly': [('state','!=', 'draft')]}"/>
                <field name="l10n_in_transaction_mode" />
            </xpath>
        </field>
    </record>
</odoo>
