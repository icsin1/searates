<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_account_form_fixed_asset" model="ir.ui.view">
        <field name="name">account.account.form.fixed.asset</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='automation']//td[hasclass('o_td_label')]" position="replace">
                <td class="o_td_label">
                    <label for="create_asset" string="Automate Deferred Expense" attrs="{'invisible': [('asset_type', '!=', 'expense')]}"/>
                    <label for="create_asset" string="Automate Deferred Revenue" attrs="{'invisible': [('asset_type', '!=', 'sale')]}"/>
                    <label for="create_asset" string="Automate Asset" attrs="{'invisible': [('asset_type', '!=', 'asset')]}"/>
                </td>
            </xpath>
            <xpath expr="//field[@name='can_create_asset']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='asset_type']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_account_account_form_deferred_fixed_asset" model="ir.ui.view">
        <field name="name">account.account.form.fixed.asset</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="ics_account_deferred_revenue_expense.view_account_account_form_wizard"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='asset_model_id']" position="before">
                <field name="manage_asset_per_line" attrs="{'invisible': ['|', ('create_asset', '=', 'no'), ('asset_type', '!=', 'asset')]}"/>
            </xpath>
        </field>
    </record>

</odoo>