<?xml version="1.0" ?>
<odoo>

    <record id="invoice_terms_template_view_tree" model="ir.ui.view">
        <field name="name">invoice.terms.template.view.tree</field>
        <field name="model">invoice.terms.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="invoice_terms_template_view_form" model="ir.ui.view">
        <field name="name">invoice.terms.template.view.form</field>
        <field name="model">invoice.terms.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <group>
                        <field name="body_html" widget="html"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="invoice_terms_template_action" model="ir.actions.act_window">
        <field name="name">Invoice Terms &amp; Condition</field>
        <field name="res_model">invoice.terms.template</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define a new invoice Terms &amp; Condition template.
              </p>
        </field>
    </record>

    <menuitem
        id="menu_invoice_terms_template"
        name="Invoice Terms &amp; Condition"
        action="invoice_terms_template_action"
        parent="account.account_invoicing_menu"/>

</odoo>
