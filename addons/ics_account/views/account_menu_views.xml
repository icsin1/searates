<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account.menu_finance" model="ir.ui.menu">
        <field name="name">Accounting</field>
        <field name="web_icon">freight_base,static/src/images/finance_app_icon.png</field>
        <field name="theme_menu_access_allowed" eval="True"/>
    </record>


    <record id="account.menu_action_move_in_refund_type" model="ir.ui.menu">
        <field name="name">Refunds</field>
        <field name="sequence">2</field>
    </record>
    <record id="account.action_move_in_refund_type" model="ir.actions.act_window">
            <field name="name">Refunds</field>
        </record>

    <record id="action_opening_balance_of_charts_of_account" model="ir.actions.act_window">
            <field name="name">Opening Balance of Chart of Account</field>
            <field name="res_model">account.account</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="search_view_id" ref="account.view_account_search"/>
            <field name="view_id" ref="account.init_accounts_tree"/>
            <field name="context">{'search_default_activeacc': True}</field>
        </record>

     <menuitem id="menu_opening_balance_of_account"
              groups="odoo_base.group_freight_technical_support_team"
              parent="account.account_account_menu"
              name="Opening Balance of Chart of Account"
              action="action_opening_balance_of_charts_of_account"
              sequence="40"
    />

</odoo>
