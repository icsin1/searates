<odoo>
    <template id="report_invoice_document_data_inherit" inherit_id="account.report_invoice_document">
        <xpath expr="//span[@t-field='o.amount_residual']/../.." position="replace">
            <tr>
                <td>
                    <strong>Due Amount</strong>
                </td>
                <td class="text-right">
                    <span t-field="o.amount_residual"/>
                </td>
            </tr>
        </xpath>
        <xpath expr="//div[@name='comment']" position="after">
            <div t-if="not is_html_empty(o.notes)" name="notes" id="notes" class="mt-5">
                <h3 class="">Terms &amp; Conditions</h3>
                <hr class="mt-0 mb-1"/>
                <em t-field="o.notes"/>
            </div>
        </xpath>
    </template>
</odoo>
