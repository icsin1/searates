<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_accouting_lock_dates_wizard_form" model="ir.ui.view">
        <field name="name">accounting.lock.dates.form</field>
        <field name="model">accounting.lock.dates</field>
        <field name="arch" type="xml">
            <form string="Lock Dates">
                <group>
                    <group string="Accounting Period Closing">
                        <field name="journal_entry_lock_date"/>
                    </group>
                </group>
                <footer>
                    <button name="action_save_lock_date" type="object" string="Save" class="oe_highlight" />
                    <button string="Cancel" class="btn btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_lock_dates" model="ir.actions.act_window">
        <field name="name">Lock Dates</field>
        <field name="res_model">accounting.lock.dates</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_lock_dates" parent="account.menu_finance_entries_actions"
              action="action_lock_dates" sequence="40" groups="account.group_account_manager"/>
</odoo>
