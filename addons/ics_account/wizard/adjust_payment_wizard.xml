<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_adjust_payment_wizard_form" model="ir.ui.view">
            <field name="name">adjust.payment.wizard.form</field>
            <field name="model">adjust.payment.wizard</field>
            <field name="arch" type="xml">
                <form string="Adjust Payment">
                    <group>
                        <group>
                            <field name="payment_id" invisible="1"/>
                            <field name="diff_currency" invisible="1"/>
                            <field name="remaining_amount" string='Balance Amount' readonly="1" />
                            <field name="remaining_amount_signed" string='Balance Amount Signed' readonly="1"
                                   attrs="{'invisible': [('diff_currency', '=', False)]}"/>
                            <field name="move_type" invisible="1" />
                            <field name="multi_select_option"/>
                        </group>
                        <group>
                            <field name="currency_id" />
                            <field name="company_currency_id" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="line_ids" nolabel="1">
                            <tree editable="bottom" create="0" delete="0"
                                  decoration-danger="amount_residual_signed > actual_amount_due or amount_residual_signed &lt;= 0 and not is_checked"
                                  decoration-muted="amount_residual_signed == 0 and is_checked">
                                <field name="is_checked" />
                                <field name="move_id" readonly="1" force_save="1"/>
                                <field name="invoice_date"/>
                                <field name="company_id" invisible="1"/>
                                <field name="partner_id" optional="hide"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="amount_total" />
                                <field name="amount_total_signed" attrs="{'column_invisible': [('parent.diff_currency', '=', False)]}"/>
                                <field name="payment_state" />
                                <field name="state" />
                                <field name="actual_amount_due" force_save="1"/>
                                <field name="amount_residual_signed" attrs="{'readonly': [('is_checked', '=', False)]}"
                                       sum="Total Amount Due" class="font-weight-bold" force_save="1"/>
                                <field name="company_currency_id" invisible="1" />
                                <field name="move_line_id" invisible="1"/>
                            </tree>
                        </field>
                    </group>
                    <group>
                        <field name="partner_id" invisible="1" />
                        <group colspan="4">
                            <group class="oe_subtotal_footer oe_right">
                                <field name="remaining_balance" />
                            </group>
                        </group>
                    </group>
                    <footer>
                        <button string="Adjust Payment" name="action_adjust_payment" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
