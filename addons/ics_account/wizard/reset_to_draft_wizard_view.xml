<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="reset_to_draft_wizard_form" model="ir.ui.view">
            <field name="name">reset.to.draft.wizard.form</field>
            <field name="model">reset.to.draft.wizard</field>
            <field name="arch" type="xml">
                <form string="Reset To Draft">
                    <group>
						<field name="name" nolabel="1" readonly="1" style="font-weight:bold;font-size:16px;"/>
					</group>
                    <footer>
                        <button string="Yes" name="action_reset_to_draft" type="object" class="oe_highlight"/>
                        <button string="No" class="btn btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
