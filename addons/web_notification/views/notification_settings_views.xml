<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="notification_settings_view_tree" model="ir.ui.view">
        <field name="name">notification.settings.view.tree</field>
        <field name="model">notification.settings</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="title"/>
                <field name="model_id"/>
                <field name="field_id"/>
                <field name="days"/>
                <field name="snooze_hours"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <record id="notification_logs_view_tree" model="ir.ui.view">
        <field name="name">notification.logs.view.tree</field>
        <field name="model">notification.logs</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
                <field name="title"/>
                <field name="model_id"/>
                <field name="field_id"/>
                <field name="action"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

</odoo>
