<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_notification_form" model="ir.ui.view">
        <field name="name">User Form: Notification</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form_simple_modif"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Notification" name="notification" attrs="{'invisible': [('id', '=', False)]}">
                    <field name="notification_setting_ids" context="{'active_test': False}"/>
                </page>
                <page string="Notification Logs" name="notification_logs" attrs="{'invisible': [('id', '=', False)]}">
                    <field name="notification_log_ids" readonly="1" domain="[('user_id', '=', uid)]" context="{'active_test': False}"/>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
