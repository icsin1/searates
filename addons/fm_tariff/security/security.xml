<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="model_fm_tariff_buy_company_rule" model="ir.rule">
            <field name="name">Buy Tariff Multi-Company</field>
            <field name="model_id" ref="fm_tariff.model_tariff_buy"/>
            <field name="domain_force">['|',('company_id','=',False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="model_fm_tariff_sell_company_rule" model="ir.rule">
            <field name="name">Sell Tariff Multi-Company</field>
            <field name="model_id" ref="fm_tariff.model_tariff_sell"/>
            <field name="domain_force">['|',('company_id','=',False), ('company_id', 'in', company_ids)]</field>
        </record>

    </data>

</odoo>
