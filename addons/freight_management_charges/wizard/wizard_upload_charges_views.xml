<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="wizard_upload_charges_view_form" model="ir.ui.view">
        <field name="name">wizard.upload.charges.view.form</field>
        <field name="model">wizard.upload.charges</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="import_file" filename="import_filename"/>
                        <field name="import_filename" invisible="1"/>
                        <field name="shipment_model" invisible="1"/>
                        <field name="shipment_rec" invisible="1"/>
                        <field name="model_name" invisible="1"/>
                        <field name="import_error_message" class="text-danger" attrs="{'invisible': [('import_error_message', '=', False)]}" readonly="1" force_save="1"/>
                    </group>
                </sheet>
                <footer>
                    <button type="object" string="Process file" name="action_process_file" class="btn btn-primary" invisible="context.get('hide_process_button')"/>
                    <button type="special" special="cancel" string="Close" class="btn btn-default"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
