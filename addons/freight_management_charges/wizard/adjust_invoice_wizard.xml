<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_adjust_invoice_wizard_form" model="ir.ui.view">
            <field name="name">adjust.invoice.wizard.form</field>
            <field name="model">adjust.invoice.wizard</field>
            <field name="arch" type="xml">
                <form string="Adjust invoice">
                    <group>
                        <group>
                            <field name="credit_move_id" invisible="1"/>
                            <field name="balance_amount" readonly="1" />
                            <field name="multi_select_option"/>
                        </group>
                        <group>
                            <field name="currency_id" />
                            <field name="company_currency_id" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="line_ids" nolabel="1">
                            <tree editable="bottom" create="0" delete="0">
								<field name="is_checked"/>
                                <field name="move_id" readonly="1" force_save="1"/>
                                <field name="partner_id" />
                                <field name="currency_id" invisible="1"/>
                                <field name="amount_total_signed" readonly="1" force_save="1"/>
                                <field name="payment_state" />
                                <field name="state" />
                                <field name="actual_amount_due" readonly="1" force_save="1"/>
                                <field name="amount_residual_signed" sum="Total Amount Due" class="font-weight-bold" force_save="1"/>
                                <field name="company_currency_id" invisible="1" />
                            </tree>
                        </field>
                    </group>
                    <footer>
                        <button string="Adjust invoice" name="action_adjust_invoice" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
