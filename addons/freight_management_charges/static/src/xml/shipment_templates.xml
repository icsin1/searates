<?xml version="1.0" encoding="utf-8"?>
<templates>
    <t t-name="dashboard.shipment" owl="1">
        <div class="o_content">
            <div class="container-fluid dashboard">
                <div class="row my-4">
                    <div class="col-3">
                        <RecordView
                            title="'Total Shipments'"
                            tooltip="'Total shipment created as per selected criteria'"
                            domain="[['state', '!=', 'cancelled']]"/>
                    </div>
                    <div class="col-3">
                        <RecordView
                            title="'Total TEU'"
                            tooltip="'Total TEUs achieved as per selected criteria'"
                            method="'get_shipment_total_teu'"/>
                    </div>
                    <div class="col-3">
                        <RecordView
                            title="'No of Carriers'"
                            tooltip="'Total Carrier as per selected criteria'"
                            groupBy="'carrier_agent_id'"
                            domain="[['carrier_agent_id', '!=', false]]"/>
                    </div>
                    <div class="col-3">
                        <RecordView
                            title="self => self.dashboard.getVolumeUoMTitle()"
                            tooltip="'Total Volume achieved as per selected criteria'"
                            method="'get_shipment_total_volume'"/>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-12 col-sm-12 col-md-5">
                        <h2 class="section-header text-primary">Shipment Profitability</h2>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-3">
                        <RecordView
                            title="'Revenue'"
                            tooltip="'Shipment Revenue as per selected criteria'"
                            method="'get_shipment_revenue_profitability_data'"/>
                    </div>
                    <div class="col-3">
                        <RecordView
                            title="'Cost'"
                            tooltip="'Shipment Cost as per selected criteria'"
                            method="'get_shipment_cost_profitability_data'"/>
                    </div>
                    <div class="col-3">
                        <RecordView
                            title="'Margin'"
                            tooltip="'Shipment Margin (Revenue - Cost) as per selected criteria'"
                            method="'get_shipment_margin_profitability_data'"/>
                    </div>
                    <div class="col-3">
                        <RecordView
                            title="'Margin %'"
                            tooltip="'Shipment Margin (Revenue - Cost) in percentage as per selected criteria'"
                            method="'get_shipment_margin_per_profitability_data'"/>
                    </div>
                </div>
                <div class="row pb-4">
                    <div class="col-12">
                        <GraphView
                            title="'Profitability by Customers'"
                            tooltip="'Profitability by Customers'"
                            method="'get_shipment_by_profitability_data'"/>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-4">
                        <GraphView
                            title="'Shipments by Sales Agent'"
                            tooltip="'Number of shipments by sales agent'"
                            domain="[['state', '!=', 'cancelled']]"
                            groupBy="'sales_agent_id'"
                            labelField="'Sales Agent'"
                            dataField="'Shipment'"
                            type="['table', 'bar']"
                            download="true"
                        />
                    </div>
                    <div class="col-4">
                        <GraphView
                            title="'Shipments by Trade-lanes'"
                            tooltip="'Number of Shipment by Origin and Destination Locations'"
                            method="'get_shipment_by_tradelane_data'"
                            domain="[['state', '!=', 'cancelled']]"
                            download="true"/>
                    </div>
                    <div class="col-4">
                        <GraphView
                            title="'Shipment By Companies'"
                            tooltip="'Number of Shipment by Companies'"
                            domain="[['state', '!=', 'cancelled']]"
                            groupBy="'company_id'"
                            labelField="'Companies'"
                            dataField="'Shipment'"
                            type="['table', 'doughnut']"
                            download="true"
                        />
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-6">
                        <GraphView
                            title="'Shipments Per Origin'"
                            tooltip="'Number of Shipment by Origin'"
                            domain="[['state', '!=', 'cancelled']]"
                            groupBy="'origin_un_location_id'"
                            labelField="'Origin'"
                            dataField="'Shipment'"
                            dataFields="{
                                'id': 'Shipment',
                                'teu_total:sum': 'TEUs'
                            }"
                            type="['table', 'pie', 'bar']"
                            download="true"
                        />

                    </div>
                    <div class="col-6">
                        <GraphView
                            title="'Shipments by Destination'"
                            tooltip="'Number of Shipment by Destination'"
                            domain="[['state', '!=', 'cancelled']]"
                            groupBy="'destination_un_location_id'"
                            labelField="'Destination'"
                            dataField="'Shipment'"
                            dataFields="{
                                'id': 'Shipment',
                                'teu_total:sum': 'TEUs'
                            }"
                            type="['table', 'horizontalBar', 'pie']"
                            download="true"
                        />
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-6">
                        <GraphView
                            title="'Shipments by POL'"
                            tooltip="'Number of Shipment by Origin Location'"
                            domain="[['state', '!=', 'cancelled']]"
                            groupBy="'origin_port_un_location_id'"
                            labelField="'Origin'"
                            dataField="'Shipment'"
                            dataFields="{
                                'id': 'Shipment',
                                'teu_total:sum': 'TEUs'
                            }"
                            type="['table', 'pie', 'bar']"
                            download="true"
                        />
                    </div>
                    <div class="col-6">
                        <GraphView
                            title="'Shipments by POD'"
                            tooltip="'Number of Shipment by Destination Location'"
                            domain="[['state', '!=', 'cancelled']]"
                            groupBy="'destination_port_un_location_id'"
                            labelField="'Destination'"
                            dataField="'Shipment'"
                            dataFields="{
                                'id': 'Shipment',
                                'teu_total:sum': 'TEUs'
                            }"
                            type="['table', 'horizontalBar', 'pie']"
                            download="true"
                        />
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-4">
                        <GraphView
                            title="'Shipments by Import/Export'"
                            tooltip="'Number of Shipment by Shipment Type (Import or Export)'"
                            domain="[['state', '!=', 'cancelled']]"
                            groupBy="'shipment_type_id'"
                            labelField="'ShipmentType'"
                            dataField="'Shipment'"
                            dataFields="{
                                'id': 'Shipment',
                                'teu_total:sum': 'TEUs'
                            }"
                            type="['table', 'pie', 'bar']"
                            download="true"
                        />
                    </div>
                    <div class="col-4">
                        <GraphView
                            title="'Transport Mode'"
                            tooltip="'Number of Shipment by Transport Mode'"
                            domain="[['state', '!=', 'cancelled']]"
                            groupBy="'transport_mode_id'"
                            labelField="'Transport Mode'"
                            dataField="'Shipment'"
                            dataFields="{
                                'id': 'Shipment',
                                'teu_total:sum': 'TEUs'
                            }"
                            type="['table', 'horizontalBar', 'pie']"
                            download="true"
                        />
                    </div>
                    <div class="col-4">
                        <GraphView
                            title="'Cargo Type'"
                            tooltip="'Number of Shipment by Cargo Type'"
                            domain="[['state', '!=', 'cancelled']]"
                            groupBy="'cargo_type_id'"
                            labelField="'Cargo'"
                            dataField="'Shipment'"
                            dataFields="{
                                'id': 'Shipment',
                                'teu_total:sum': 'TEUs'
                            }"
                            type="['table', 'horizontalBar', 'pie']"
                            download="true"
                        />
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
