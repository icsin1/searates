<?xml version="1.0" encoding="utf-8"?>
<templates>
    <t t-name="dashboard.bookings" owl="1">
        <div class="o_content">
            <div class="container-fluid">
                <div class="row my-4">
                    <div class="col-4">
                        <RecordView
                            title="'Total Bookings'"
                            domain="[['shipping_line_id', '!=', false]]"
                            download="true"/>
                    </div>
                    <div class="col-8">
                        <GraphView
                            title="self => `Top ${self.state.limit} Carrier Booking`"
                            domain="[['shipping_line_id', '!=', False], ['state', '!=', 'cancelled']]"
                            groupBy="'shipping_line_id'"
                            filename="'Top Carrier Booking'"
                            labelField="'Carrier'"
                            dataField="'Count'"
                            type="['table', 'doughnut', 'pie', 'bar']"
                            download="true"
                            limitOptions="[5, 10, 15, 20]"
                        />
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-4">
                        <GraphView title="'Bookings Per User'" domain="[['shipping_line_id', '!=', False], ['state', '!=', 'cancelled']]" method="'get_bookings_by_user_data'" download="true"/>
                    </div>
                    <div class="col-8">
                        <GraphView
                            title="self => `Top ${self.state.limit} Vessel Booking`"
                            domain="[['shipping_line_id', '!=', False], ['state', '!=', 'cancelled'], ['vessel_id', '!=', False]]"
                            groupBy="'vessel_id'"
                            filename="'Top Vessel Booking'"
                            labelField="'Vessel'"
                            dataField="'Count'"
                            type="['table', 'doughnut', 'pie', 'bar']"
                            download="true"
                            limitOptions="[5, 10, 15, 20]"
                        />
                    </div>
                </div>
                <div class="row gx-5 pb-4">
                    <div class="col-12">
                         <GraphView
                            title="self => `Top ${self.state.limit} Transporter Booking`"
                            method="'get_transporter_booking'"
                            limit="5"
                            filename="'Top Transporter'"
                            download="true"
                            limitOptions="[5, 10, 15, 20]"
                            />
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>
