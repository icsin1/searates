<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_invoice_document" inherit_id="account.report_invoice_document">
        <xpath expr="//thead//th[@name='th_quantity']" position="after">
            <th name="th_charge_currency" t-if="o.from_shipment_charge">
                <span>Cur.</span>
            </th>
        </xpath>
        <xpath expr="//t[@name='account_invoice_line_accountable']/td[3]" position="after">
            <td id="shipment_charge_currency" t-if="o.from_shipment_charge">
                <span t-field="line.shipment_charge_currency_id"/>
            </td>
        </xpath>
    </template>

</odoo>
