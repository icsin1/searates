<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_sample_data_download_wizard_form" model="ir.ui.view">
        <field name="name">report.sample.data.download.wizard.form</field>
        <field name="model">report.sample.data.download.wizard</field>
        <field name="arch" type="xml">
            <form>
                <p class="text-info h3">Select record for download sample data file</p>
                <group>
                    <field name="report_res_model" invisible="1"/>
                    <field name="report_res_id" invisible="1"/>
                    <field name="resource_ref" options="{'no_create': 1}"/>
                </group>
                <footer>
                    <button type="object" string="Download" name="action_download_data" class="btn btn-primary"/>
                    <button type="special" special="cancel" string="Cancel" class="btn btn-default"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="sample_data_download_wizard_action">
        <field name="name">Download Sample Data</field>
        <field name="res_model">report.sample.data.download.wizard</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>
</odoo>
