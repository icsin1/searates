<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_ics_edi" model="ir.ui.view">
        <field name="name">account.move.form.ics.edi</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account_edi.view_move_form_inherit" />
        <field name="arch" type="xml">
            <xpath expr="//header" position="after">
                <div class="container bg-white border shadow my-2 pt-2" groups="base.group_no_one" role="alert">
                    <h3>EDI Technical Details</h3>
                    <group>
                        <group>
                            <field name="einvoice_request_uuid"/>
                            <field name="einvoice_request_status"/>
                        </group>
                        <group>
                            <field name="einvoice_request_fail_reason"/>
                            <field name="einvoice_irn"/>
                        </group>
                    </group>
                </div>
                <div class="alert alert-info mt-3" role="alert" style="margin-bottom:0px;"
                    attrs="{'invisible': ['|', ('einvoice_request_status', 'not in', ['draft', 'in_process', 'done', 'cancel-inprogress']), ('state', '=', 'draft')]}">
                        <div>The invoice has been processed for EDI, Current Status: <field name="einvoice_request_status_computed" readonly="1" class="font-weight-bold"/></div>
                        <button name="button_process_check_status" type="object" class="oe_link" string="Check Status Now" attrs="{'invisible': ['|', ('einvoice_request_status', 'not in', ['draft', 'in_process', 'cancel-inprogress']), ('state', '=', 'draft')]}"/>
                </div>
            </xpath>
            <xpath expr="//field[@name='edi_document_ids']" position="before">
                <group groups="base.group_no_one">
                    <field name="einvoice_show_cancel" invisible="1"/>
                    <field name="einvoice_cancel_reason" attrs="{'invisible': ['|', ('state', '!=', 'posted'), ('einvoice_show_cancel', '!=', True)]}"/>
                    <field name="einvoice_cancel_remarks" attrs="{'invisible': ['|', ('state', '!=', 'posted'), ('einvoice_show_cancel', '!=', True)]}"/>
                </group>
            </xpath>
            <xpath expr="//button[@name='button_cancel_posted_moves']" position="attributes">
                <attribute name="context">{'action_open_cancel_reason': 1}</attribute>
            </xpath>
        </field>
    </record>

    <!-- Open account.move form view as Wizard asking for reason -->
    <record id="account_move_cancel_edi_view_form" model="ir.ui.view">
        <field name="name">account.move.edi.cancel.view.form</field>
        <field name="model">account.move</field>
        <field name="priority">80</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name" invisible="1"/>
                    <field name="move_type" invisible="1"/>
                    <field name="state" invisible="1"/>
                    <field name="einvoice_cancel_reason" widget="radio" required="1"/>
                    <field name="einvoice_cancel_remarks" required="1"/>
                </group>
                <footer>
                    <button type="object" name="button_cancel_posted_moves" string="Submit" class="btn-primary" context="{'action_open_cancel_reason': 0}"/>
                    <button special="cancel" string="Discard"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
