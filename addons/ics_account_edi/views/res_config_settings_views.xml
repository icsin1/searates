<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sale</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='fiscal_localization_setting_container']" position="before">
                <h2 groups="odoo_base.group_freight_technical_support_team">E-Invoicing</h2>
                <div class="row mt16 o_settings_container" name="einv_setting" groups="odoo_base.group_freight_technical_support_team">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="ics_edi_token" />
                            <field name="ics_edi_token"/>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="ics_edi_registration_id" />
                            <field name="ics_edi_registration_id"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
