<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- eInvoice Customer Address JSON Specification -->
        <record id="einvoice_json_specification__customer_address" model="product.json.specification">
            <field name="name">eInvoice JSON Spec for Customer Address</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="empty_string_for_non_bool" eval="True"/>
            <field name="description">eInvoice Customer Address JSON Specification Data and Properties</field>
        </record>

        <!-- Properties -->
        <record id="einvoice_prop_customer_address_street" model="product.json.specification.property">
            <field name="specification_id" ref="einvoice_json_specification__customer_address"/>
            <field name="property_type">field</field>
            <field name="ir_model_field" ref="base.field_res_partner__street"/>
            <field name="name">street</field>
            <field name="ttype">char</field>
        </record>
        <record id="einvoice_prop_customer_address_street2" model="product.json.specification.property">
            <field name="specification_id" ref="einvoice_json_specification__customer_address"/>
            <field name="property_type">field</field>
            <field name="ir_model_field" ref="base.field_res_partner__street2"/>
            <field name="name">street2</field>
            <field name="ttype">char</field>
        </record>
        <record id="einvoice_prop_customer_address_country_code" model="product.json.specification.property">
            <field name="specification_id" ref="einvoice_json_specification__customer_address"/>
            <field name="property_type">field</field>
            <field name="ir_model_field" ref="base.field_res_partner__country_code"/>
            <field name="name">country_code</field>
            <field name="ttype">char</field>
            <field name="is_required" eval="True"/>
        </record>
        <record id="einvoice_prop_customer_address_state_code" model="product.json.specification.property">
            <field name="specification_id" ref="einvoice_json_specification__customer_address"/>
            <field name="property_type">prop</field>
            <field name="name">state_code</field>
            <field name="ttype">char</field>
            <field name="python_code">result = record.state_id and record.state_id.code or None</field>
            <field name="is_required" eval="False"/>
        </record>
        <record id="einvoice_prop_customer_address_zip" model="product.json.specification.property">
            <field name="specification_id" ref="einvoice_json_specification__customer_address"/>
            <field name="property_type">field</field>
            <field name="ir_model_field" ref="base.field_res_partner__zip"/>
            <field name="name">zip</field>
            <field name="ttype">char</field>
            <field name="is_required" eval="True"/>
        </record>
        <record id="einvoice_prop_customer_address_city" model="product.json.specification.property">
            <field name="specification_id" ref="einvoice_json_specification__customer_address"/>
            <field name="property_type">prop</field>
            <field name="name">city</field>
            <field name="ttype">char</field>
            <field name="python_code">result = record.city_id and record.city_id.name or record.city</field>
        </record>
    </data>
</odoo>
