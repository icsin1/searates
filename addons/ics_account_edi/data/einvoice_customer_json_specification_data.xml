<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- eInvoice Customer JSON Specification -->
        <record id="einvoice_json_specification__customer" model="product.json.specification">
            <field name="name">eInvoice JSON Spec for Customer</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="description">eInvoice Customer JSON Specification Data and Properties</field>
        </record>

        <!-- Properties -->
        <record id="einvoice_prop_customer_name" model="product.json.specification.property">
            <field name="specification_id" ref="einvoice_json_specification__customer"/>
            <field name="property_type">prop</field>
            <field name="name">customer_name</field>
            <field name="ttype">computed</field>
            <field name="python_code">result = record.commercial_partner_id.name</field>
            <field name="is_required" eval="True"/>
        </record>
        <record id="einvoice_prop_customer_email" model="product.json.specification.property">
            <field name="specification_id" ref="einvoice_json_specification__customer"/>
            <field name="property_type">field</field>
            <field name="ir_model_field" ref="base.field_res_partner__email"/>
            <field name="name">customer_email</field>
            <field name="ttype">char</field>
            <field name="is_required" eval="True"/>
        </record>
        <record id="einvoice_prop_customer_address" model="product.json.specification.property">
            <field name="specification_id" ref="einvoice_json_specification__customer"/>
            <field name="property_type">prop</field>
            <field name="name">customer_address</field>
            <field name="relation_model_id" ref="account.model_res_partner"/>
            <field name="property_specification_id" ref="einvoice_json_specification__customer_address"/>
            <field name="ttype">many2one</field>
            <field name="python_code">result = record</field>
        </record>
        <record id="einvoice_prop_customer_identifiers" model="product.json.specification.property">
            <field name="specification_id" ref="einvoice_json_specification__customer"/>
            <field name="property_type">prop</field>
            <field name="name">customer_identifiers</field>
            <field name="ttype">computed</field>
            <field name="python_code">result = record._get_edi_customer_identifiers()</field>
            <field name="description">Unique identifiers by key and value pair. Majority it will be tax ids.
return result in [{'identifier_key': 'key-name', 'identifier_value': 'value'}]
            </field>
        </record>
    </data>
</odoo>
