<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="shipment_quote_portal_layout" name="Shipment Quote Portal Layout" inherit_id="portal.portal_breadcrumbs">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'shipment_quote'" t-attf-class="breadcrumb-item active">
                <a t-if="shipment_quote" t-attf-href="/my/shipment_quote?{{ keep_query() }}">Shipment Quote</a>
                <t t-else="">Shipment Quote</t>
            </li>
            <li t-if="page_name == 'shipment_quote' and shipment_quote" class="breadcrumb-item active">
                <t t-esc="shipment_quote.name"/>
            </li>
        </xpath>
    </template>

    <template id="portal_my_home_shipment_quote" name="Show Shipment Quote" customize_show="True" inherit_id="portal.portal_my_home" priority="20">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Shipment Quote</t>
                <t t-set="url" t-value="'/my/shipment_quote'"/>
                <t t-set="placeholder_count" t-value="'shipment_quote_count'"/>
                <!-- <t t-set="img_url" t-value="'/freight_management/static/description/icon.png'" /> -->
            </t>
        </xpath>
    </template>

    <template id="portal_my_shipment_quote" name="My Quote">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Quote</t>
            </t>
            <t t-if="not shipment_quotes">
                <p>There are currently no quote for your account.</p>
            </t>
            <t t-if="shipment_quotes" t-call="portal.portal_table">
                <thead>
                    <tr class="active">
                        <th>Quote Number #</th>
                        <th class="text-right">Date</th>
                        <th class="text-right">Transport Mode</th>
                        <th class="text-right">Shipment Type</th>
                        <th class="text-right">State</th>
                    </tr>
                </thead>
                <t t-foreach="shipment_quotes" t-as="each_quote">
                    <tr>
                        <td><a t-att-href="each_quote.get_portal_url()"><t t-esc="each_quote.name"/></a></td>
                        <td class="text-right"><span t-field="each_quote.date"/></td>
                        <td class="text-right"><span t-field="each_quote.transport_mode_id.name"/></td>
                        <td class="text-right"><span t-field="each_quote.shipment_type_id.name"/></td>
                        <td class="text-right"><span t-field="each_quote.state" widget="badge"/></td>
                    </tr>
                </t>
            </t>
        </t>
    </template>

    <template id="shipment_quote_portal_template" name="Shipment Quote Portal Template" inherit_id="portal.portal_sidebar" primary="True">
        <xpath expr="//div[hasclass('o_portal_sidebar')]" position="inside">
            <t t-set="o_portal_fullwidth_alert" groups="base.group_user">
                <t t-call="portal.portal_back_in_edit_mode">
                    <t t-set="backend_url" t-value="'/web#model=%s&amp;id=%s&amp;action=%s&amp;view_type=form' % (shipment_quote._name, shipment_quote.id, action.id)"/>
                </t>
            </t>

            <div class="row mt16 o_portal_quote_sidebar">
                <!-- Sidebar -->
                <t t-call="portal.portal_record_sidebar">
                    <t t-set="classes" t-value="'col-lg-auto d-print-none'"/>

                    <t t-set="title">
                        <h2 class="mb-0"><b t-field="shipment_quote.estimated_total_revenue" data-id="total_revenue"/> </h2>
                    </t>
                    <t t-set="entries">
                        <ul class="list-group list-group-flush flex-wrap flex-row flex-lg-column">
                            <li class="list-group-item flex-grow-1">
                                <t t-if="shipment_quote.state in ['sent']">

                                </t>
                                <t t-if="shipment_quote.state in ['sent']">
                                    <div class="o_download_pdf btn-toolbar flex-sm-nowrap">
                                        <div class="btn-group flex-grow-1">
                                            <a role="button" class="btn btn-primary btn-block mb8 mr8" data-toggle="modal" data-target="#modalaccept" href="#">
                                                <i class="fa fa-check pr-2"/>Accept &amp; Sign
                                            </a>
                                        </div>
                                        <div class="btn-group flex-grow-1">
                                            <a role="button" class="btn btn-danger btn-block mb8 mb8" data-toggle="modal" data-target="#modaldecline" href="#">
                                                <i class="fa fa-times pr-2"/>Reject
                                            </a>
                                        </div>
                                    </div>
                                </t>
                                <div t-if="shipment_quote.state not in ['expire', 'cancel']" class="o_download_pdf btn-toolbar flex-sm-nowrap">
                                    <div class="btn-group flex-grow-1">
                                        <a class="btn btn-secondary btn-block o_download_btn mb8"
                                           t-att-href="shipment_quote.get_portal_url(report_type='docx', download=True)"
                                           title="Download"><i class="fa fa-download pr-2"/>Download</a>
                                    </div>
                                </div>
                            </li>
                            <li t-if="shipment_quote.user_id" class="list-group-item flex-grow-1">
                                <div class="small mb-1"><strong class="text-muted">Salesperson</strong></div>
                                <div class="row flex-nowrap">
                                    <div class="col flex-grow-0 pr-2">
                                        <img class="rounded-circle mr4 float-left o_portal_contact_img" t-att-src="image_data_uri(shipment_quote.user_id.avatar_1024)" alt="Contact"/>
                                    </div>
                                    <div class="col pl-0" style="min-width: 150px">
                                        <span t-field="shipment_quote.user_id" t-options='{"widget": "contact", "fields": ["name", "phone"], "no_marker": True}'/>
                                        <a href="#discussion" class="small"><i class="fa fa-comment"></i> Send message</a>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </t>
                </t>
                <!-- Page content -->
                <div id="quote_content" class="col-12 col-lg justify-content-end">
                    <div role="dialog" class="modal fade" id="modalaccept">
                        <div class="modal-dialog">
                            <form id="accept" method="POST" t-att-data-order-id="shipment_quote.id" t-att-data-token="shipment_quote.access_token" class="js_accept_json modal-content js_website_submit_form">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <header class="modal-header">
                                    <h4 class="modal-title">Validate Order</h4>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">×</button>
                                </header>
                                <main class="modal-body" id="sign-dialog">
                                    <p>
                                        <span>By signing this quote, I agree to the following terms:</span>
                                        <ul>
                                            <li><span>Accepted on the behalf of:</span> <b t-field="shipment_quote.client_id.commercial_partner_id"/></li>
                                        </ul>
                                    </p>
                                    <t t-call="portal.signature_form">
                                        <t t-set="call_url" t-value="shipment_quote.get_portal_url(suffix='/accept')"/>
                                        <t t-set="default_name" t-value="shipment_quote.client_id.name"/>
                                    </t>
                                </main>
                            </form>
                        </div>
                    </div>

                    <div role="dialog" class="modal fade" id="modaldecline">
                        <div class="modal-dialog">
                            <form id="decline" method="POST" t-attf-action="/my/shipment_quote/#{shipment_quote.id}/decline?access_token=#{shipment_quote.access_token}" class="modal-content">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <header class="modal-header">
                                    <h4 class="modal-title">Reject This Quote</h4>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">×</button>
                                </header>
                                <main class="modal-body">
                                    <p>
                                        Tell us why you are refusing this quote, this will help us improve our services.
                                    </p>
                                    <textarea name="decline_message" required="" class="form-control"/>
                                </main>
                                <footer class="modal-footer">
                                    <button type="submit" t-att-id="shipment_quote.id" class="btn btn-danger"><i class="fa fa-times"></i> Reject</button>
                                    <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
                                </footer>
                            </form>
                        </div>
                    </div>

                    <div t-if="message == 'sign_ok'" class="alert alert-success alert-dismissable d-print-none" role="status">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">×</button>
                        <strong>Thank You!</strong><br/>
                        <t t-if="message == 'sign_ok' and shipment_quote.state == 'accept'">Your order has been signed and accepted.</t>
                    </div>

                    <div t-if="message == 'cant_reject'" class="alert alert-danger alert-dismissable d-print-none" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">×</button>
                        Your order is not in a state to be rejected.
                    </div>

                    <div t-if="shipment_quote.state == 'cancel'" class="alert alert-danger alert-dismissable d-print-none" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="close">×</button>
                        <strong>This quote has been canceled.</strong> <a role="button" href="#discussion"><i class="fa fa-comment"/> Contact us to get a new quote.</a>
                    </div>

                    <div t-if="shipment_quote.state == 'reject'" class="alert alert-danger alert-dismissable d-print-none" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="close">×</button>
                        <strong>This quote has been rejected.</strong><br/>
                        <a role="button" href="#discussion"><i class="fa fa-comment"/> Contact us to get a new quote.</a>
                    </div>
                        <div t-if="shipment_quote.state == 'expire'" class="alert alert-warning alert-dismissable d-print-none" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="close">×</button>
                            <strong>This quote is expired!</strong> <a role="button" href="#discussion"><i class="fa fa-comment"/> Contact us to get a new quotation.</a>
                        </div>

                    <!-- main content -->
                    <div t-attf-class="card #{'pb-5' if report_type == 'html' else ''}" id="portal_shipment_quote_content">
                        <div t-call="fm_quote.shipment_quote_portal_content"/>
                    </div>

                    <div class="row justify-content-center text-center d-print-none pt-1 pb-4">
                        <t>
                            <div class="col-sm-auto mt8" t-if="shipment_quote.state in ['sent']">
                                <a role="button" class="btn btn-primary" data-toggle="modal" data-target="#modalaccept" href="#">
                                    <i class="fa fa-check"/>Accept &amp; Sign
                                </a>
                            </div>
                            <div class="col-sm-auto mt8">
                                <a role="button" class="btn btn-secondary" href="#discussion">
                                    <i class="fa fa-comment"/> Feedback
                                </a>
                            </div>
                            <div class="col-sm-auto mt8" t-if="shipment_quote.state in ['sent']">
                                <a role="button" class="btn btn-danger" data-toggle="modal" data-target="#modaldecline" href="#">
                                    <i class="fa fa-times"/> Reject
                                </a>
                            </div>
                        </t>
                    </div>

                    <!-- chatter -->
                    <div id="quote_order_communication" class="mt-4">
                        <h2>History</h2>
                        <t t-call="portal.message_thread">
                            <t t-set="object" t-value="shipment_quote"/>
                        </t>
                    </div>
                </div>
            </div>
        </xpath>
    </template>

    <template id="shipment_quote_portal_content" name="Shipment Quote Portal Content">
        <div id="introduction" t-attf-class="pb-2 pt-3 #{'card-header bg-white' if report_type == 'html' else ''}">
          <h2 class="my-0">
                Quotation Number
                <em t-esc="shipment_quote.name"/>
            </h2>
        </div>
        <div t-attf-class="#{'card-body' if report_type == 'html' else ''}">
            <div id="informations">
                <div class="row" id="quote_date">
                    <div class="mb-3 col-6">
                        <strong>Date:</strong>
                      <span t-field="shipment_quote.date" t-options='{"widget": "date"}'/>
                    </div>
                    <div class="mb-3 col-6" t-if="shipment_quote.quote_expiry_date">
                        <strong>Expiration Date:</strong> <span t-field="shipment_quote.quote_expiry_date" t-options='{"widget": "date"}'/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <span t-if="shipment_quote.transport_mode_id and shipment_quote.transport_mode_id.mode_type != 'land' ">
                            <strong>Shipper:</strong>
                        </span>
                        <span t-elif="shipment_quote.quote_for == 'job'">
                            <strong>Shipper:</strong>
                        </span>
                        <span t-else="">
                            <strong>Sending Forwarder:</strong>
                        </span>
                        <span t-field="shipment_quote.shipper_id"
                              t-options='{"widget": "contact", "fields": ["name"], "no_marker": True}'></span>
                        <t t-if="shipment_quote.quote_for == 'job'"><strong>Shipper Address:</strong></t>
                        <t t-else=""><strong>Address:</strong></t>
                        <span t-field="shipment_quote.shipper_address_id"
                              t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'></span>
                    </div>
                    <div class="col-lg-6">
                        <span t-if="shipment_quote.transport_mode_id and shipment_quote.transport_mode_id.mode_type != 'land' ">
                            <strong>Consignee:</strong>
                        </span>
                        <span t-elif="shipment_quote.quote_for == 'job'">
                            <strong>Consignee:</strong>
                        </span>
                        <span t-else="">
                            <strong>Receiving Forwarder:</strong>
                        </span>
                        <span t-field="shipment_quote.consignee_id"
                              t-options='{"widget": "contact", "fields": ["name"], "no_marker": True}'></span>
                        <t t-if="shipment_quote.quote_for == 'job'"><strong>Consignee Address:</strong></t>
                        <t t-else=""><strong>Address:</strong></t>
                        <span t-field="shipment_quote.consignee_address_id"
                              t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'></span>
                    </div>
                </div>
            </div>
            <section t-if="shipment_quote.quote_for != 'job'" id="details" style="page-break-inside: auto;" class="mt32">
                <h3 id="details">Packages</h3>
                <div class="table-responsive">
                    <table t-if="shipment_quote.is_package_group" t-att-data-order-id="shipment_quote.id" t-att-data-token="shipment_quote.access_token" class="table table-sm" id="shipment_quote_table">
                        <thead class="bg-100">
                            <tr>
                                <th class="text-left">Pack Type</th>
                                <th class="text-right">Count</th>
                                <th class="text-left">Commodity</th>
                                <th class="text-left">HS Code</th>
                                <th class="text-left">Is Hazardous</th>
                                <th class="text-left">Goods Description</th>
                            </tr>
                        </thead>
                        <tbody class="sale_tbody">
                            <t t-foreach="shipment_quote.quote_cargo_line_ids" t-as="line">
                                <tr class="bg-200 font-weight-bold">
                                    <td><span t-field="line.pack_type_id.name"/></td>
                                    <td class="text-right"><span t-field="line.count"/></td>
                                    <td><span t-field="line.commodity_id.name"/></td>
                                    <td><span t-field="line.commodity_hs_code"/></td>
                                    <td class="text-center">
                                        <i t-att-class="'fa fa-check text-success' if line.is_hazardous else ''"></i>
                                    </td>
                                    <td><span t-field="line.notes"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                    <table t-else="" t-att-data-order-id="shipment_quote.id" t-att-data-token="shipment_quote.access_token" class="table table-sm" id="shipment_quote_table">
                        <thead class="bg-100">
                            <th class="text-left">Container Type</th>
                            <th class="text-right">Count</th>
                            <th class="text-left">Commodity</th>
                            <th class="text-right">TEU</th>
                        </thead>
                        <tbody class="sale_tbody">
                            <t t-foreach="shipment_quote.quote_container_line_ids" t-as="line">
                                <tr class="bg-200 font-weight-bold">
                                    <td><span t-field="line.container_type_id.name"/> </td>
                                    <td class="text-right"><span t-field="line.count"/> </td>
                                    <td><span t-field="line.commodity.name"/> </td>
                                    <td class="text-right"><span t-field="line.teu"/> </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </section>
            <section id="details" style="page-break-inside: auto;" class="mt32">
                <h3 id="details">Charges</h3>
                <div class="table-responsive">
                    <table t-att-data-order-id="shipment_quote.id" t-att-data-token="shipment_quote.access_token" class="table table-sm" id="shipment_quote_table">
                        <thead class="bg-100">
                            <tr>
                                <th class="text-left">Charge Description</th>
                                <th class="text-right">Quantity</th>
                                <th class="text-left">Taxes</th>
                                <!-- <th class="text-right">Cost Rate Per Unit</th> -->
                                <th class="text-right">Sell Rate Per Unit</th>
                                <th class="text-right">Total</th>
                            </tr>
                        </thead>
                        <tbody class="sale_tbody">
                            <t t-foreach="shipment_quote.charges_visibility_to_customer()" t-as="line">
                                <tr class="bg-200 font-weight-bold">
                                    <td><span t-esc="line.get('display_name')"/></td>
                                    <td class="text-right"><span t-esc="line.get('quantity')"/></td>
                                    <td class="small font-weight-bold text-left"><span t-esc="line.get('tax_ids')"/></td>
                                    <!-- <td class="text-right"><span t-esc="line.get('cost_amount_rate')"/></td> -->
                                    <td class="text-right"><span t-esc="line.get('sell_amount_rate')"/></td>
                                    <td class="text-right"><span t-esc="line.get('total_sell_amount')"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </section>
            <section id="terms" class="mt-5" t-if="not is_html_empty(shipment_quote.note)">
                <h3 class="">Terms &amp; Conditions</h3>
                <hr class="mt-0 mb-1"/>
                <em t-field="shipment_quote.note"/>
            </section>
        </div>
    </template>
</odoo>
