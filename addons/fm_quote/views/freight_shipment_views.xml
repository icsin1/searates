<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="freight_house_shipment_quote_inherit_view_form" model="ir.ui.view">
        <field name="name">freight.shipment.quote.inherit.view.form</field>
        <field name="model">freight.house.shipment</field>
        <field name="inherit_id" ref="freight_management.freight_house_shipment_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="shipment_quote_domain" invisible="1" />
                <field name="shipment_quote_id" string="From Quote" domain="shipment_quote_domain"
                       options="{'no_create': True, 'no_open': True}"/>
            </xpath>
            <xpath expr="//button[@name='action_remove_all_packages']" position="before">
                <button type="object" name="action_fetch_from_quote" string="Fetch from Quote" class="btn btn-primary mb-2 mx-2 mt-2" attrs="{'invisible': ['|', '|', ('id', '&lt;=', 0), ('shipment_quote_id', '=', False), ('state', 'in', ['completed', 'cancelled'])]}"/>
            </xpath>
            <xpath expr="//field[@name='sales_agent_id']" position="attributes">
                <attribute name="attrs">{'readonly': [('shipment_quote_id', '!=', False)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='package_ids']//tree/field[@name='package_type_id']" position="before">
                <field name="quote_cargo_line_id" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='container_ids']//tree/field[@name='container_type_id']" position="before">
                <field name="quote_container_line_id" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='is_courier_shipment']" position="attributes">
                <attribute name="attrs">{'readonly': [('id', '>', 0)], 'invisible': ['|', '&amp;', ('id', '>', 0), ('is_courier_shipment', '=', False), '&amp;', ('shipment_quote_id', '!=', False), ('is_courier_shipment', '=', False)]}</attribute>
            </xpath>
        </field>
    </record>

    <record id="freight_house_shipment_quote_state_button_inherit_view_form" model="ir.ui.view">
        <field name="name">freight.shipment.quote.inherit.statebutton.view.form</field>
        <field name="model">freight.house.shipment</field>
        <field name="inherit_id" ref="freight_management_charges.freight_house_shipment_revenue_charges_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vendor_bill_count']/.." position="after">
                <button class="oe_stat_button" type="object" name="action_shipment_quote" icon="fa-book" string="Quote" attrs="{'invisible': [('shipment_quote_id', '=', False)]}"/>
            </xpath>
        </field>
    </record>
</odoo>
