<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="quotation_change_reason_view_tree" model="ir.ui.view">
        <field name="name">change.reason.tree</field>
        <field name="model">change.reason</field>
        <field name="arch" type="xml">
            <tree string="Quotation Change Reason" editable="top"  delete="false">
                <field name="name"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <record id="action_quotation_status_change_reason" model="ir.actions.act_window">
        <field name="name">Quotation Status Change Reasons</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">change.reason</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem
        id="menu_status_change_reason"
        name="Status Change Reasons"
        parent="freight_base.root_freight_admin_manage_menu"
        action="action_quotation_status_change_reason"/>
</odoo>
