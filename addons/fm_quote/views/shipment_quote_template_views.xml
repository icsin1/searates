<?xml version="1.0" ?>
<odoo>

    <record id="shipment_quote_template_view_tree" model="ir.ui.view">
        <field name="name">shipment.quote.template.view.tree</field>
        <field name="model">shipment.quote.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="template_for"/>
                <field name="transport_mode_id" optional="show"/>
                <field name="shipment_type_id" optional="show"/>
                <field name="cargo_type_ids" widget="many2many_tags" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="shipment_quote_template_view_form" model="ir.ui.view">
        <field name="name">shipment.quote.template.view.form</field>
        <field name="model">shipment.quote.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="template_for" widget="radio" options="{'horizontal': True}" attrs="{'readonly': [('id', '!=', False)]}"/>
                        </group>
                        <group name="freight_product">
                            <field name="transport_mode_id" options="{'no_create': True}" attrs="{'readonly': [('id', '!=', False)], 'required': [('template_for', '=', 'shipment')]}" readonly="context.get('from_quote', False)"/>
                            <field name="shipment_type_id" options="{'no_create': True}" attrs="{'readonly': [('id', '!=', False)], 'required': [('template_for', '=', 'shipment')]}" readonly="context.get('from_quote', False)"/>
                            <field name="cargo_type_domain" invisible="1" />
                            <field name="cargo_type_ids" domain="cargo_type_domain" attrs="{'readonly': [('id', '!=', False)], 'required': [('template_for', '=', 'shipment')]}" widget="many2many_tags" options="{'no_create': True}" readonly="context.get('from_quote', False)"/>
                        </group>
                    </group>
                    <group>
                        <field name="body_html" widget="html"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="shipment_quote_template_action" model="ir.actions.act_window">
        <field name="name">Quote Template</field>
        <field name="res_model">shipment.quote.template</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Define a new quote template.
              </p>
        </field>
    </record>

    <menuitem
        id="menu_shipment_quote_template"
        name="Quote Template"
        action="shipment_quote_template_action"
        parent="fm_sale_crm.fm_sales_configuration_menu"/>

</odoo>
