<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_fm_quote_config" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.shipment.config</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="18"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='freight_base']" position="inside">
                <h2>Shipper Consignee Updation</h2>
                <div class="row mt16 o_settings_container" name="allow_shipper_consignee_update">
                    <div class="col-12 col-lg-6 o_setting_box" id="allow_shipper_consignee_update">
                        <div class="o_setting_left_pane">
                            <field name="shipment_allow_shipper_consignee_change"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <div class="row">
                                <div class="col">
                                    <label for="shipment_allow_shipper_consignee_change"/>
                                    <p class="text-muted">Allow user to change shipper/Consignee in house shipment</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>