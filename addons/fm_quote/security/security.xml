<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="model_shipment_quote_company_rule" model="ir.rule">
            <field name="name">Shipment Quote Multi-Company</field>
            <field name="model_id" ref="fm_quote.model_shipment_quote"/>
            <field name="domain_force">['|',('company_id','=',False), ('company_id', 'in', company_ids)]</field>
        </record>

        <!--Record Rules-->
        <record model="ir.rule" id="shipment_quote_admin_rule">
            <field name="name">shipment_quote: Admin Access</field>
            <field name="model_id" ref="fm_quote.model_shipment_quote"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system')), (4, ref('fm_sale_crm.group_sales_administrator'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
        </record>

        <record model="ir.rule" id="shipment_quote_salesman_rule">
            <field name="name">shipment_quote: Salesman Access</field>
            <field name="model_id" ref="fm_quote.model_shipment_quote"/>
            <field name="domain_force">	[('create_uid','=', user.id)]</field>
            <field name="groups" eval="[(4, ref('fm_sale_crm.group_salesman'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="active" eval="True"/>
        </record>

        <record model="ir.rule" id="shipment_quote_sales_manager_rule">
            <field name="name">shipment_quote: Sales Manager Access</field>
            <field name="model_id" ref="fm_quote.model_shipment_quote"/>
            <field name="domain_force">user.get_shipment_quote()</field>
            <field name="groups" eval="[(4, ref('fm_sale_crm.group_sales_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="active" eval="False"/>
        </record>

        <function name="write" model="ir.model.data">
            <function name="search" model="ir.model.data">
                <value eval="[('module', '=', 'fm_quote'), ('name', '=', 'shipment_quote_salesman_rule')]"/>
            </function>
            <value eval="{'noupdate': False}" />
        </function>

    </data>
</odoo>
