<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="wizard_shipment_quote_status_view_form" model="ir.ui.view">
        <field name="name">wizard.shipment.quote.status.form</field>
        <field name="model">wizard.shipment.quote.status</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="quotation_id" invisible="1"/>
                    <field name="state"/>
                    <field name="change_reason_id" attrs="{'invisible' : [('state', 'not in', ['reject', 'cancel'])], 'required': [('state', 'in', ['reject', 'cancel'])]}" options="{'no_create': True}"/>
                    <field name="remark" attrs="{'invisible' : [('state', 'not in', ['reject', 'cancel'])], 'required': [('change_reason_id', '==', %(fm_quote.quotation_state_change_other)d)]}"/>
                </group>
                <footer>
                    <button string="Confirm" name="action_change_status" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default" special="cancel" />
                </footer>
            </form>

        </field>
    </record>

    <record id="wizard_shipment_quote_status_action" model="ir.actions.act_window">
        <field name="name">Change Status</field>
        <field name="res_model">wizard.prospect.lead.status</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="wizard_shipment_quote_status_view_form"/>
        <field name="target">new</field>
    </record>

</odoo>
