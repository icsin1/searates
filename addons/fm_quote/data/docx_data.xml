<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="quote_docx_ir_action_report_template" model="ir.actions.report">
            <field name="name">Quotation</field>
            <field name="model">shipment.quote</field>
            <field name="report_type">docx</field>
            <field name="report_name">Quote Docx Report</field>
            <field name="binding_model_id" ref="fm_quote.model_shipment_quote"/>
            <field name="report_res_model">docx.template</field>
        </record>

        <record id="quote_docx_template_record" model="docx.template">
            <field name="name">Quotation</field>
            <field name="res_model_id" ref="fm_quote.model_shipment_quote"/>
            <field name="output_type">pdf</field>
            <field name="filename">quote_docx_template.docx</field>
            <field name="report_id"  ref="quote_docx_ir_action_report_template"/>
            <field name="docx_file" type="base64" file="fm_quote/data/Quotation.docx"/>
        </record>

        <record id="quote_docx_ir_action_report_template" model="ir.actions.report">
            <field name="report_res_id" eval="ref('fm_quote.quote_docx_template_record')"/>
        </record>

        <!-- Record 1: Quotation -->
        <record id="doc_type_quote_quotation" model="freight.document.type">
            <field name="name">Quotation</field>
            <field name="model_id" ref="model_shipment_quote"/>
            <field name="document_mode">out</field>
            <field name="report_template_ref_id" ref="quote_docx_template_record"/>
        </record>

        <!-- Record 2: Carrier Quote -->
        <record id="doc_type_quote_carrier_quote" model="freight.document.type">
            <field name="name">Carrier Quote</field>
            <field name="model_id" ref="model_shipment_quote"/>
            <field name="document_mode">in</field>
        </record>

        <!-- Record 3: Packing Quote -->
        <record id="doc_type_quote_Packing_Quote" model="freight.document.type">
            <field name="name">Packing Quote</field>
            <field name="model_id" ref="model_shipment_quote"/>
            <field name="document_mode">in</field>
        </record>

        <!-- Record 4: Others -->
        <record id="doc_type_quote_others" model="freight.document.type">
            <field name="name">Others</field>
            <field name="model_id" ref="model_shipment_quote"/>
            <field name="document_mode">in</field>
        </record>

    </data>

</odoo>
