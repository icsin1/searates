<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="sequence_freight_quotation" model="ir.sequence">
            <field name="name">Freight Quotation Sequence</field>
            <field name="code">freight.quotation.sequence</field>
            <field name="prefix">/%(year)s/</field>
            <field name="padding">3</field>
            <field eval="1" name="number_next"/>
            <field eval="1" name="number_increment"/>
            <field name="company_id" ref="base.main_company"/>
        </record>
    </data>

    <data>
        <record id="quotation_state_change_reason_one" model="change.reason">
            <field name="name">Quote on hold by customer</field>
        </record>

        <record id="quotation_state_change_reason_two" model="change.reason">
            <field name="name">Delayed Customer response</field>
        </record>

        <record id="quotation_state_change_reason_three" model="change.reason">
            <field name="name">Not needed anymore</field>
        </record>

        <record id="quotation_state_change_reason_four" model="change.reason">
            <field name="name">Customer booked from other agency</field>
        </record>

        <record id="quotation_state_change_other" model="change.reason">
            <field name="name">Other</field>
        </record>
    </data>
</odoo>
