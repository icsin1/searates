<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="0">
        <record id="shipment_quote_email_template" model="mail.template">
            <field name="name">Shipment Quote: Send by email</field>
            <field name="model_id" ref="fm_quote.model_shipment_quote"/>
            <field name="subject">{{ object.company_id.name }} {{ 'Quote' }} (Ref {{ object.name or 'n/a' }})</field>
            <field name="email_from">{{user.email_formatted}}</field>
            <field name="email_to">{{ object.client_id.email }}</field>
            <field name="partner_to">{{ object.client_id.id }}</field>
            <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px;">
    <p style="margin: 0px; padding: 0px; font-size: 13px;">
        <t t-set="doc_name" t-value="'quotation' if object.state in ('draft', 'sent') else 'order'"/>
        Hello,
        <br/><br/>
        Your Quote <strong t-out="object.name or ''"></strong>
        amounting in <strong t-out="format_amount(object.estimated_total_revenue, object.currency_id)"></strong> is ready for review.
        <br/><br/>
        <t t-if="not is_html_empty(object.note)">
            <strong>Terms &amp; Conditions:</strong>
            <p>
                <t t-out="object.note or ''"/>
            </p>
        </t>
        <p>Do not hesitate to contact us if you have any questions.</p>
        <br/>
    </p>
</div>
            </field>
            <field name="report_template" ref="fm_quote.quote_docx_ir_action_report_template"/>
            <field name="report_name">{{ (object.name or '').replace('/','_') }} </field>
            <field name="lang">{{ object.client_id.lang }}</field>
        </record>

        <record id="shipment_quote_confirmation_email_template" model="mail.template">
            <field name="name">Shipment Quote: Confirmation Email</field>
            <field name="model_id" ref="fm_quote.model_shipment_quote"/>
            <field name="subject">{{ object.company_id.name }} {{ 'Quote' }} (Ref {{ object.name or 'n/a' }})</field>
            <field name="email_from">{{user.email_formatted}}</field>
            <field name="partner_to">{{ object.client_id.id }}</field>
            <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px;">
    <p style="margin: 0px; padding: 0px; font-size: 12px;">
        Hello,
        <br/><br/>
        Your Quote <strong t-out="object.name or ''"></strong> amounting in <strong t-out="format_amount(object.estimated_total_revenue, object.currency_id)"></strong>
        has been confirmed.<br/>Thank you for your trust!
        <br/><br/>
        Do not hesitate to contact us if you have any questions.
        <br/><br/>
    </p>
</div></field>
            <field name="report_template" ref="fm_quote.quote_docx_ir_action_report_template"/>
            <field name="report_name">{{ (object.name or '').replace('/','_') }} </field>
            <field name="lang">{{ object.client_id.lang }}</field>
        </record>

        <record id="shipment_quote_rejection_email_template" model="mail.template">
            <field name="name">Shipment Quote: Quote Rejected</field>
            <field name="model_id" ref="fm_quote.model_shipment_quote"/>
            <field name="subject">
                {{ object.company_id.name }} {{ 'Quote' }} (Ref {{ object.name or 'n/a' }}) has been rejected
            </field>
            <field name="email_from">{{ user.email_formatted }}</field>
            <field name="email_to">{{ (object.user_id.email_formatted or user.email_formatted) }}</field>
            <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px;">
    <p style="margin: 0px; padding: 0px; font-size: 13px;">
        Hello,
        <br/><br/>
        The Quote <strong t-out="object.name or ''"></strong> has been rejected. <br />
        Reject Reason: <br/>
            <t t-out="object.decline_message" />
        <br/>
    </p>
</div>
            </field>
            <field name="report_template" ref="fm_quote.quote_docx_ir_action_report_template"/>
            <field name="report_name">{{ (object.name or '').replace('/','_') }} </field>
            <field name="lang">{{ object.user_id.partner_id.lang }}</field>
        </record>
    </data>
</odoo>
