<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <function name="write" model="ir.model.data">
        <function name="search" model="ir.model.data">
            <value eval="[('name', 'in', ['crm_opportunity_stage_open', 'crm_opportunity_stage_active', 'crm_opportunity_stage_created', 'crm_opportunity_stage_closed', 'crm_opportunity_stage_onhold']), ('module', '=', 'crm_prospect_lead')]"/>
        </function>
        <value eval="{'noupdate': False}"/>
    </function>
    <record id="crm_prospect_lead.crm_opportunity_stage_open" model="crm.prospect.opportunity.stage">
        <field name="allow_quote_creation" eval="True"></field>
    </record>
    <record id="crm_prospect_lead.crm_opportunity_stage_active" model="crm.prospect.opportunity.stage">
        <field name="allow_quote_creation" eval="True"></field>
    </record>
    <record id="crm_prospect_lead.crm_opportunity_stage_created" model="crm.prospect.opportunity.stage">
        <field name="allow_quote_creation" eval="True"></field>
    </record>
    <record id="crm_prospect_lead.crm_opportunity_stage_closed" model="crm.prospect.opportunity.stage">
        <field name="allow_quote_creation" eval="False"></field>
    </record>
    <record id="crm_prospect_lead.crm_opportunity_stage_onhold" model="crm.prospect.opportunity.stage">
        <field name="allow_quote_creation" eval="False"></field>
    </record>
    <function name="write" model="ir.model.data">
        <function name="search" model="ir.model.data">
            <value eval="[('name', 'in', ['crm_opportunity_stage_open', 'crm_opportunity_stage_active', 'crm_opportunity_stage_created', 'crm_opportunity_stage_closed', 'crm_opportunity_stage_onhold']), ('module', '=', 'crm_prospect_lead')]"/>
        </function>
        <value eval="{'noupdate': True}"/>
    </function>

</odoo>
