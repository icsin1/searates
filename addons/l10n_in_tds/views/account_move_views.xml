<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="inherit_view_account_move_form" model="ir.ui.view">
        <field name="name">account.move.view.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='journal_div']" position="after">
                <field name="company_calculate_tds" invisible="1"/>
                <field name="compute_tds" attrs="{'invisible':[('company_calculate_tds','=',False)]}"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree//field[@name='tax_ids']" position="after">
                <field name="account_tds_rate_id" options="{'no_create':1}"
                    attrs="{'column_invisible': ['|',('parent.compute_tds', '=', False), ('parent.company_calculate_tds', '=', False)]}"/>
                <field name="tds_amount" invisible="1"/>
                <field name="is_tds_line" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='line_ids']/tree//field[@name='tax_ids']" position="after">
                <field name="account_tds_rate_id" invisible="1"/>
                <field name="tds_amount" invisible="1"/>
                <field name="is_tds_line" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='tax_totals_json']" position="after">
                <field name="total_tds_amount" colspan="2" class="oe_subtotal_footer_separator"
                    attrs="{'invisible':['|', ('compute_tds','=',False), ('company_calculate_tds', '=', False)]}"/>
            </xpath>
        </field>
    </record>

</odoo>
