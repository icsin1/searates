<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.account</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='default_taxes_setting_container']" position="after">
                <h2>TDS</h2>
                <div class="row mt16 o_settings_container" name="tds_company_setting">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="calculate_tds" />
                        </div>
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <label for="calculate_tds"/>
                                <div class="row mt8" attrs="{'invisible': [('calculate_tds', '!=', True)]}">
                                    <label for="tds_receivable_account_id" class="col-lg-5 o_light_label"/>
                                    <field name="tds_receivable_account_id"/>
                                </div>
                                <div class="row mt8" attrs="{'invisible': [('calculate_tds', '!=', True)]}">
                                    <label for="tds_payable_account_id" class="col-lg-5 o_light_label"/>
                                    <field name="tds_payable_account_id"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
