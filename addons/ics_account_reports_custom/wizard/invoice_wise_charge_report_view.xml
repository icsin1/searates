<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="invoice_charge_report_wizard_form" model="ir.ui.view">
        <field name="name">invoice.charge.report.wizard.form</field>
        <field name="model">invoice.charge.report</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="from_date" required="1"/>
                        <field name="charge_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True}"/>
                    </group>
                    <group>
                        <field name="to_date" required="1"/>
                        <field name="company_ids" widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True}"/>
                    </group>
                </group>
                <footer>
                    <button type="object" string="XLSX" name="print_xlsx" class="btn btn-primary"/>
                    <button type="object" string="CSV" name="print_csv" class="btn btn-primary"/>
                    <button type="special" special="cancel" string="Cancel" class="btn-default"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_invoice_charge_report" model="ir.actions.act_window">
        <field name="name">Invoice Charge Wise Report</field>
        <field name="res_model">invoice.charge.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem
        id="menu_invoice_charge_report"
        parent="ics_account_reports.menu_root_account_reports"
        action="action_invoice_charge_report"
    />
</odoo>