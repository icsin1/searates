<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="freight_air_schedule_view_tree" model="ir.ui.view">
        <field name="name">freight.air.schedule.view.tree</field>
        <field name="model">freight.air.schedule</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="flight_number" class="font-weight-bold"/>
                <field name="carrier_id" />
                <field name="icoa_number" />
                <field name="iata_number" />
                <field name="origin_port_id" />
                <field name="destination_port_id" />
            </tree>
        </field>
    </record>

    <record id="freight_air_schedule_view_form" model="ir.ui.view">
        <field name="name">freight.air.schedule.view.form</field>
        <field name="model">freight.air.schedule</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="parent_id" invisible="1"/>
                    <h2 class="float-right"><field name="source" class="badge badge-info"/></h2>
                    <label for="name"/>
                    <div class="oe_title">
                        <h1><field name="name" force_save="1" /></h1>
                    </div>
                    <group string="Carrier &amp; Route">
                        <group>
                            <field name="transport_mode_id" widget="selection" groups="base.group_no_one" force_save="1" readonly="1"/>
                            <field name="transport_mode_type" groups="base.group_no_one"/>
                            <field name="carrier_domain" invisible="1" />
                            <field name="carrier_id" domain="carrier_domain" context="{'default_transport_mode_id': transport_mode_id}"/>
                            <field name="flight_number" class="font-weight-bold"/>
                            <field name="icoa_number"/>
                            <field name="aircraft_type" string="Aircraft Type"/>
                        </group>
                        <group>
                            <field name="origin_port_id" string="Origin Airport"/>
                            <field name="origin_country_id" invisible="1"/>
                            <field name="destination_port_id" string="Destination Airport"/>
                            <field name="destination_country_id" invisible="1"/>
                            <field name="iata_number"/>
                            <field name="flight_status"/>
                        </group>
                    </group>
                    <group>
                        <group string="Departure">
                            <field name="estimated_departure_date" class="oe_inline"/>
                            <field name="actual_departure_date" class="oe_inline" />
                        </group>
                        <group string="Arrival">
                            <field name="estimated_arrival_date" class="oe_inline" />
                            <field name="actual_arrival_date" class="oe_inline" />
                        </group>
                        <group string="Cut-Off">
                            <field name="onboarding_cut_off" class="oe_inline" />
                        </group>
                    </group>
                    <notebook>
                        <page name="schedule_legs" string="Legs Details" attrs="{'invisible': [('parent_id', '!=', False)]}">
                            <field name="leg_ids" context="{'default_parent_id': active_id, 'default_transport_mode_id': transport_mode_id}"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="freight_air_schedule_action" model="ir.actions.act_window">
        <field name="name">Air Schedules</field>
        <field name="res_model">freight.air.schedule</field>
        <field name="view_mode">tree,form</field>
        <field name="domain" eval="[('transport_mode_id', '=', ref('freight_base.transport_mode_air'))]"/>
        <field name="context" eval="{'default_source': 'manual', 'default_transport_mode_id': ref('freight_base.transport_mode_air')}"/>
    </record>

    <menuitem
        id="air_schedule_menu"
        name="Air Schedules"
        action="freight_air_schedule_action"
        parent="fm_schedule.fm_schedule_root_menu"
        sequence="1"/>
</odoo>
