<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="shipment_charge_pro_forma_invoice_wizard_view_form" model="ir.ui.view">
        <field name="name">shipment.charge.pro.forma.invoice.wizard.view.form</field>
        <field name="model">shipment.charge.pro.forma.invoice.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Pro-Forma Invoice" class="pt-3">
                <separator string="Pro-Forma Invoicing Mode"/>
                <group class="my-0">
                    <group>
                        <field name="partner_mode" widget="radio" options="{'horizontal': True}"/>
                    </group>
                    <group>
                        <field name="filter_partner_ids" widget="many2many_tags" invisible="1"/>
                        <field name="partner_ids" widget="many2many_tags" domain="[('id', 'in', filter_partner_ids)]" options="{'no_create': 1}" string="For Customers" attrs="{'invisible': [('partner_mode', '!=', 'specific')], 'required': [('partner_mode', '=', 'specific')]}"/>
                    </group>
                </group>
                <group class="my-0">
                    <group>
                        <field name="single_currency_billing" widget="boolean_toggle"/>
                        <field name="invoice_cash_rounding_id" options="{'no_create': 1, 'no_open': 1}" groups="account.group_cash_rounding"/>
                    </group>
                    <group>
                        <field name="currency_id" options="{'no_create': 1, 'no_open': 1}" attrs="{'invisible': [('single_currency_billing', '=', False)], 'required': [('single_currency_billing', '=', True)]}"/>
                        <field name="show_exchange_rate" invisible="1"/>
                        <field name="amount_conversion_rate" attrs="{'invisible': [('show_exchange_rate', '=', False)]}"/>
                    </group>
                </group>
                <field name="house_shipment_id" invisible="1"/>
                <group string="Generating For Charges" class="mt-0">
                    <field nolabel="1" name="charge_ids">
                        <tree create="0">
                            <field name="charge_description"/>
                            <field name="partner_id"/>
                            <field name="company_id" optional="hide"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="amount_conversion_rate" attrs="{'column_invisible': [('parent.show_exchange_rate', '=', True)]}"/>
                            <field name="amount_currency_id"/>
                            <field name="amount_rate"/>
                            <field name="amount_currency_residual" class="text-info font-weight-bold"/>
                            <field name="total_amount" class="text-success font-weight-bold"/>
                            <field name="status" widget="badge"/>
                        </tree>
                    </field>
                </group>
                <group string="Pro-Forma Invoices Will be Generated" class="mt-0">
                    <field name="line_ids" nolabel="1" colspan="2" force_save="1">
                        <tree editable="1" create="0">
                            <field name="partner_id" readonly="1" force_save="1" options="{'no_open': 1}"/>
                            <field name="currency_id" readonly="1" force_save="1"  options="{'no_open': 1}"/>
                            <field name="no_of_charges" readonly="1" force_save="1"/>
                            <field name="charge_ids" invisible="1"/>
                            <field name="amount" class="font-weight-bold" readonly="1" force_save="1"/>
                        </tree>
                        <form create="0" edit="0">
                            <group>
                                <group>
                                    <field name="partner_id" readonly="1" options="{'no_open': 1}"/>
                                    <field name="no_of_charges" readonly="1"/>
                                </group>
                                <group>
                                    <field name="currency_id" readonly="1" options="{'no_open': 1}"/>
                                    <field name="amount" readonly="1"/>
                                </group>
                            </group>
                        </form>
                    </field>
                </group>
                <footer>
                    <button name="action_generate_pro_forma_invoices" string="Generate &amp; View" type="object" class="btn-primary" attrs="{'invisible': [('line_ids', '=', [])]}"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="shipment_charge_pro_forma_invoice_wizard_action" model="ir.actions.act_window">
        <field name="name">Generate Pro-Forma Invoice</field>
        <field name="res_model">shipment.charge.pro.forma.invoice.wizard</field>
        <field name="view_mode">form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>
</odoo>
