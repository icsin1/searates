<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="0">
        <record id="pro_forma_invoice_email_template" model="mail.template">
            <field name="name">Pro-Forma Invoice: Send by email</field>
            <field name="model_id" ref="model_pro_forma_invoice"/>
            <field name="subject">{{ object.company_id.name }} {{ 'Pro-Forma' }} (Ref {{ object.name or 'n/a' }})</field>
            <field name="email_from">{{ user.email_formatted }}</field>
            <field name="email_to">{{ object.partner_id.email }}</field>
            <field name="partner_to">{{ object.partner_id.id }}</field>
            <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px;">
    <p style="margin: 0px; padding: 0px; font-size: 13px;">
        <t t-set="doc_name" t-value="'quotation' if object.state in ('draft', 'sent') else 'order'"/>
        Hello,
        <br/><br/>
        Your Pro-forma <strong t-out="object.name or ''"></strong>
        amounting in <strong t-out="format_amount(object.amount_total, object.currency_id)"></strong> is ready for review.
        <br/><br/>
        Do not hesitate to contact us if you have any questions.
        <br/>
    </p>
</div>
            </field>
            <field name="lang">{{ object.partner_id.lang }}</field>
            <field name="report_template" ref="fm_proforma.proforma_docx_ir_action_report_template"/>
            <field name="report_name">{{ (object.name or '').replace('/','_') }} </field>
        </record>

        <record id="pro_forma_invoice_reject_email_template" model="mail.template">
            <field name="name">Pro-Forma Invoice Rejected</field>
            <field name="model_id" ref="model_pro_forma_invoice"/>
            <field name="subject">{{ object.company_id.name }} {{ 'Pro-Forma' }} (Ref {{ object.name or 'n/a' }})</field>
            <field name="email_from">{{ user.email_formatted }}</field>
            <field name="partner_to">{{ object.partner_id.id }}</field>
            <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px;">
    <p style="margin: 0px; padding: 0px; font-size: 13px;">
        Hello,
        <br/><br/>
        The Pro-Forma <strong t-out="object.name or ''"></strong> has been rejected. <br />
        <t t-if="object.reject_reason">
            Reject Reason: <br/>
                <t t-out="object.reject_reason" />
            <br/>
        </t>
    </p>
</div>
            </field>
            <field name="lang">{{ object.partner_id.lang }}</field>
            <field name="report_template" ref="fm_proforma.proforma_docx_ir_action_report_template"/>
            <field name="report_name">{{ (object.name or '').replace('/','_') }} </field>
        </record>

        <record id="pro_forma_invoice_confirmation_email_template" model="mail.template">
            <field name="name">Pro-Forma Invoice: Confirmation Email</field>
            <field name="model_id" ref="model_pro_forma_invoice"/>
            <field name="subject">{{ object.company_id.name }} {{ 'Pro-Forma' }} (Ref {{ object.name or 'n/a' }})</field>
            <field name="email_from">{{ user.email_formatted }}</field>
            <field name="partner_to">{{ object.partner_id.id }}</field>
            <field name="body_html" type="html">
<div style="margin: 0px; padding: 0px;">
    <p style="margin: 0px; padding: 0px; font-size: 12px;">
        Hello,
        <br/><br/>
        Your Pro-Forma Invoice # <strong t-out="object.name or ''"></strong> amounting in <strong t-out="format_amount(object.amount_total, object.currency_id)"></strong>
        has been confirmed.<br/>Thank you for your trust!
        <br/><br/>
        Do not hesitate to contact us if you have any questions.
        <br/><br/>
    </p>
</div></field>
            <field name="lang">{{ object.partner_id.lang }}</field>
            <field name="report_template" ref="fm_proforma.proforma_docx_ir_action_report_template"/>
            <field name="report_name">{{ (object.name or '').replace('/','_') }} </field>
        </record>

    </data>
</odoo>
