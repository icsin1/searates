<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="pro_forma_invoice_view_tree" model="ir.ui.view">
        <field name="name">pro.forma.invoice.view.tree</field>
        <field name="model">pro.forma.invoice</field>
        <field name="arch" type="xml">
            <tree create="false">
                <header>
                <button string="Approve All" class="oe_highlight" type="object" name="action_approve_all_proforma"/>
                </header>
                <field name="partner_id" string="Customer"/>
                <field name="name" string="Number"/>
                <field name="house_shipment_id" invisible="1"/>
                <field name="charge_house_shipment_ids" widget="many2many_tags" string="House Shipment"/>
                <field name="activity_ids" string="Next Activity" widget="list_activity"/>
                <field name="company_currency_id"/>
                <field name="amount_tax" widget="monetary"/>
                <field name="amount_total" widget="monetary"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="currency_id"/>
                <field name="state" widget="badge"/>
            </tree>
        </field>
    </record>

    <record id="pro_forma_invoice_view_form" model="ir.ui.view">
        <field name="name">pro.forma.invoice.view.form</field>
        <field name="model">pro.forma.invoice</field>
        <field name="arch" type="xml">
            <form duplicate="0" edit="0">
                <header>
                    <field name="state" widget="statusbar"/>
                    <button string="Reset To Draft" name="action_reset_to_draft" type="object" class="oe_highlight"
                        states="cancel"/>
                    <button name="add_charges_from_house_shipment" type="object" string="Add/Update Charges" class="oe_highlight"
                        attrs="{'invisible': [('show_shipment_charge_button', '=', False)]}"/>
                    <button string="Send by Email" name="action_send_by_email" type="object" context="{'send_proforma':True}" class="oe_highlight"
                        states="to_approve,approved"/>
                    <button string="Approve" name="action_approve_pro_forma" type="object" class="oe_highlight"
                        states="sent"/>
                    <button string="Create Invoice" name="action_create_invoice" type="object" class="oe_highlight"
                        states="approved"/>
                    <button string="Cancel" name="action_cancel_pro_forma" type="object" 
                        class="oe_highlight" states="to_approve,sent,approved"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="action_open_moves" type="object" icon="fa-edit" attrs="{'invisible': [('move_count', '=', 0)]}">
                            <field name="move_count" string="Invoices" widget="statinfo" icon="fa-usd"/>
                        </button>
                        <button name="preview_pro_forma_invoice"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-globe icon">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Customer</span>
                                <span class="o_stat_text">Preview</span>
                            </div>
                        </button>
                    </div>
                    <label for="name" string="PRO-FORMA Number"/>
                    <div class="oe_title">
                        <h1 class="mt0">
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" widget="res_partner_many2one"
                                   context="{'res_partner_search_mode': 'customer', 'show_address': 1, 'show_vat': True}"
                                   options='{"always_reload": True}' required="1"/>
                            <field name="house_shipment_id" invisible="1"/>
                            <field name="charge_house_shipment_ids" widget="many2many_tags" readonly="1" attrs="{'invisible': [('house_shipment_id', '=', False)]}"/>
                            <field name="show_shipment_charge_button" invisible="1"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company" readonly="1" force_save="1"/>
                            <field name="currency_id" readonly="1" force_save="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="charges_lines" string="Charges Line">
                            <field name="pro_forma_invoice_line_ids" readonly="1" force_save="1">
                                <tree editable="top" delete="0">
                                    <field name="product_id" options="{'no_create':1}" required="1"/>
                                    <field name="service_name"/>
                                    <field name="product_uom_id" required="1"/>
                                    <field name="currency_exchange_rate"/>
                                    <field name="charge_rate_per_unit" />
                                    <field name="shipment_charge_currency_id"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                    <field name="tax_ids" domain="[('type_tax_use','=','sale')]" widget="many2many_tags" options="{'no_create':1}"/>
                                    <field name="price_tax" widget="monetary" invisible="1"/>
                                    <field name="price_subtotal" widget="monetary"/>
                                    <field name="sell_currency_id" invisible="1"/>
                                    <field name="house_shipment_charge_revenue_id" invisible="1"/>
                                    <field name="is_rounding_line" invisible="1"/>
                                    <field name="account_id" invisible="1"/>
                                </tree>
                            </field>
                            <group name="note_group" col="6" class="mt-2 mt-md-0">
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                    <field name="amount_untaxed" colspan="2"/>
                                    <field name="amount_tax" colspan="2"/>
                                    <field name="amount_total" colspan="2"/>
                                </group>
                            </group>
                        </page>
                        <page groups="base.group_no_one" string="Customer Signature" name="customer_signature">
                            <group>
                                <field name="signed_by" readonly="1"/>
                                <field name="signed_on" readonly="1"/>
                                <field name="image_1920" widget="image" readonly="1"/>
                            </group>
                        </page>
                        <page string="Other Info" name="other_info" groups="account.group_cash_rounding">
                            <group>
                                <group>
                                    <field name="invoice_cash_rounding_id"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_proforma_invoice_filter" model="ir.ui.view">
        <field name="name">proforma.invoice.select</field>
        <field name="model">pro.forma.invoice</field>
        <field name="arch" type="xml">
            <search string="Search Invoice">
                <field name="name" string="Proforma Invoice"
                       filter_domain="[ '|', ('name', 'ilike', self), ('partner_id', 'child_of', self)]"/>
                <field name="partner_id" operator="child_of" string="Customer"/>
                <filter domain="[('user_id', '=', uid)]" name="myinvoices"  string="My Proforma Invoices" help="My Invoices"/>
                <separator/>
                <filter name="to_approve" string="To Approve" domain="[('state', '=','to_approve')]"/>
                <filter name="sent" string="Sent" domain="[('state', '=', 'sent')]"/>
                <filter name="approved" string="Approved" domain="[('state', '=', 'approved')]"/>
                <filter name="invoiced" string="Invoiced" domain="[('state', '=', 'invoiced')]"/>
                <filter name="cancel" string="Cancel" domain="[('state', '=', 'cancel')]"/>
                <separator/>
                <filter name="create_date" string="Created Date" date="create_date"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="status" string="Status" context="{'group_by':'state'}"/>
                </group>
           </search>
        </field>
    </record>

    <record id="pro_forma_invoice_action" model="ir.actions.act_window">
        <field name="name">Pro Forma Invoice</field>
        <field name="res_model">pro.forma.invoice</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="pro_forma_invoice_view_tree"/>
        <field name="search_view_id" ref="view_proforma_invoice_filter"/>
    </record>

    <menuitem
            id="menu_pro_forma_invoice"
            name="Pro Forma Invoice"
            parent="account.menu_finance_receivables"
            action="fm_proforma.pro_forma_invoice_action"
            sequence="16"
        />
</odoo>
