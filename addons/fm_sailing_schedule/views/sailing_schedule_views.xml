<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="freight_sailing_schedule_view_tree" model="ir.ui.view">
        <field name="name">freight.schedule.view.tree</field>
        <field name="model">freight.schedule</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="vessel_id" />
                <field name="voyage_number" class="font-weight-bold"/>
                <field name="carrier_id" />
                <field name="service_name" />
                <field name="scac_number" />
                <field name="imo_number" />
                <field name="origin_port_id" />
                <field name="destination_port_id" />
            </tree>
        </field>
    </record>

    <record id="freight_sailing_schedule_view_form" model="ir.ui.view">
        <field name="name">freight.schedule.view.form</field>
        <field name="model">freight.schedule</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="parent_id" invisible="1"/>
                    <h2 class="float-right"><field name="source" class="badge badge-info"/></h2>
                    <label for="name"/>
                    <div class="oe_title">
                        <h1><field name="name" force_save="1" /></h1>
                    </div>
                    <group string="Carrier &amp; Route">
                        <group>
                            <field name="transport_mode_id" widget="selection" groups="base.group_no_one" force_save="1" readonly="1"/>
                            <field name="transport_mode_type" groups="base.group_no_one"/>
                            <field name="carrier_id" domain="[('transport_mode_id', '=', transport_mode_id)]" context="{'default_transport_mode_id': transport_mode_id}"/>
                            <field name="voyage_number" attrs="{'invisible': [('transport_mode_type', '!=', 'sea')]}" class="font-weight-bold" required="1"/>
                            <field name="vessel_id" options="{'no_create':1}" attrs="{'invisible': [('transport_mode_type', '!=', 'sea')]}" required="1"/>
                            <field name="scac_number" attrs="{'invisible': [('transport_mode_type', '!=', 'sea')]}" required="1"/>
                        </group>
                        <group>
                            <field name="origin_port_id" />
                            <field name="origin_country_id" invisible="1"/>
                            <field name="destination_port_id" />
                            <field name="destination_country_id" invisible="1"/>
                            <field name="imo_number" attrs="{'invisible': [('transport_mode_type', '!=', 'sea')]}"/>
                            <field name="service_name" attrs="{'invisible': [('transport_mode_type', '!=', 'sea')]}"/>
                            <field name="transit_time" />
                            <field name="si_cutoff" />
                        </group>
                    </group>
                    <group>
                        <group string="Departure">
                            <field name="estimated_departure_date" class="oe_inline"  />
                            <field name="actual_departure_date" class="oe_inline"  />
                        </group>
                        <group string="Arrival">
                            <field name="estimated_arrival_date" class="oe_inline" />
                            <field name="actual_arrival_date" class="oe_inline"  />
                        </group>
                        <group string="Cut-Off" attrs="{'invisible': [('transport_mode_type', '!=', 'sea')]}">
                            <field name="vessel_cut_off" class="oe_inline"  />
                            <field name="vgm_cut_off" class="oe_inline"  />
                        </group>
                    </group>
                    <notebook>
                        <page name="schedule_legs" string="Legs Details" attrs="{'invisible': ['|', '|', ('transport_mode_type', '!=', 'sea'), ('id', '=', False), ('parent_id', '!=', False)]}">
                            <field name="leg_ids" context="{'default_parent_id': active_id, 'default_transport_mode_id': transport_mode_id}"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="freight_sailing_schedule_action" model="ir.actions.act_window">
        <field name="name">Sailing Schedules</field>
        <field name="res_model">freight.schedule</field>
        <field name="view_mode">tree,form</field>
        <field name="domain" eval="[('transport_mode_id', '=', ref('freight_base.transport_mode_sea'))]"/>
        <field name="context" eval="{'default_source': 'manual', 'default_transport_mode_id': ref('freight_base.transport_mode_sea')}"/>
    </record>

    <menuitem
        id="sailing_schedule_menu"
        name="Sailing Schedules"
        action="freight_sailing_schedule_action"
        parent="fm_schedule.fm_schedule_root_menu"
        sequence="0"/>
</odoo>
