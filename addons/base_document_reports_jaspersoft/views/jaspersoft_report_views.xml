<?xml version="1.0" encoding="utf-8"?>
<odoo>

     <record id="jaspersoft_jrxml_report_view_tree" model="ir.ui.view">
        <field name="name">jaspersoft.jrxml.report.view.tree</field>
        <field name="model">jaspersoft.jrxml.report</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="res_model_id" />
                <field name="show_wizard" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <record id="jaspersoft_jrxml_report_view_form" model="ir.ui.view">
        <field name="name">jaspersoft.jrxml.report.view.form</field>
        <field name="model">jaspersoft.jrxml.report</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_download_spec" type="object" class="oe_stat_button" icon="fa-cubes" attrs="{'invisible': [('freight_product_based_format', '=', True)]}">
                            <div class="o_stat_info">
                                <span class="o_stat_value">
                                    Json
                                </span>
                                <span class="o_stat_text font-weight-bold">
                                    Specification
                                </span>
                            </div>
                        </button>
                        <button name="action_download_json_sample" type="object" class="oe_stat_button" icon="fa-database" attrs="{'invisible': [('freight_product_based_format', '=', True)]}">
                            <div class="o_stat_info">
                                <span class="o_stat_value">
                                    Download
                                </span>
                                <span class="o_stat_text font-weight-bold">
                                    Sample Data
                                </span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" class="oe_inline"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="report_id" readonly="1" groups="base.group_no_one"/>
                            <field name="res_model_id" string="Module" options="{'no_create': True, 'no_create_edit': True}" required="1"/>
                            <field name="json_spec_id" domain="[('model_id', '=', res_model_id)]" context="{'default_model_id': res_model_id}" attrs="{'invisible': [('freight_product_based_format', '=', True)], 'required': [('freight_product_based_format', '=', False)]}"/>
                            <field name="output_type"/>
                        </group>
                        <group>
                            <field name="filename" invisible="1"/>
                            <field name="jrxml_file" filename="filename" attrs="{'required': [('freight_product_based_format', '=', False)], 'invisible': [('freight_product_based_format', '=', True)]}"/>
                            <field name="model_name" groups="base.group_no_one"/>
                            <field name="show_wizard" widget="boolean_toggle"/>
                        </group>
                    </group>
                    <field name="freight_product_based_format" widget="boolean_toggle"/>
                    <label for="freight_product_based_format"/>
                    <group string="Product Templates" attrs="{'invisible': [('freight_product_based_format', '=', False)]}">
                        <field name="product_report_ids" nolabel="1">
                            <tree editable="bottom">
                                <field name="sequence" widget="handle"/>
                                <field name="product_id" domain="[('model_id', '=', parent.res_model_id)]"/>
                                <field name="json_spec_id" domain="[('freight_product_id', '=', product_id), ('linked_property_ids', '=', False)]"/>
                                <field name="filename" invisible="1"/>
                                <field name="jrxml_file" filename="filename" attrs="{'required': [('parent.freight_product_based_format', '=', True)]}"/>
                                <button name="action_download_spec" type="object" class="oe_highlight fa fa-cubes btn-icon" title="Download Json Specification"/>
                                <button name="action_download_json_sample_product" type="object" class="oe_highlight fa fa-database btn-icon" title="Download Sample Data"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="jaspersoft_jrxml_report_action" model="ir.actions.act_window">
        <field name="name">Jasper Report (JRXML)</field>
        <field name="res_model">jaspersoft.jrxml.report</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <menuitem
        id="menu_jasperreport_field_template"
        name="Jasper Reports"
        action="jaspersoft_jrxml_report_action"
        parent="freight_base.menu_document_report_template"
        groups="odoo_base.group_freight_technical_support_team"
    />

</odoo>
