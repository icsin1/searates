<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="l10n_in_report_invoice_document_inherit" inherit_id="l10n_in.l10n_in_report_invoice_document_inherit">
        <!--Remove Headline-Invoice Name-->
        <xpath expr="//h2" position="attributes">
            <attribute name="class">d-none</attribute>
        </xpath>
        <!--Remove Destination and Place of supply-->
        <t t-if="o.company_id.account_fiscal_country_id.code == 'IN' and o.l10n_in_state_id" position="replace"/>
    </template>

    <template id="invoice_address_layout" inherit_id="fm_fta_account_reports.invoice_address_layout">
        <xpath expr="//table[@name='customer_detail_block']" position="inside">
            <tr t-if="o.company_id.account_fiscal_country_id.code == 'IN' and o.l10n_in_state_id">
                <t t-if="o.move_type in ('in_invoice', 'in_refund')">
                    <td><strong>Destination of supply</strong></td>
                    <td>: <span t-esc="o.l10n_in_state_id.name"/></td>
                </t>
                <t t-if="o.move_type in ('out_invoice', 'out_refund')">
                    <td><strong>Place of supply</strong></td>
                    <td>: <span t-esc="o.l10n_in_state_id.name"/></td>
                </t>
            </tr>
        </xpath>
    </template>
</odoo>
