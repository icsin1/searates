<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="shipment_quote_inttra_integration_view_form" model="ir.ui.view">
        <field name="name">shipment.quote.inttra.integrarion.view.form</field>
        <field name="model">shipment.quote</field>
        <field name="inherit_id" ref="fm_quote_schedule.shipment_quote_schedule_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='schedule_ids']" position="before">
                <div attrs="{'invisible': ['|', ('quote_for', '!=', 'shipment'), ('state', '=', 'cancel')]}">
                    <button string="Import Sailing Schedule" name="action_import_sailing_schedule" type="object" class="oe_highlight"
                        attrs="{'invisible': [('add_vessel_details','=', False)]}"/>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
