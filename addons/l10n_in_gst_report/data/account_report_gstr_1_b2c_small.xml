<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="l10n_in_report_gstr_1_b2c_small_report" model="web.report">
            <field name="name">B2C(Small) Details - 7</field>
            <field name="is_tax_report" eval="True"/>
            <field name="country_id" ref="base.in"/>
            <field name="model_id" ref="account.model_account_move_line"/>
            <field name="data_match_domain" eval="[
                ('move_id.move_type', 'in', ['out_invoice', 'out_refund']),
                ('parent_state', '=', 'posted'),
                ('move_id.l10n_in_gst_treatment', 'in', ['unregistered', 'consumer']),
                ('tax_tag_ids', '!=', False),
                ('tax_tag_ids', 'in', [ref('l10n_in_base.sgst_base_tag_tax'), ref('l10n_in_base.cgst_base_tag_tax'), ref('l10n_in_base.igst_base_tag_tax')]),
                '|',
                    ('move_id.l10n_in_transaction_mode', '=', 'intra_state'),
                    '&amp;',
                        ('move_id.l10n_in_transaction_mode', '=', 'inter_state'),
                        ('move_id.amount_total', '&lt;=', 250000)
            ]"/>
            <field name="filter_multi_company">disabled</field>
            <field name="filter_date_type">date_range</field>
            <field name="default_opening_date">last_month</field>
            <field name="date_field" ref="account.field_account_move_line__date"/>
            <field name="report_handler_model_id" ref="l10n_in_gst_report.model_gst_b2cs_invoice_report_handler"/>
            <field name="is_account_report" eval="True"/>
        </record>

        <record id="l10n_in_report_gstr1_b2cs_column_number" model="web.report.column">
            <field name="web_report_id" ref="l10n_in_report_gstr_1_b2c_small_report"/>
            <field name="name">Number</field>
            <field name="expression_label">number</field>
            <field name="sequence">1</field>
            <field name="value_type">string</field>
        </record>

        <record id="l10n_in_report_gstr1_b2cs_column_customer" model="web.report.column">
            <field name="web_report_id" ref="l10n_in_report_gstr_1_b2c_small_report"/>
            <field name="name">Customer</field>
            <field name="expression_label">customer</field>
            <field name="sequence">2</field>
            <field name="value_type">string</field>
        </record>

        <record id="l10n_in_report_gstr1_b2cs_column_invoice_date" model="web.report.column">
            <field name="web_report_id" ref="l10n_in_report_gstr_1_b2c_small_report"/>
            <field name="name">Invoice Date</field>
            <field name="expression_label">invoice_date</field>
            <field name="sequence">4</field>
            <field name="value_type">date</field>
        </record>

        <record id="l10n_in_report_gstr1_b2cs_column_voucher_type" model="web.report.column">
            <field name="web_report_id" ref="l10n_in_report_gstr_1_b2c_small_report"/>
            <field name="name">Voucher Type</field>
            <field name="expression_label">voucher_type</field>
            <field name="sequence">5</field>
            <field name="value_type">string</field>
        </record>

        <record id="l10n_in_report_gstr1_b2cs_column_taxable_value" model="web.report.column">
            <field name="web_report_id" ref="l10n_in_report_gstr_1_b2c_small_report"/>
            <field name="name">Taxable Value</field>
            <field name="expression_label">taxable_value</field>
            <field name="sequence">6</field>
            <field name="value_type">monetary</field>
        </record>
        <record id="l10n_in_report_gstr1_b2cs_column_total_cgst" model="web.report.column">
            <field name="web_report_id" ref="l10n_in_report_gstr_1_b2c_small_report"/>
            <field name="name">CGST</field>
            <field name="expression_label">total_cgst</field>
            <field name="sequence">7</field>
            <field name="value_type">monetary</field>
        </record>
        <record id="l10n_in_report_gstr1_b2cs_column_total_sgst" model="web.report.column">
            <field name="web_report_id" ref="l10n_in_report_gstr_1_b2c_small_report"/>
            <field name="name">SGST</field>
            <field name="expression_label">total_sgst</field>
            <field name="sequence">8</field>
            <field name="value_type">monetary</field>
        </record>
        <record id="l10n_in_report_gstr1_b2cs_column_total_igst" model="web.report.column">
            <field name="web_report_id" ref="l10n_in_report_gstr_1_b2c_small_report"/>
            <field name="name">IGST</field>
            <field name="expression_label">total_igst</field>
            <field name="sequence">9</field>
            <field name="value_type">monetary</field>
        </record>
        <record id="l10n_in_report_gstr1_b2cs_column_total_cess" model="web.report.column">
            <field name="web_report_id" ref="l10n_in_report_gstr_1_b2c_small_report"/>
            <field name="name">CESS</field>
            <field name="expression_label">total_cess</field>
            <field name="sequence">10</field>
            <field name="value_type">monetary</field>
        </record>
        <record id="l10n_in_report_gstr1_b2cs_column_total_tax" model="web.report.column">
            <field name="web_report_id" ref="l10n_in_report_gstr_1_b2c_small_report"/>
            <field name="name">Total Tax</field>
            <field name="expression_label">total_tax</field>
            <field name="sequence">11</field>
            <field name="value_type">monetary</field>
        </record>
        <record id="l10n_in_report_gstr1_b2cs_column_invoice_total" model="web.report.column">
            <field name="web_report_id" ref="l10n_in_report_gstr_1_b2c_small_report"/>
            <field name="name">Invoice Total</field>
            <field name="expression_label">invoice_total</field>
            <field name="sequence">12</field>
            <field name="value_type">monetary</field>
        </record>

        <!-- Setting action for b2bcl -->

        <record id="action_l10n_in_report_gstr1_b2c_small" model="ir.actions.client">
            <field name="name">B2C(Small) Details - 7</field>
            <field name="res_model">web.report</field>
            <field name="tag">ics_report_base.web_report</field>
            <field name="context" eval="{'report_id': ref('l10n_in_gst_report.l10n_in_report_gstr_1_b2c_small_report')}"/>
        </record>

        <record id="l10n_in_gst_report.l10n_in_report_gstr1_line_b2cs" model="web.report.line">
            <field name="action_id" ref="action_l10n_in_report_gstr1_b2c_small"/>
        </record>
    </data>
</odoo>
