<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <data noupdate="0">

        <record id="l10n_in_report_gstr_1_hsn_code_detail_report" model="web.report">
            <field name="name">HSN Code Details</field>
            <field name="is_tax_report" eval="True"/>
            <field name="country_id" ref="base.in"/>
            <field name="model_id" ref="account.model_account_move_line"/>
            <field name="data_match_domain" eval="[
                ('move_id.move_type', 'in', ['out_invoice', 'out_receipt', 'out_refund']),
                ('parent_state', '=', 'posted'),
                ('tax_ids', '!=', False),
                ('move_id.l10n_in_gst_treatment', '!=', False),
                ('product_id.l10n_in_hsn_code', '!=', False),
            ]"/>
            <field name="filter_multi_company">disabled</field>
            <field name="filter_date_type">date_range</field>
            <field name="default_opening_date">last_month</field>
            <field name="date_field" ref="account.field_account_move_line__date"/>
            <field name="report_handler_model_id" ref="l10n_in_gst_report.model_gst_hsn_code_detail_invoice_report_handler"/>
            <field name="is_account_report" eval="True"/>
        </record>

         <record id="l10n_in_report_gstr1_hsn_detail_column_date" model="web.report.column">
            <field name="web_report_id" ref="l10n_in_report_gstr_1_hsn_code_detail_report"/>
            <field name="name">Date</field>
            <field name="expression_label">invoice_date</field>
            <field name="sequence">1</field>
            <field name="value_type">date</field>
        </record>

        <record id="l10n_in_report_gstr1_hsn_detail_column_particulars" model="web.report.column">
            <field name="web_report_id" ref="l10n_in_report_gstr_1_hsn_code_detail_report"/>
            <field name="name">Particulars</field>
            <field name="expression_label">customer</field>
            <field name="sequence">2</field>
            <field name="value_type">string</field>
        </record>

        <record id="l10n_in_report_gstr1_hsn_detail_column_voucher_type" model="web.report.column">
            <field name="web_report_id" ref="l10n_in_report_gstr_1_hsn_code_detail_report"/>
            <field name="name">Voucher Type</field>
