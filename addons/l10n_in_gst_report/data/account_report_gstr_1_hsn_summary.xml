<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <data noupdate="0">

        <record id="l10n_in_report_gstr_1_hsn_summary_report" model="web.report">
            <field name="name">HSN Summary</field>
            <field name="is_tax_report" eval="True"/>
            <field name="country_id" ref="base.in"/>
            <field name="model_id" ref="account.model_account_move_line"/>
            <field name="data_match_domain" eval="[
                ('move_id.move_type', 'in', ['out_invoice', 'out_receipt', 'out_refund']),
                ('parent_state', '=', 'posted'),
                ('tax_ids', '!=', False),
                ('move_id.l10n_in_gst_treatment', '!=', False),
                ('product_id.l10n_in_hsn_code', '!=', False),
            ]"/>
            <field name="filter_multi_company">disabled</field>
            <field name="filter_date_type">date_range</field>
            <field name="default_opening_date">last_month</field>
            <field name="date_field" ref="account.field_account_move_line__date"/>
            <field name="report_handler_model_id" ref="l10n_in_gst_report.model_gst_hsn_summary_invoice_report_handler"/>
            <field name="is_account_report" eval="True"/>

        </record>

       <record id="l10n_in_report_gstr1_hsn_column_hsn_code" model="web.report.column">
           <field name="web_report_id" ref="l10n_in_report_gstr_1_hsn_summary_report"/>
           <field name="name">HSN</field>
           <field name="expression_label">hsn_code</field>
           <field name="sequence">1</field>
           <field name="value_type">string</field>
       </record>

        <record id="l10n_in_report_gstr1_hsn_column_description" model="web.report.column">
            <field name="web_report_id" ref="l10n_in_report_gstr_1_hsn_summary_report"/>
            <field name="name">Description</field>
            <field name="expression_label">description</field>
            <field name="sequence">2</field>
            <field name="value_type">string</field>
        </record>

        <record id="l10n_in_report_gstr1_hsn_column_uqc" model="web.report.column">
            <field name="web_report_id" ref="l10n_in_report_gstr_1_hsn_summary_report"/>
            <field name="name">UQC</field>
            <field name="expression_label">uqc</field>
            <field name="sequence">4</field>
            <field name="value_type">string</field>
        </record>

        <record id="l10n_in_report_gstr1_hsn_column_quantity" model="web.report.column">
            <field name="web_report_id" ref="l10n_in_report_gstr_1_hsn_summary_report"/>
            <field name="name">Quantity</field>
            <field name="expression_label">quantity</field>
            <field name="sequence">5</field>
            <field name="value_type">float</field>
        </record>

        <record id="l10n_in_report_gstr1_hsn_column_total_amount" model="web.report.column">
            <field name="web_report_id" ref="l10n_in_report_gstr_1_hsn_summary_report"/>
            <field name="name">Total Amount</field>
            <field name="expression_label">invoice_total</field>
            <field name="sequence">6</field>
            <field name="value_type">monetary</field>
        </record>

        <record id="l10n_in_report_gstr1_hsn_column_tax_rate" model="web.report.column">
            <field name="web_report_id" ref="l10n_in_report_gstr_1_hsn_summary_report"/>
            <field name="name">Tax Rate</field>
            <field name="expression_label">tax_rate</field>
            <field name="sequence">7</field>
            <field name="value_type">string</field>
        </record>

        <record id="l10n_in_report_gstr1_hsn_column_taxable_amount" model="web.report.column">
            <field name="web_report_id" ref="l10n_in_report_gstr_1_hsn_summary_report"/>
            <field name="name">Taxable Amount</field>
            <field name="expression_label">taxable_value</field>
            <field name="sequence">8</field>
            <field name="value_type">monetary</field>
        </record>

        <record id="l10n_in_report_gstr1_hsn_column_igst" model="web.report.column">
            <field name="web_report_id" ref="l10n_in_report_gstr_1_hsn_summary_report"/>
            <field name="name">IGST</field>
            <field name="expression_label">total_igst</field>
            <field name="sequence">9</field>
            <field name="value_type">monetary</field>
        </record>

        <record id="l10n_in_report_gstr1_hsn_column_cgst" model="web.report.column">
            <field name="web_report_id" ref="l10n_in_report_gstr_1_hsn_summary_report"/>
            <field name="name">CGST</field>
            <field name="expression_label">total_cgst</field>
            <field name="sequence">10</field>
            <field name="value_type">monetary</field>
        </record>

        <record id="l10n_in_report_gstr1_hsn_column_sgst" model="web.report.column">
            <field name="web_report_id" ref="l10n_in_report_gstr_1_hsn_summary_report"/>
            <field name="name">SGST</field>
            <field name="expression_label">total_sgst</field>
            <field name="sequence">11</field>
            <field name="value_type">monetary</field>
        </record>

        <record id="l10n_in_report_gstr1_hsn_column_cess" model="web.report.column">
            <field name="web_report_id" ref="l10n_in_report_gstr_1_hsn_summary_report"/>
            <field name="name">CESS</field>
            <field name="expression_label">total_cess</field>
            <field name="sequence">12</field>
            <field name="value_type">monetary</field>
        </record>

        <record id="l10n_in_report_gstr1_hsn_column_tax_amount" model="web.report.column">
            <field name="web_report_id" ref="l10n_in_report_gstr_1_hsn_summary_report"/>
            <field name="name">Tax Amount</field>
            <field name="expression_label">total_tax</field>
            <field name="sequence">11</field>
            <field name="value_type">monetary</field>
        </record>

        <!-- Setting action for HSN Summary -->

        <record id="action_l10n_in_report_gstr1_hsn_summary" model="ir.actions.client">
            <field name="name">HSN Summary</field>
            <field name="res_model">web.report</field>
            <field name="tag">ics_report_base.web_report</field>
            <field name="context" eval="{'report_id': ref('l10n_in_gst_report.l10n_in_report_gstr_1_hsn_summary_report')}"/>
        </record>

        <record id="l10n_in_gst_report.l10n_in_report_gstr1_line_hsn" model="web.report.line">
            <field name="action_id" ref="action_l10n_in_report_gstr1_hsn_summary"/>
        </record>

    </data>

</odoo>
