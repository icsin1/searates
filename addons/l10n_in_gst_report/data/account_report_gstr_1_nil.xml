<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="l10n_in_report_gstr_1_nil_report" model="web.report">
            <field name="name">Nil Rated Supplies(8A, 8B, 8C, 8D)</field>
            <field name="is_tax_report" eval="True"/>
            <field name="country_id" ref="base.in"/>
            <field name="model_id" ref="account.model_account_move_line"/>
            <field name="data_match_domain" eval="[
                ('move_id.move_type', 'in', ['out_invoice', 'out_refund']),
                ('move_id.l10n_in_gst_treatment', '!=', 'overseas'),
                ('parent_state', '=', 'posted'),
                ('tax_ids', '!=', False),
                ('tax_tag_ids.name', 'in', ['+Exempt', '+Nil Rated', '+Non GST Supplies', '-Exempt', '-Nil Rated', '-Non GST Supplies'])
            ]"/>
            <field name="filter_multi_company">disabled</field>
            <field name="filter_date_type">date_range</field>
            <field name="default_opening_date">last_month</field>
            <field name="date_field" ref="account.field_account_move_line__date"/>
            <field name="report_handler_model_id" ref="l10n_in_gst_report.model_gst_nil_invoice_report_handler"/>
            <field name="is_account_report" eval="True"/>
        </record>

        <record id="l10n_in_report_gstr1_nil_column_number" model="web.report.column">
            <field name="web_report_id" ref="l10n_in_report_gstr_1_nil_report"/>
            <field name="name">Number</field>
            <field name="expression_label">number</field>
            <field name="sequence">1</field>
            <field name="value_type">string</field>
        </record>

        <record id="l10n_in_report_gstr1_nil_column_customer" model="web.report.column">
            <field name="web_report_id" ref="l10n_in_report_gstr_1_nil_report"/>
            <field name="name">Customer</field>
            <field name="expression_label">customer</field>
            <field name="sequence">2</field>
            <field name="value_type">string</field>
        </record>

        <record id="l10n_in_report_gstr1_nil_column_invoice_date" model="web.report.column">
            <field name="web_report_id" ref="l10n_in_report_gstr_1_nil_report"/>
            <field name="name">Invoice Date</field>
            <field name="expression_label">invoice_date</field>
            <field name="sequence">4</field>
            <field name="value_type">date</field>
        </record>

        <record id="l10n_in_report_gstr1_nil_column_voucher_type" model="web.report.column">
            <field name="web_report_id" ref="l10n_in_report_gstr_1_nil_report"/>
            <field name="name">Voucher Type</field>
            <field name="expression_label">voucher_type</field>
            <field name="sequence">5</field>
            <field name="value_type">string</field>
        </record>

        <record id="l10n_in_report_gstr1_nil_column_total_nil_rated" model="web.report.column">
            <field name="web_report_id" ref="l10n_in_report_gstr_1_nil_report"/>
            <field name="name">Nil Rated</field>
            <field name="expression_label">total_nil_rated</field>
            <field name="sequence">6</field>
            <field name="value_type">monetary</field>
        </record>
        <record id="l10n_in_report_gstr1_nil_column_total_exempt" model="web.report.column">
            <field name="web_report_id" ref="l10n_in_report_gstr_1_nil_report"/>
            <field name="name">Exempt</field>
            <field name="expression_label">total_exempt</field>
            <field name="sequence">7</field>
            <field name="value_type">monetary</field>
        </record>
        <record id="l10n_in_report_gstr1_nil_column_total_non_gst" model="web.report.column">
            <field name="web_report_id" ref="l10n_in_report_gstr_1_nil_report"/>
            <field name="name">Non GST</field>
            <field name="expression_label">total_non_gst</field>
            <field name="sequence">8</field>
            <field name="value_type">monetary</field>
        </record>
        <record id="l10n_in_report_gstr1_nil_column_invoice_total" model="web.report.column">
            <field name="web_report_id" ref="l10n_in_report_gstr_1_nil_report"/>
            <field name="name">Total</field>
            <field name="expression_label">invoice_total</field>
            <field name="sequence">9</field>
            <field name="value_type">monetary</field>
        </record>

        <!-- Setting action for b2bcl -->

        <record id="action_l10n_in_report_gstr1_nil" model="ir.actions.client">
            <field name="name">Nil Rated Supplies(8A, 8B, 8C, 8D)</field>
            <field name="res_model">web.report</field>
            <field name="tag">ics_report_base.web_report</field>
            <field name="context" eval="{'report_id': ref('l10n_in_gst_report.l10n_in_report_gstr_1_nil_report')}"/>
        </record>

        <record id="l10n_in_gst_report.l10n_in_report_gstr1_line_nil" model="web.report.line">
            <field name="action_id" ref="action_l10n_in_report_gstr1_nil"/>
        </record>
    </data>
</odoo>
