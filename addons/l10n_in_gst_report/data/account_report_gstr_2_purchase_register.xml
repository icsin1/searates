<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="l10n_in_report_gstr_2_purchase_report" model="web.report">
            <field name="name">GSTR-2 Purchase Report</field>
            <field name="is_tax_report" eval="True"/>
            <field name="country_id" ref="base.in"/>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="data_match_domain" eval="[
                ('move_type', 'in', ['in_invoice', 'in_refund']),
                ('state', '=', 'posted'),
                ('invoice_line_ids.tax_ids', '!=', False),
                ('l10n_in_gst_treatment', 'in', ['regular', 'special_economic_zone', 'deemed_export']),
                ('line_ids.tax_tag_ids', 'in', [ref('l10n_in_base.sgst_base_tag_tax'), ref('l10n_in_base.cgst_base_tag_tax'), ref('l10n_in_base.igst_base_tag_tax')])
            ]"/>
            <field name="filter_multi_company">disabled</field>
            <field name="filter_date_type">date_range</field>
            <field name="default_opening_date">last_month</field>
            <field name="date_field" ref="account.field_account_move__invoice_date"/>
            <field name="report_handler_model_id" ref="l10n_in_gst_report.model_gstr2_purchase_report_handler"/>
            <field name="is_account_report" eval="True"/>
        </record>

        <record id="l10n_in_report_gstr2_column_gst_no" model="web.report.column">
            <field name="web_report_id" ref="l10n_in_report_gstr_2_purchase_report"/>
            <field name="name">GSTIN of supplier</field>
            <field name="expression_label">gst_number</field>
            <field name="sequence">1</field>
            <field name="value_type">string</field>
        </record>

        <record id="l10n_in_report_gstr2_column_customer" model="web.report.column">
            <field name="web_report_id" ref="l10n_in_report_gstr_2_purchase_report"/>
            <field name="name">Trade/Legal Name</field>
            <field name="expression_label">customer</field>
            <field name="sequence">2</field>
            <field name="value_type">string</field>
        </record>

        <record id="l10n_in_report_gstr2_column_gst_treatment" model="web.report.column">
            <field name="web_report_id" ref="l10n_in_report_gstr_2_purchase_report"/>
            <field name="name">Type of inward supplies</field>
            <field name="expression_label">gst_treatment</field>
            <field name="sequence">3</field>
            <field name="value_type">string</field>
        </record>

        <record id="l10n_in_report_gstr2_column_document_type" model="web.report.column">
            <field name="web_report_id" ref="l10n_in_report_gstr_2_purchase_report"/>
            <field name="name">Document type</field>
            <field name="expression_label">document_type</field>
            <field name="sequence">4</field>
            <field name="value_type">string</field>
        </record>

        <record id="l10n_in_report_gstr2_column_document_number" model="web.report.column">
            <field name="web_report_id" ref="l10n_in_report_gstr_2_purchase_report"/>
            <field name="name">Document Number</field>
            <field name="expression_label">document_number</field>
            <field name="sequence">5</field>
            <field name="value_type">string</field>
        </record>

        <record id="l10n_in_report_gstr2_column_document_date" model="web.report.column">
            <field name="web_report_id" ref="l10n_in_report_gstr_2_purchase_report"/>
            <field name="name">Document Date</field>
            <field name="expression_label">document_date</field>
            <field name="sequence">6</field>
            <field name="value_type">string</field>
        </record>

        <record id="l10n_in_report_gstr2_column_taxable_value" model="web.report.column">
            <field name="web_report_id" ref="l10n_in_report_gstr_2_purchase_report"/>
            <field name="name">Taxable Value</field>
            <field name="expression_label">taxable_value</field>
            <field name="sequence">7</field>
            <field name="value_type">monetary</field>
        </record>

        <record id="l10n_in_report_gstr2_column_total_igst" model="web.report.column">
            <field name="web_report_id" ref="l10n_in_report_gstr_2_purchase_report"/>
            <field name="name">Integrated tax</field>
            <field name="expression_label">total_igst</field>
            <field name="sequence">8</field>
            <field name="value_type">monetary</field>
        </record>

        <record id="l10n_in_report_gstr2_column_total_cgst" model="web.report.column">
            <field name="web_report_id" ref="l10n_in_report_gstr_2_purchase_report"/>
            <field name="name">Central tax</field>
            <field name="expression_label">total_cgst</field>
            <field name="sequence">9</field>
            <field name="value_type">monetary</field>
        </record>
        <record id="l10n_in_report_gstr2_column_total_sgst" model="web.report.column">
            <field name="web_report_id" ref="l10n_in_report_gstr_2_purchase_report"/>
            <field name="name">State/UT tax</field>
            <field name="expression_label">total_sgst</field>
            <field name="sequence">9</field>
            <field name="value_type">monetary</field>
        </record>
        
        <record id="l10n_in_report_gstr2_column_total_cess" model="web.report.column">
            <field name="web_report_id" ref="l10n_in_report_gstr_2_purchase_report"/>
            <field name="name">Cess</field>
            <field name="expression_label">total_cess</field>
            <field name="sequence">10</field>
            <field name="value_type">monetary</field>
        </record>

    </data>
</odoo>
