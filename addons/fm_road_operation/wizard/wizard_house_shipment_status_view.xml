<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_wizard_house_shipment_status_form" model="ir.ui.view">
        <field name="name">wizard.house.shipment.status.form</field>
        <field name="model">wizard.house.shipment.status</field>
        <field name="inherit_id" ref="freight_management.view_wizard_house_shipment_status_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='change_reason_id']" position="before">
                <field name="road_export_state" string="State" attrs="{'invisible': ['|', ('shipment_type_key', '!=', 'export'), ('shipment_mode_type', '!=', 'land')], 'required': [('shipment_mode_type', '=', 'land'), ('shipment_type_key', '=', 'export')]}"/>
            </xpath>
        </field>
    </record>

</odoo>
