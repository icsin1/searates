<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="fm_road_operation_view_freight_master_shipment_package_form" model="ir.ui.view">
        <field name="name">fm_road_operation.freight.master.shipment.package.form</field>
        <field name="model">freight.master.shipment.package</field>
        <field name="inherit_id" ref="freight_management.view_freight_master_shipment_package_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='container_number']" position="before">
                <field name="allowed_truck_number_ids" invisible="1"/>
                <field name="allowed_truck_trailer_number_ids" invisible="1"/>
                <field name="truck_number_id" domain="[('id', 'in', allowed_truck_number_ids)]"
                       attrs="{'invisible': [('mode_type', '!=', 'land')]}" options="{'no_create': True}"/>
                <field name="trailer_number_id" domain="[('id', 'in', allowed_truck_trailer_number_ids)]"
                       attrs="{'invisible': [('mode_type', '!=', 'land')]}" options="{'no_create': True}"/>
            </xpath>
        </field>
    </record>

</odoo>
