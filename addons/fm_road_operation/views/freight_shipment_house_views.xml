<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="fm_road_operation_freight_house_shipment_view_form" model="ir.ui.view">
        <field name="name">fm_road_operation.freight.house.shipment.view.form</field>
        <field name="model">freight.house.shipment</field>
        <field name="inherit_id" ref="freight_management.freight_house_shipment_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='export_state']" position="after">
                <field name="export_road_state" widget="statusbar"
                       statusbar_visible="created,hlr_generated,booked,confirmed,in_transit,arrived,cancelled,completed"
                       attrs="{'invisible': ['|', ('shipment_type_key', '!=', 'export'), ('mode_type', '!=', 'land')]}"/>
            </xpath>

            <xpath expr="//group[@name='shipper']" position="attributes">
                <attribute name="attrs">{'invisible': [('mode_type', '=', 'land')]}</attribute>
            </xpath>
            <xpath expr="//group[@name='shipper']" position="after">
                <group string="Sending Forwarder" name="sending_forwarder" attrs="{'invisible': [('mode_type', '!=', 'land')]}" col="2" colspan="2">
                    <field name="shipper_id" string="Sending Forwarder" context="{'force_change': True}"
                           attrs="{'required': [('transport_mode_id','!=',False),('is_courier_shipment', '=', False), ('mode_type', 'not in', ['sea', 'air']), ('shipper_consignee_check', '!=', True)]}"/>
                    <field name="shipper_address_id" string="Address"
                           context="{'partner_category_display': 'short', 'show_address': 1,
                           'default_parent_id': shipper_id, 'default_type': 'delivery',
                           'form_view_ref': 'freight_base.res_partner_address_form'}"
                           options="{&quot;always_reload&quot;: True, &quot;highlight_first_line&quot;: True}"/>
                </group>
            </xpath>
            <xpath expr="//group[@name='consignee']" position="attributes">
                <attribute name="attrs">{'invisible': [('mode_type', '=', 'land')]}</attribute>
            </xpath>
            <xpath expr="//group[@name='consignee']" position="after">
                <group string="Receiving Forwarder" name="receiving_forwarder" attrs="{'invisible': [('mode_type', '!=', 'land')]}" col="2" colspan="2">
                    <field name="consignee_id" string="Receiving Forwarder" context="{'force_change': True}" attrs="{'required': [('transport_mode_id','!=',False),('is_courier_shipment', '=', False), ('mode_type', 'not in', ['sea', 'air']), ('shipper_consignee_check', '!=', True)]}"/>
                    <field name="consignee_address_id" string="Address"
                           context="{'partner_category_display': 'short', 'show_address': 1,
                           'default_parent_id': consignee_id, 'default_type': 'delivery',
                           'form_view_ref': 'freight_base.res_partner_address_form'}"
                           options="{&quot;always_reload&quot;: True, &quot;highlight_first_line&quot;: True}"/>
                </group>
            </xpath>
            <xpath expr="//group[@name='vessel_info']" position="after">
                <group name="transport_info" string="Transport Info"  attrs="{'invisible': [('mode_type', '!=', 'land')]}">
                    <field name="transportation_detail_ids" nolabel="1">
                        <tree>
                            <field name="truck_number_id" />
                            <field name="truck_owned_by" />
                            <field name="trailer_number_id" />
                            <field name="carrier_id" domain="[('mode_type', '=', parent.mode_type)]"/>
                            <field name="driver_name" />
                            <field name="driver_mobile_number" />
                        </tree>
                        <form string="Transport Info">
                            <sheet>
                                <group string="Truck Details" name="truck_details">
                                    <group>
                                        <field name="truck_number_id" />
                                        <field name="truck_owned_by" required="1" widget="radio" options="{'horizontal': True}"/>
                                        <field name="truck_type_id" options="{'no_open': True}" string="Truck Size Type"/>
                                        <field name="trailer_number_id" />
                                    </group>
                                    <group>
                                        <field name="carrier_id" required="1" context="{'default_transport_mode_id': parent.transport_mode_id}"
                                               domain="[('mode_type', '=', parent.mode_type)]"/>
                                        <field name="driver_name" />
                                        <field name="driver_mobile_number" />
                                    </group>
                                </group>
                                <group string="Other Transport Details" name="other_transport_details">
                                    <group>
                                        <field name="stuffing_location_type_id" />
                                        <field name="stuffing_un_location_id" domain="[('has_road', '=', True), ('location_type_id', '=', stuffing_location_type_id)]"/>
                                        <field name="stuffing_datetime" />
                                    </group>
                                    <group>
                                        <field name="destuffing_location_type_id" />
                                        <field name="destuffing_un_location_id" domain="[('has_road', '=', True), ('location_type_id', '=', destuffing_location_type_id)]"/>
                                        <field name="destuffing_datetime" />
                                    </group>
                                </group>
                                <group string="Truck Type &amp; Container No" name="container_details">
                                    <group>
                                        <field name="container_type_id" placeholder="Truck Type" options="{'no_create': True}" domain="[('transport_mode_id', '=', parent.transport_mode_id)]"/>
                                    </group>
                                    <group>
                                        <field name="allowed_container_number_ids" widget="many2many_tags" invisible="1"/>
                                        <field name="container_number_id" domain="[('id', 'in', allowed_container_number_ids)]" options="{'no_create': True, 'no_create_edit': True}"/>
                                    </group>
                                </group>
                            </sheet>
                        </form>
                    </field>
                </group>
            </xpath>
            <xpath expr="//field[@name='origin_port_un_location_id']" position="attributes">
                <attribute name="attrs">{'required' :[('mode_type', '!=', 'land')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='etd_time']" position="attributes">
                <attribute name="attrs">{'required' :[('state','not in',['created','cancelled']), ('is_courier_shipment', '=', False), ('mode_type', '!=', 'land')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='destination_port_un_location_id']" position="attributes">
                <attribute name="attrs">{'required' :[('mode_type', '!=', 'land')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='eta_time']" position="attributes">
                <attribute name="attrs">{'required' :[('state','not in',['created','cancelled']), ('is_courier_shipment', '=', False), ('mode_type', '!=', 'land')]}</attribute>
            </xpath>
            <xpath expr="//group[@name='origin_details']" position="after">
                <group string="Origin" name="road_freight_origin_details" attrs="{'invisible': [('mode_type', '!=', 'land')]}">
                    <field name="pickup_country_id" attrs="{'required': [('mode_type', '=', 'land'),('house_check', '!=', True)]}"/>
                    <field name="pickup_location_type_id" attrs="{'required': [('mode_type', '=', 'land')]}"/>
                    <field name="road_origin_un_location_id" string="Pickup Location"
                           domain="[('has_road', '=', True), ('location_type_id', '=', pickup_location_type_id)]"
                           context="{'default_country_id': pickup_country_id, 'default_transport_mode_id': transport_mode_id, 'default_has_road': True, 'default_location_type_id': pickup_location_type_id, 'show_country':True}"
                           attrs="{'required' :[('mode_type', '=', 'land')]}"/>
                    <field name="pickup_zipcode" attrs="{'invisible': [('mode_type', '!=', 'land')]}"/>
                    <field name="etp_time" />
                    <field name="apt_time" />
                    <field name="pickup_address" attrs="{'invisible': ['|',('shipment_for','!=','shipment'),('incoterm_check', '!=', True)]}"/>
                    <field name="transit_time" attrs="{'invisible': ['|', ('etp_time', '=', False), ('etd_time', '=', False)]}"/>
                </group>
            </xpath>
            <xpath expr="//group[@name='destination_details']" position="after">
                <group string="Destination" name="road_freight_destination_details" attrs="{'invisible': [('mode_type', '!=', 'land')]}">
                    <field name="delivery_country_id" attrs="{'required': [('mode_type', '=', 'land'),('house_check', '!=', True)]}"/>
                    <field name="delivery_location_type_id" attrs="{'required': [('mode_type', '=', 'land')]}"/>
                    <field name="road_destination_un_location_id" string="Delivery Location"
                           domain="[('has_road', '=', True),('location_type_id', '=', delivery_location_type_id)]"
                           context="{'default_country_id': delivery_country_id, 'default_transport_mode_id': transport_mode_id, 'default_has_road': True, 'default_location_type_id': delivery_location_type_id, 'show_country':True}"
                           attrs="{'required' :[('mode_type', '=', 'land')]}"/>
                    <field name="delivery_zipcode" attrs="{'invisible': [('mode_type', '!=', 'land')]}"/>
                    <field name="etd_time" />
                    <field name="atd_time" />
                    <field name="delivery_address" attrs="{'invisible': ['|',('shipment_for','!=','shipment'),('incoterm_check', '!=', True)]}"/>
                </group>
            </xpath>

            <xpath expr="//field[@name='container_ids']/tree/field[@name='container_number']" position="after">
                <field name="truck_number_id" options="{'no_create': True}"  attrs="{'column_invisible': [('parent.mode_type', '!=', 'land')]}"/>
                <field name="trailer_number_id" attrs="{'column_invisible': [('parent.mode_type', '!=', 'land')]}"/>
            </xpath>
            <xpath expr="//field[@name='package_ids']/tree/field[@name='container_number']" position="after">
                <field name="truck_number_id" options="{'no_create': True}" attrs="{'column_invisible': [('parent.mode_type', '!=', 'land')]}"/>
                <field name="trailer_number_id" attrs="{'column_invisible': [('parent.mode_type', '!=', 'land')]}"/>
            </xpath>
        </field>
    </record>

    <record id="freight_house_shipment_view_tree_freight_management" model="ir.ui.view">
        <field name="name">freight.house.shipment.view.form.inherit</field>
        <field name="model">freight.house.shipment</field>
        <field name="inherit_id" ref="freight_management.freight_house_shipment_view_tree"/>
        <field name="arch" type="xml">
            <field name="state" position="after">
                <field name="truck_count" widget="do_action" options="{'action': 'fm_road_operation.freight_house_shipment_transport_info_view_action'}"/>
            </field>
        </field>
    </record>
</odoo>
