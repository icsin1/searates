<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="freight_shipment_house_transport_info_view_tree" model="ir.ui.view">
        <field name="name">freight.shipment.transportation.details.view.tree</field>
        <field name="model">freight.shipment.transportation.details</field>
        <field name="arch" type="xml">
            <tree>
                <field name="truck_number_id"/>
                <field name="truck_type_id"/>
            </tree>
        </field>
    </record>

    <record id="freight_house_shipment_transport_info_view_action" model="ir.actions.act_window">
        <field name="name">Trucks</field>
        <field name="res_model">freight.shipment.transportation.details</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="freight_shipment_house_transport_info_view_tree"/>
        <field name="domain">[('house_shipment_id', '=', active_id)]</field>
        <field name="target">new</field>
    </record>

</odoo>
