<?xml version="1.0" ?>
<odoo>

    <record id="fm_road_view_shipment_quote_form" model="ir.ui.view">
        <field name="name">fm_road.shipment.quote.form</field>
        <field name="model">shipment.quote</field>
        <field name="priority" eval="18"/>
        <field name="inherit_id" ref="fm_quote.view_shipment_quote_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='shipper']" position="attributes">
                <attribute name="attrs">{'invisible': [('mode_type', '=', 'land')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='shipper_id']" position="attributes">
                <attribute name="string">Shipper</attribute>
            </xpath>
              <xpath expr="//field[@name='consignee_id']" position="attributes">
                <attribute name="string">Consignee</attribute>
            </xpath>
            <xpath expr="//group[@name='shipper']" position="after">
                <group string="Sending Forwarder" name="sending_forwarder" attrs="{'invisible': [('mode_type', '!=', 'land')]}">
                    <field name="shipper_id" string="Sending Forwarder" attrs="{'required': [('mode_type', '=', 'land'), ('shipper_consignee_bool', '!=', True)]}"/>
                    <field name="shipper_address_id" string="Sending Forwarder Address"
                           context="{'partner_category_display': 'short', 'show_address': 1,
                           'default_parent_id': shipper_id, 'default_type': 'delivery',
                           'form_view_ref': 'freight_base.res_partner_address_form'}"
                           options="{&quot;always_reload&quot;: True, &quot;highlight_first_line&quot;: True}"/>
                </group>
            </xpath>
            <xpath expr="//group[@name='consignee']" position="attributes">
                <attribute name="attrs">{'invisible': [('mode_type', '=', 'land')]}</attribute>
            </xpath>
            <xpath expr="//group[@name='consignee']" position="after">
                <group string="Receiving Forwarder" name="receiving_forwarder" attrs="{'invisible': [('mode_type', '!=', 'land')]}">
                    <field name="consignee_id" string="Receiving Forwarder" attrs="{'required': [('mode_type', '=', 'land'), ('shipper_consignee_bool', '!=', True)]}"/>
                    <field name="consignee_address_id" string="Receiving Forwarder Address"
                           context="{'partner_category_display': 'short', 'show_address': 1,
                           'default_parent_id': consignee_id, 'default_type': 'delivery',
                           'form_view_ref': 'freight_base.res_partner_address_form'}"
                           options="{&quot;always_reload&quot;: True, &quot;highlight_first_line&quot;: True}"/>
                </group>
            </xpath>
            <xpath expr="//label[@for='carrier_id']/.." position="replace">
                <div class="o_td_label" attrs="{'invisible': [('mode_type', '=', False)]}">
                    <label for="carrier_id" string="Shipping Line" attrs="{'invisible': [('mode_type', '!=', 'sea')]}"/>
                    <label for="carrier_id" string="Airline" attrs="{'invisible': [('mode_type', '!=', 'air')]}"/>
                    <label for="carrier_id" string="Transporter Name" attrs="{'invisible': [('mode_type', '!=', 'land')]}"/>
                </div>
            </xpath>
            <xpath expr="//field[@name='origin_country_id']" position="after">
                <field name="origin_country_id" string="Pickup Country"
                       options="{'no_create': True}" attrs="{'required': [('quote_for', '=', 'shipment'), ('mode_type', '=', 'land'),('quote_check', '!=', True)], 'invisible': [('mode_type', '!=', 'land')]}"/>
                <field name="pickup_location_type_id"
                       attrs="{'invisible': [('mode_type','!=','land')], 'required': [('mode_type','=','land')]}"/>
            </xpath>
            <xpath expr="//field[@name='origin_un_location_id']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('mode_type', '=', False), ('mode_type', '=', 'land')], 'required': [('mode_type', 'in', ['air', 'sea'])]}</attribute>
            </xpath>
            <xpath expr="//field[@name='origin_un_location_id']" position="after">
                <field name="road_origin_un_location_id" string="Pickup Location"
                       attrs="{'invisible': ['|', ('mode_type', '=', False), ('mode_type','!=','land')], 'required': [('mode_type', '=', 'land')]}"
                       domain="[('has_road', '=', True), ('location_type_id', '=', pickup_location_type_id)]"
                       context="{'default_country_id': origin_country_id, 'default_has_road': True, 'default_location_type': pickup_location_type_id}" />
                <field name="pickup_zipcode" attrs="{'invisible': [('mode_type', '!=', 'land')]}"/>
            </xpath>
            <xpath expr="//label[@for='port_of_loading_id']/.." position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('mode_type', '=', False), ('mode_type','=','land')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='port_of_loading_id']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('mode_type', '=', False), ('mode_type','=','land')], 'required': [('mode_type', 'in', ['air', 'sea'])]}</attribute>
            </xpath>

            <xpath expr="//field[@name='destination_country_id']/.." position="after">
                <field name="delivery_location_type_id"
                       attrs="{'invisible': ['|', ('mode_type', '=', False), ('mode_type','!=','land')], 'required': [('mode_type','=','land')]}"/>
            </xpath>
            <xpath expr="//label[@for='port_of_discharge_id']/.." position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('mode_type', '=', False), ('mode_type','=','land')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='port_of_discharge_id']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('mode_type', '=', False), ('mode_type','=','land')], 'required': [('mode_type', 'in', ['air', 'sea'])]}</attribute>
            </xpath>
            <xpath expr="//field[@name='destination_un_location_id']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('mode_type', '=', False), ('mode_type','=','land')], 'required': [('mode_type', 'in', ['air', 'sea'])]}</attribute>
            </xpath>
            <xpath expr="//field[@name='destination_un_location_id']" position="after">
                <field name="road_destination_un_location_id" string="Delivery Location"
                       attrs="{'invisible': ['|', ('mode_type', '=', False), ('mode_type','!=','land')], 'required': [('mode_type', '=', 'land')]}"
                       domain="[('has_road', '=', True), ('location_type_id', '=', delivery_location_type_id)]"
                       context="{'default_country_id': destination_country_id, 'default_has_road': True, 'default_location_type': delivery_location_type_id}" />
                <field name="delivery_zipcode" attrs="{'invisible': [('mode_type', '!=', 'land')]}"/>
            </xpath>
            <xpath expr="//field[@name='estimated_pickup']" position="attributes">
                <attribute name="attrs">{'invisible': [('mode_type','=','land')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='estimated_pickup']" position="after">
                <field name="estimated_pickup" string="ETP" attrs="{'invisible': [('mode_type','!=','land')]}"/>
            </xpath>
            <xpath expr="//field[@name='expected_delivery']" position="attributes">
                <attribute name="attrs">{'invisible': [('mode_type','=','land')]}</attribute>
            </xpath>
            <xpath expr="//field[@name='expected_delivery']" position="after">
                <field name="expected_delivery" string="ETD" attrs="{'invisible': [('mode_type','!=','land')]}"/>
            </xpath>
            <xpath expr="//field[@name='estimated_total_cost']/../.." position="before">
                <separator string="Transportation Details" name="transportation_details" attrs="{'invisible': [('mode_type','!=','land')]}"/>
                <label for="add_transportation_details" class="font-weight-bold" attrs="{'invisible': [('mode_type','!=','land')]}"/>
                <field name="add_transportation_details" widget="boolean_toggle" attrs="{'invisible': [('mode_type','!=','land')]}" nolable="1"/>
                <field name="transportation_detail_ids" nolabel="1" attrs="{'invisible': [('add_transportation_details','=', False)]}">
                    <tree editable="bottom">
                        <field name="truck_number_id" />
                        <field name="trailer_number_id" />
                        <field name="service_name" />
                        <field name="pickup_location_type_id" />
                        <field name="road_origin_un_location_id"/>
                        <field name="delivery_location_type_id" />
                        <field name="road_destination_un_location_id" />
                        <field name="estimated_pickup" />
                        <field name="expected_delivery" />
                        <field name="transit_time" />
                    </tree>
                </field>
            </xpath>
        </field>
    </record>

</odoo>
