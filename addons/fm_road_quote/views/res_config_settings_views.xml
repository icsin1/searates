<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_transport_container_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.transport.container.option.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="51"/>
        <field name="inherit_id" ref="freight_base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='freight_base']" position="inside">
                <h2>Transportation &amp; Container Details</h2>
                <div class="row mt16 o_settings_container" name="ics_transportation_container_settings">
                    <div class="col-12 col-lg-12 o_setting_box" id="ics_transportation_container_settings">
                        <div class="o_setting_left_pane">
                            <field name="module_fm_transportation_container_option" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_fm_transportation_container_option"/>
                            <p>Enable to Transportation &amp; Container details at Opportunity and Quote screen</p>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
