<odoo>
    <record model="ir.module.category" id="security_auditlog_groups">
        <field name="name">Audit Logs</field>
    </record>

    <record model="res.groups" id="group_auditlog_user">
        <field name="name">View Audit Logs</field>
        <field name="category_id" ref="ics_ir_audit_log.security_auditlog_groups" />
    </record>

    <record id="model_ir_audit_log_operation_multi_company_rule" model="ir.rule">
        <field name="name">Operational Log: Multi-Company Rules</field>
        <field name="model_id" ref="model_ir_audit_log_operation"/>
        <field name="domain_force">['|',('company_id','=',False), ('company_id', 'in', company_ids)]</field>
    </record>

    <record id="model_ir_audit_log_auth_multi_company_rule" model="ir.rule">
        <field name="name">Auth Log: Multi-Company Rules</field>
        <field name="model_id" ref="model_ir_audit_log_auth"/>
        <field name="domain_force">['|',('company_id','=',False), ('company_id', 'in', company_ids)]</field>
    </record>

    <record id="model_ir_audit_log_action_multi_company_rule" model="ir.rule">
        <field name="name">Action Log: Multi-Company Rules</field>
        <field name="model_id" ref="model_ir_audit_log_action"/>
        <field name="domain_force">['|',('company_id','=',False), ('company_id', 'in', company_ids)]</field>
    </record>

</odoo>
