<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- auditlog.auth -->
    <record model="ir.ui.view" id="view_auditlog_login_tree">
        <field name="name">ir.audit.log.auth.tree</field>
        <field name="model">ir.audit.log.auth</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="user_id" />
                <field name="login_date_time" />

            </tree>
        </field>
    </record>

    <record id="view_auditlog_auth_search" model="ir.ui.view">
        <field name="name">ir.audit.log.auth.search</field>
        <field name="model">ir.audit.log.auth</field>
        <field name="arch" type="xml">
            <search string="Login Logs">
                <field name="user_id" />
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="view_auditlog_auth_form">
        <field name="name">ir.audit.log.auth.form</field>
        <field name="model">ir.audit.log.auth</field>
        <field name="arch" type="xml">
            <form string="Login Logs" edit="0" create="0">
                <sheet>
                    <group>
                        <group>
                            <field name="user_id" options="{'no_open': 1, 'no_create': 1}"/>
                            <field name="company_id" options="{'no_open': 1, 'no_create': 1}"/>
                        </group>
                        <group>
                            <field name="login_date_time"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_auditlog_auth_tree">
        <field name="name">Login Logs</field>
        <field name="res_model">ir.audit.log.auth</field>
        <field name="search_view_id" ref="view_auditlog_auth_search" />
    </record>

    <menuitem
        id="menu_audit_login_logs"
        name="Login Logs"
        parent="menu_audit_logs"
        action="action_auditlog_auth_tree"
        groups="ics_ir_audit_log.group_auditlog_user,odoo_base.group_freight_technical_support_team"
    />

</odoo>
