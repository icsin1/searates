<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sale</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="15"/>
        <field name="inherit_id" ref="odoo_base_setup.res_config_settings_view_form_hide_ent_module_tag" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='auditing']//div[hasclass('o_setting_right_pane')]" position="inside">
                <div class="content-group" id="reacaptcha_configuration_settings" attrs="{'invisible': [('module_ics_ir_audit_log', '=', False)]}">
                    <div class="mt16 row">
                        <label for="ics_ir_log_history" class="col-4 o_light_label"/>
                        <field name="ics_ir_log_history" />
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
