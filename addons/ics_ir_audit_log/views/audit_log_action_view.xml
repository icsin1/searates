<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- auditlog.auth -->
    <record model="ir.ui.view" id="view_auditlog_action_tree">
        <field name="name">ir.audit.log.action.tree</field>
        <field name="model">ir.audit.log.action</field>
        <field name="arch" type="xml">
            <tree create="false">
                <field name="action_id" />
                <field name="action_dump" />
                <field name="menu_id" />
                <field name="user_id" />
                <field name="action_type" />
                <field name="operation_date_time" />
            </tree>
        </field>
    </record>

    <record id="view_auditlog_action_search" model="ir.ui.view">
        <field name="name">ir.audit.log.action.search</field>
        <field name="model">ir.audit.log.action</field>
        <field name="arch" type="xml">
            <search string="Action Logs">
                <field name="user_id" />
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="view_auditlog_action_form">
        <field name="name">ir.audit.log.action.form</field>
        <field name="model">ir.audit.log.action</field>
        <field name="arch" type="xml">
            <form string="Action Logs" edit="0" create="0">
                <sheet>
                    <group>
                        <group>
                            <field name="action_id" options="{'no_open': 1, 'no_create': 1}"/>
                            <field name="menu_id" options="{'no_open': 1, 'no_create': 1}"/>
                            <field name="action_type"/>
                            <field name="company_id" options="{'no_open': 1, 'no_create': 1}"/>
                        </group>
                        <group>
                            <field name="action_dump"/>
                            <field name="user_id" options="{'no_open': 1, 'no_create': 1}"/>
                            <field name="operation_date_time"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_auditlog_action_tree">
        <field name="name">Action Logs</field>
        <field name="res_model">ir.audit.log.action</field>
        <field name="search_view_id" ref="view_auditlog_action_search" />
    </record>

    <menuitem
        id="menu_audit_action_logs"
        name="Action Logs"
        parent="menu_audit_logs"
        action="action_auditlog_action_tree"
        groups="odoo_base.group_freight_technical_support_team"
    />

</odoo>
