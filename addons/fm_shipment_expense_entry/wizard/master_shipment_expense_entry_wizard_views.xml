<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="master_shipment_expense_entry_wizard_view_form" model="ir.ui.view">
        <field name="name">master.shipment.expense.entry.wizard.view.form</field>
        <field name="model">master.shipment.expense.entry.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Expense Entry" class="pt-3">
                <separator string="Entry Details"/>
                <group class="my-0">
                    <group>
                        <field name="partner_mode" widget="radio" options="{'horizontal': True}" invisible="1"/>
                        <field name="journal_id" options="{'no_create': 1}"/>
                        <field name="company_id" readonly="1"/>
                    </group>
                    <group>
                        <field name="payment_account_id" options="{'no_create': 1}"/>
                        <field name="partner_ids" invisible="1" widget="many2many_tags" options="{'no_create': 1}" string="For Vendors" attrs="{'invisible': [('partner_mode', '!=', 'specific')], 'required': [('partner_mode', '=', 'specific')]}"/>
                    </group>
                </group>
                <group class="my-0">
                    <group invisible="1">
                        <field name="single_currency_billing" string="Single Currency Entry" widget="boolean_toggle"/>
                    </group>
                    <group invisible="1">
                        <field name="currency_id" options="{'no_create': 1, 'no_open': 1}" attrs="{'invisible': [('single_currency_billing', '=', False)], 'required': [('single_currency_billing', '=', True)]}"/>
                        <field name="show_exchange_rate" invisible="1"/>
                        <field name="amount_conversion_rate" attrs="{'invisible': [('show_exchange_rate', '=', False)]}"/>
                    </group>
                </group>
                <field name="master_shipment_id" invisible="1"/>
                <group string="Generating For Charges" class="mt-0">
                    <field nolabel="1" name="charge_ids">
                        <tree create="0">
                            <field name="charge_description"/>
                            <field name="partner_id"/>
                            <field name="company_id" optional="hide"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="amount_conversion_rate" attrs="{'column_invisible': [('parent.show_exchange_rate', '=', True)]}"/>
                            <field name="amount_currency_id"/>
                            <field name="amount_rate"/>
                            <field name="amount_currency_residual" class="text-info font-weight-bold"/>
                            <field name="total_amount" sum="Total" class="text-success font-weight-bold"/>
                            <field name="status" widget="badge" decoration-success="status == 'fully_invoiced'" decoration-warning="status == 'partial'"/>
                        </tree>
                    </field>
                </group>
                <group string="Entry Will be Generated" class="mt-0">
                    <field name="is_partial_bill" invisible="1"/>
                    <div colspan="2" class="alert alert-warning" role="alert" attrs="{'invisible':[('is_partial_bill','=',False)]}">
                        <strong>You are generating partial bill. Total amount will be devided based on due amount for each charge line after converting to the bill currency.</strong>
                    </div>
                    <field name="line_ids" nolabel="1" colspan="2">
                        <tree create="0" editable="bottom">
                            <field name="partner_id" string="Paid By" readonly="1" force_save="1" options="{'no_open': 1}"/>
                            <field name="currency_id" string="Entry Currency" readonly="1" force_save="1"  options="{'no_open': 1}"/>
                            <field name="no_of_charges" readonly="1" force_save="1"/>
                            <field name="charge_ids" invisible="1"/>
                            <field name="amount" class="font-weight-bold" readonly="1" force_save="1"/>
                            <field name="full_amount" invisible="1"/>
                        </tree>
                    </field>
                </group>
                <footer>
                    <button attrs="{'invisible': [('line_ids', '=', [])]}" name="action_generate_bills" string="Generate &amp; View" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="master_shipment_expense_entry_wizard_action" model="ir.actions.act_window">
        <field name="name">Generate Expense Entry</field>
        <field name="res_model">master.shipment.expense.entry.wizard</field>
        <field name="view_mode">form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>
</odoo>
