<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!-- Override mail composer template -->
<data>
    <record id="mail_compose_hide_multi_select_checkboxes" model="ir.ui.view">
        <field name="name">mail.compose.message.cust</field>
        <field name="model">mail.compose.message</field>
        <field name="inherit_id" ref="mail.email_compose_message_wizard_form"/>
        <field name="arch" type="xml">
            <!-- Remove the checkbox line -->
            <xpath expr="//div[hasclass('oe_form_box_info')]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
</data>
</odoo>
