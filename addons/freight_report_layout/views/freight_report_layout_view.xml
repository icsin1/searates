<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_base_document_layout_inherit" model="ir.ui.view">
            <field name="name">Document Layout</field>
            <field name="model">base.document.layout</field>
            <field name="inherit_id" ref="web.view_base_document_layout"/>
            <field name="mode">extension</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='logo']" position="after">
                    <field name="is_sr_custom_layout" invisible="1"/>
                    <field name="report_logo" widget="image" options="{'size': [0, 50]}" attrs="{'invisible': [('is_sr_custom_layout', '=', False)]}"/>
                    <field name="sr_report_header" options="{'resizable': false}" attrs="{'invisible': [('is_sr_custom_layout', '=', False)]}"/>
                </xpath>
                <xpath expr="//field[@name='logo']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_sr_custom_layout', '=', True)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='report_header']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_sr_custom_layout', '=', True)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='company_details']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_sr_custom_layout', '=', True)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='report_footer']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_sr_custom_layout', '=', True)]}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
