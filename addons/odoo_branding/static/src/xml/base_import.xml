<?xml version="1.0" encoding="utf-8"?>

    <templates>

        <t t-name="odoo_branding.import_side_panel" t-inherit="base_import.ImportView.side_panel" t-inherit-mode="extension">
            <xpath expr="//a[@href='https://www.odoo.com/documentation/15.0/applications/general/export_import_data.html']" position="attributes">
                <attribute name="class">d-none</attribute>
            </xpath>
        </t>

        <t t-name="odoo_branding.import_preview" t-inherit="base_import.ImportView.preview" t-inherit-mode="extension">
            <xpath expr="//tr[hasclass('oe_import_grid-header')]" position="replace">
                <tr class="oe_import_grid-header">
                    <td class="oe_import_grid-cell border-0 font-weight-bold" style="width: 20%;">
                        <span class="o_single_line_text" title="File Column">File Column</span></td>
                    <td class="oe_import_grid-cell border-0 font-weight-bold" style="width: 15%;" >
                        <span class="o_single_line_text" title="File Column">System Field</span></td>
                    <td class="oe_import_grid-cell border-0 font-weight-bold">
                        <span class="o_single_line_text" title="File Column">Comments</span></td>
                </tr>
            </xpath>
        </t>

    </templates>
