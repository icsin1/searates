<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="web_report_pdf_template">
        <t t-call="web.html_container">
            <t t-set="report" t-value="docs[-1]"/>

            <t t-if="not folded">
                <t t-set="parent_lines" t-value="report._get_sections(options)"/>
                <t t-foreach="parent_lines" t-as="parent_section">
                    <t t-if="not parent_section.get('group_total', False)">
                        <t t-set="section_lines" t-value="report.get_web_report_section_data(parent_section, options)"/>
                        <t t-if="not section_lines">
                            <t t-set="section_lines" t-value="[parent_section]"/>
                        </t>
                        <t t-call="ics_report_base.web_report_pdf_page"/>
                    </t>
                </t>
            </t>
            <t t-else="">
                <t t-set="section_lines" t-value="report._get_sections(options)"/>
                <t t-call="ics_report_base.web_report_pdf_page"/>
            </t>
        </t>
    </template>

    <template id="web_report_pdf_page" name="Web Report Summary Page">
        <t t-call="web.external_layout">
            <div class="page" style="page-break-inside: avoid;">
                <div class="p-2 text-black">
                    <h4 class="text-center text-uppercase text-decoration-underline font-weight-bold"><u><t t-out="report.get_title()"/></u></h4>
                    <div t-if="options.get('filter_date')" class="h6 font-weight-bold text-center p-0 m-0 mb-2">
                        <span t-out="report._get_report_title(options)"/>
                    </div>
                </div>

                <t t-if="parent_section">
                    <div class="row mb-3" name="parent_section_header">
                        <div class="col-10">
                            <strong name="parent_section_header_title"><t t-out="report.get_title()"/> For:</strong>
                            <h6 name="parent_section_title"><t t-out="parent_section.get('title')"/></h6>
                        </div>
                        <div class="col-2 text-right text-black">
                            Date: <t t-esc="datetime.datetime.today().date()" t-options="{'widget': 'date'}"/>
                        </div>
                    </div>
                </t>

                <table class="table table-sm o_main_table ics_report_main_table" style="color: #000000;">
                    <t t-set="group_headers" t-value="options.get('report_header_groups', [])"/>
                    <t t-set="headers" t-value="options.get('headers', [])"/>
                    <thead>
                        <tr t-if="options.get('filter_date') and len(group_headers) &gt; 1">
                            <th class="bg-300"></th>
                            <th t-foreach="group_headers" t-as="group_header" t-att-colspan="len(headers)" class="text-center bg-300" style="padding: 3px !important;">
                                <t t-out="group_headers[group_header].get('string')"/>
                            </th>
                        </tr>
                        <tr>
                            <th class="bg-300"></th>
                            <t t-foreach="group_headers" t-as="group_header">
                                <t t-foreach="headers" t-as="header" t-key="header_key">
                                    <th class="bg-300" style="padding: 3px !important;">
                                        <span><t t-out="header['string']"/></span>
                                    </th>
                                </t>
                            </t>
                        </tr>
                    </thead>
                    <tbody style="color: #000000;">
                        <t t-foreach="section_lines" t-as="line">
                            <t t-set="line_class" t-value="line.get('row_class', '')"/>
                            <tr t-attf-class="ics_report_base_line_level_{{line['level']}} {{line_class and line_class + ' bg-300' or ''}}">
                                <td class="text-black" style="font-size: 0.66rem; padding: 4px!important; letter-spacing: 0.px!important;">
                                    <strong t-out="line['title']"/>
                                </td>
                                <t t-foreach="group_headers" t-as="group_header">
                                    <t t-foreach="headers" t-as="header" t-key="header">
                                        <td t-attf-class="ics_column_value {{header['value_type']}} ics_report_base_line_level_{{line['level']}} {{line['values'][group_header].get(header['expression_label'] + '_is_zero', '') and 'ics_zero_value' or ''}} {{header['hide_if_zero'] and 'ics_hide_zero' or ''}}">
                                            <span><t t-out="line['values'][group_header].get(header['expression_label'], '')"/></span>
                                        </td>
                                    </t>
                                </t>
                            </tr>
                        </t>
                    </tbody>
                </table>
                <div class="row pt-4">
                    <div class="col-12 pt-4 text-right">
                        <div class="border-top d-inline-block w-25">
                            <h5>
                                <t t-esc="report.env.company.display_name"/>
                            </h5>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>

</odoo>
