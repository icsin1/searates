<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">   
        <record id="tax_report_vat_100" model="account.tax.report">
            <field name="name">VAT 100</field>
            <field name="country_id" ref="base.ae"/>
        </record>
    
        <record id="tax_report_vat_100_box1" model="account.tax.report.line">
            <field name="name">Box 1. VAT due on sales and other outputs</field>
            <field name="report_id" ref="tax_report_vat_100"/>
            <field name="code">BOX1</field>
            <field name="formula">STD_VAT_OUT_AB + STD_VAT_OUT_DB + STD_VAT_OUT_SJ + STD_VAT_OUT_AJ + STD_VAT_OUT_UM + STD_VAT_OUT_RA + STD_VAT_OUT_FU + STD_VAT_REV_CHARGE_PRO + STD_VAT_TOU_REFUND_TAX</field>
            <field name="sequence" eval="1"/>
        </record>

        <record id="tax_report_vat_100_box1_abu_dhabi" model="account.tax.report.line">
            <field name="name">a. Abu Dhabi</field>
            <field name="tag_name">a. Abu Dhabi (Tax)</field>
            <field name="code">STD_VAT_OUT_AB</field>
            <field name="parent_id" ref="tax_report_vat_100_box1"/>
            <field name="report_id" ref="tax_report_vat_100"/>
            <field name="sequence" eval="1"/>
        </record>

        <record id="tax_report_vat_100_box1_dubai" model="account.tax.report.line">
            <field name="name">b. Dubai</field>
            <field name="tag_name">b. Dubai (Tax)</field>
            <field name="code">STD_VAT_OUT_DB</field>
            <field name="parent_id" ref="tax_report_vat_100_box1"/>
            <field name="report_id" ref="tax_report_vat_100"/>
            <field name="sequence" eval="2"/>
        </record>

        <record id="tax_report_vat_100_box1_sharjah" model="account.tax.report.line">
            <field name="name">c. Sharjah</field>
            <field name="tag_name">c. Sharjah (Tax)</field>
            <field name="code">STD_VAT_OUT_SJ</field>
            <field name="parent_id" ref="tax_report_vat_100_box1"/>
            <field name="report_id" ref="tax_report_vat_100"/>
            <field name="sequence" eval="3"/>
        </record>

        <record id="tax_report_vat_100_box1_ajman" model="account.tax.report.line">
            <field name="name">d. Ajman</field>
            <field name="tag_name">d. Ajman (Tax)</field>
            <field name="code">STD_VAT_OUT_AJ</field>
            <field name="parent_id" ref="tax_report_vat_100_box1"/>
            <field name="report_id" ref="tax_report_vat_100"/>
            <field name="sequence" eval="4"/>
        </record>

        <record id="tax_report_vat_100_box1_umm_al_quwain" model="account.tax.report.line">
            <field name="name">e. Umm Al Quwain</field>
            <field name="tag_name">e. Umm Al Quwain (Tax)</field>
            <field name="code">STD_VAT_OUT_UM</field>
            <field name="parent_id" ref="tax_report_vat_100_box1"/>
            <field name="report_id" ref="tax_report_vat_100"/>
            <field name="sequence" eval="5"/>
        </record>

        <record id="tax_report_vat_100_box1_ras_al_khaima" model="account.tax.report.line">
            <field name="name">f. Ras Al-Khaima</field>
            <field name="tag_name">f. Ras Al-Khaima (Tax)</field>
            <field name="code">STD_VAT_OUT_RA</field>
            <field name="parent_id" ref="tax_report_vat_100_box1"/>
            <field name="report_id" ref="tax_report_vat_100"/>
            <field name="sequence" eval="6"/>
        </record>

        <record id="tax_report_vat_100_box1_fujairah" model="account.tax.report.line">
            <field name="name">g. Fujairah</field>
            <field name="tag_name">g. Fujairah (Tax)</field>
            <field name="code">STD_VAT_OUT_FU</field>
            <field name="parent_id" ref="tax_report_vat_100_box1"/>
            <field name="report_id" ref="tax_report_vat_100"/>
            <field name="sequence" eval="7"/>
        </record>

        <record id="tax_report_vat_100_box1_reverse_charge_provision" model="account.tax.report.line">
            <field name="name">Supplies subject to reverse charge provisions (Tax)</field>
            <field name="tag_name">3. Supplies subject to reverse charge provisions (Tax)</field>
            <field name="code">STD_VAT_REV_CHARGE_PRO</field>
            <field name="parent_id" ref="tax_report_vat_100_box1"/>
            <field name="report_id" ref="tax_report_vat_100"/>
            <field name="sequence" eval="8"/>
        </record>

        <record id="tax_report_vat_100_box1_tourist_refund_scheme" model="account.tax.report.line">
            <field name="name">Tourist Refund scheme 5%</field>
            <field name="tag_name">2. Tax Refunds provided to Tourists under the Tax Refunds for Tourists Scheme (Tax)</field>
            <field name="code">STD_VAT_TOU_REFUND_TAX</field>
            <field name="parent_id" ref="tax_report_vat_100_box1"/>
            <field name="report_id" ref="tax_report_vat_100"/>
            <field name="sequence" eval="9"/>
        </record>

        <record id="tax_report_vat_100_box2" model="account.tax.report.line">
            <field name="name">Box 2: Vat Due on acquisitions from other EC Member States</field>
            <field name="report_id" ref="tax_report_vat_100"/>
            <field name="tag_name">3. Supplies subject to reverse charge provisions (Tax)</field>
            <field name="code">BOX2</field>
            <field name="sequence" eval="2"/>
        </record>

        <record id="tax_report_vat_100_box3" model="account.tax.report.line">
            <field name="name">Box 3: Total Output Vat Due</field>
            <field name="report_id" ref="tax_report_vat_100"/>
            <field name="code">TOTAL_OUT_VAT_DUE</field>
            <field name="formula">BOX1 + BOX2</field>
            <field name="sequence" eval="3"/>
        </record>
        <record id="tax_report_vat_100_box4" model="account.tax.report.line">
            <field name="name">Box 4: Vat reclaimed on purchases</field>
            <field name="tag_name"></field>
            <field name="report_id" ref="tax_report_vat_100"/>
            <field name="code">TOTAL_VAT_RECLAIMED_ON_PURCHASE</field>
            <field name="formula">STD_VAT_IN + STD_VAT_IN_REV + STD_VAT_IMPORT_GOODS</field>
            <field name="sequence" eval="4"/>
        </record>

        <record id="tax_report_vat_100_box4_std_exp" model="account.tax.report.line">
            <field name="name">Standard rated expenses (Tax)</field>
            <field name="tag_name">10. Standard rated expenses (Tax)</field>
            <field name="code">STD_VAT_IN</field>
            <field name="parent_id" ref="tax_report_vat_100_box4"/>
            <field name="report_id" ref="tax_report_vat_100"/>
            <field name="sequence" eval="6"/>
        </record>

        <record id="tax_report_vat_100_box4_std_exp_rev" model="account.tax.report.line">
            <field name="name">Standard rated expenses Reversal (Tax)</field>
            <field name="tag_name">11. Supplies subject to the reverse charge provisions (Tax)</field>
            <field name="code">STD_VAT_IN_REV</field>
            <field name="parent_id" ref="tax_report_vat_100_box4"/>
            <field name="report_id" ref="tax_report_vat_100"/>
            <field name="sequence" eval="6"/>
        </record>

        <record id="tax_report_vat_100_box4_import_goods" model="account.tax.report.line">
            <field name="name">Imported Goods</field>
            <field name="tag_name">7. Goods imported into the UAE (Tax)</field>
            <field name="code">STD_VAT_IMPORT_GOODS</field>
            <field name="parent_id" ref="tax_report_vat_100_box4"/>
            <field name="report_id" ref="tax_report_vat_100"/>
            <field name="sequence" eval="7"/>
        </record>

        <record id="tax_report_vat_100_box5" model="account.tax.report.line">
            <field name="name">Box 5: Net Vat to Pay (or reclaim)</field>
            <field name="report_id" ref="tax_report_vat_100"/>
            <field name="formula">TOTAL_OUT_VAT_DUE - TOTAL_VAT_RECLAIMED_ON_PURCHASE</field>
            <field name="sequence" eval="5"/>
        </record>
        <record id="tax_report_vat_100_box6" model="account.tax.report.line">
            <field name="name">Box 6: Total Net value of sales</field>
            <field name="report_id" ref="tax_report_vat_100"/>
            <field name="formula">STD_BASE_OUT_AB + STD_BASE_OUT_DB + STD_BASE_OUT_SJ + STD_BASE_OUT_AJ + STD_BASE_OUT_UM + STD_BASE_OUT_RA + STD_BASE_OUT_FU + STD_BASE_REV_CHARGE_PRO + STD_BASE_TOURIST_REFUND</field>
            <field name="code">TOTA_NET_SALE</field>
            <field name="sequence" eval="6"/>
        </record>
        <record id="tax_report_vat_100_box6_abu_dhabi" model="account.tax.report.line">
            <field name="name">a. Abu Dhabi</field>
            <field name="tag_name">a. Abu Dhabi (Base)</field>
            <field name="code">STD_BASE_OUT_AB</field>
            <field name="parent_id" ref="tax_report_vat_100_box6"/>
            <field name="report_id" ref="tax_report_vat_100"/>
            <field name="sequence" eval="1"/>
        </record>

        <record id="tax_report_vat_100_box6_dubai" model="account.tax.report.line">
            <field name="name">b. Dubai</field>
            <field name="tag_name">b. Dubai (Base)</field>
            <field name="code">STD_BASE_OUT_DB</field>
            <field name="parent_id" ref="tax_report_vat_100_box6"/>
            <field name="report_id" ref="tax_report_vat_100"/>
            <field name="sequence" eval="2"/>
        </record>

        <record id="tax_report_vat_100_box6_sharjah" model="account.tax.report.line">
            <field name="name">c. Sharjah</field>
            <field name="tag_name">c. Sharjah (Base)</field>
            <field name="code">STD_BASE_OUT_SJ</field>
            <field name="parent_id" ref="tax_report_vat_100_box6"/>
            <field name="report_id" ref="tax_report_vat_100"/>
            <field name="sequence" eval="3"/>
        </record>

        <record id="tax_report_vat_100_box6_ajman" model="account.tax.report.line">
            <field name="name">d. Ajman</field>
            <field name="tag_name">d. Ajman (Base)</field>
            <field name="code">STD_BASE_OUT_AJ</field>
            <field name="parent_id" ref="tax_report_vat_100_box6"/>
            <field name="report_id" ref="tax_report_vat_100"/>
            <field name="sequence" eval="4"/>
        </record>

        <record id="tax_report_vat_100_box6_umm_al_quwain" model="account.tax.report.line">
            <field name="name">e. Umm Al Quwain</field>
            <field name="tag_name">e. Umm Al Quwain (Base)</field>
            <field name="code">STD_BASE_OUT_UM</field>
            <field name="parent_id" ref="tax_report_vat_100_box6"/>
            <field name="report_id" ref="tax_report_vat_100"/>
            <field name="sequence" eval="5"/>
        </record>

        <record id="tax_report_vat_100_box6_ras_al_khaima" model="account.tax.report.line">
            <field name="name">f. Ras Al-Khaima</field>
            <field name="tag_name">f. Ras Al-Khaima (Base)</field>
            <field name="code">STD_BASE_OUT_RA</field>
            <field name="parent_id" ref="tax_report_vat_100_box6"/>
            <field name="report_id" ref="tax_report_vat_100"/>
            <field name="sequence" eval="6"/>
        </record>

        <record id="tax_report_vat_100_box6_fujairah" model="account.tax.report.line">
            <field name="name">g. Fujairah</field>
            <field name="tag_name">g. Fujairah (Base)</field>
            <field name="code">STD_BASE_OUT_FU</field>
            <field name="parent_id" ref="tax_report_vat_100_box6"/>
            <field name="report_id" ref="tax_report_vat_100"/>
            <field name="sequence" eval="7"/>
        </record>

        <record id="tax_report_vat_100_box6_zero_rated" model="account.tax.report.line">
            <field name="name">Zero rated supplies (Base)</field>
            <field name="tag_name">4. Zero rated supplies (Base)</field>
            <field name="code">STD_BASE_OUT_ZERO</field>
            <field name="parent_id" ref="tax_report_vat_100_box6"/>
            <field name="report_id" ref="tax_report_vat_100"/>
            <field name="include_additional_data_domain" eval="True"/>
            <field name="additional_data_domain" eval="[('journal_id.type','=','sale'),('tax_tag_ids','=',False),('account_id.user_type_id.internal_group','=','income')]"/>
            <field name="sequence" eval="8"/>
        </record>

        <record id="tax_report_vat_100_box6_reverse_charge_provision" model="account.tax.report.line">
            <field name="name">Reverse Charge Provision</field>
            <field name="tag_name">3. Supplies subject to reverse charge provisions (Base)</field>
            <field name="code">STD_BASE_REV_CHARGE_PRO</field>
            <field name="parent_id" ref="tax_report_vat_100_box6"/>
            <field name="report_id" ref="tax_report_vat_100"/>
            <field name="sequence" eval="9"/>
        </record>

        <record id="tax_report_vat_100_box6_tourist_refund_scheme" model="account.tax.report.line">
            <field name="name">Tourist Refund scheme 5%</field>
            <field name="tag_name">2. Tax Refunds provided to Tourists under the Tax Refunds for Tourists Scheme (Base)</field>
            <field name="code">STD_BASE_TOURIST_REFUND</field>
            <field name="parent_id" ref="tax_report_vat_100_box6"/>
            <field name="report_id" ref="tax_report_vat_100"/>
            <field name="sequence" eval="10"/>
        </record>

        <record id="tax_report_vat_100_box7" model="account.tax.report.line">
            <field name="name">Box 7: Total net value of purchases</field>
            <field name="tag_name"></field>
            <field name="formula">STD_BASE_EXP + STD_BASE_EXP_REV + STD_BASE_IMPORT_GOODS_UAE</field>
            <field name="report_id" ref="tax_report_vat_100"/>
            <field name="code">TOTAL_NET_PURCHASE</field>
            <field name="sequence" eval="7"/>
        </record>

        <record id="tax_report_vat_100_box7_standard_rated" model="account.tax.report.line">
            <field name="name">Standard rated expenses (Base)</field>
            <field name="tag_name">10. Standard rated expenses (Base)</field>
            <field name="code">STD_BASE_EXP</field>
            <field name="parent_id" ref="tax_report_vat_100_box7"/>
            <field name="report_id" ref="tax_report_vat_100"/>
            <field name="include_additional_data_domain" eval="True"/>
            <field name="additional_data_domain" eval="[('journal_id.type','=','purchase'),('tax_tag_ids','=',False),('account_id.user_type_id.internal_group','=','expense')]"/>
            <field name="sequence" eval="1"/>
        </record>

        <record id="tax_report_vat_100_box7_standard_rated_reversal" model="account.tax.report.line">
            <field name="name">Supplies subject to the reverse charge provisions</field>
            <field name="tag_name">11. Supplies subject to the reverse charge provisions (Base)</field>
            <field name="code">STD_BASE_EXP_REV</field>
            <field name="parent_id" ref="tax_report_vat_100_box7"/>
            <field name="report_id" ref="tax_report_vat_100"/>
            <field name="sequence" eval="2"/>
        </record>

        <record id="tax_report_vat_100_box7_import_good_scheme" model="account.tax.report.line">
            <field name="name">Imported Goods</field>
            <field name="tag_name">7. Goods imported into the UAE (Base)</field>
            <field name="code">STD_BASE_IMPORT_GOODS_UAE</field>
            <field name="parent_id" ref="tax_report_vat_100_box7"/>
            <field name="report_id" ref="tax_report_vat_100"/>
            <field name="sequence" eval="3"/>
        </record>

        <record id="tax_report_vat_100_box8" model="account.tax.report.line">
            <field name="name">Box 8: Total net value of suppliers to other EC Member States</field>
            <field name="tag_name"></field>
            <field name="code">BOX8</field>
            <field name="report_id" ref="tax_report_vat_100"/>
            <field name="sequence" eval="8"/>
        </record>

        <record id="tax_report_vat_100_box9" model="account.tax.report.line">
            <field name="name">Box 9: Total net value of acquisitions from other EC Member States</field>
            <field name="tag_name">7. Goods imported into the UAE (Base)</field>
            <field name="code">BOX9</field>
            <field name="report_id" ref="tax_report_vat_100"/>
            <field name="sequence" eval="9"/>
        </record>

    </data>
</odoo>
