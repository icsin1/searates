<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="fm_road_crm_prospect_lead_view_form" model="ir.ui.view">
        <field name="name">fm_road.crm.prospect.lead.view.form</field>
        <field name="model">crm.prospect.lead</field>
        <field name="inherit_id" ref="crm_prospect_lead.crm_prospect_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='transport_mode_id']" position="after">
                <field name="pickup_country_id"
                       attrs="{'invisible': [('mode_type','!=','land')], 'required': [('mode_type','=','land')]}"/>
                <field name="pickup_location_type_id"
                       attrs="{'invisible': [('mode_type','!=','land')], 'required': [('mode_type','=','land')]}"/>
            </xpath>
            <xpath expr="//field[@name='port_of_loading_id']" position="after">
                <field name="pickup_location_id"
                       attrs="{'invisible': [('mode_type','!=','land')], 'required': [('mode_type','=','land')]}"
                       context="{'default_has_road': True, 'default_country_id': pickup_country_id, 'default_location_type': pickup_location_type_id}"
                       options="{'no_create': True}"/>
            </xpath>
            <xpath expr="//field[@name='business_service_id']" position="after">
                <field name="delivery_country_id"
                       attrs="{'invisible': [('mode_type','!=','land')], 'required': [('mode_type','=','land')]}"/>
                <field name="delivery_location_type_id"
                       attrs="{'invisible': [('mode_type','!=','land')], 'required': [('mode_type','=','land')]}"/>
            </xpath>
            <xpath expr="//field[@name='port_of_discharge_id']" position="after">
                <field name="delivery_location_id" string="Delivery Location"
                       attrs="{'invisible': [('mode_type','!=','land')], 'required': [('mode_type','=','land')]}"
                       context="{'default_has_road': True, 'default_country_id': delivery_country_id, 'default_location_type': delivery_location_type_id}"
                       options="{'no_create': True}"/>
            </xpath>
        </field>
    </record>

</odoo>
