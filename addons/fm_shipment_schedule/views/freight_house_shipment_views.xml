<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="freight_house_shipment_inttra_integration_view_form" model="ir.ui.view">
        <field name="name">freight.house.shipment.inttra.integrarion.view.form</field>
        <field name="model">freight.house.shipment</field>
        <field name="inherit_id" ref="freight_management.freight_house_shipment_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='voyage_number']" position="replace">
                <div class="o_row">
                    <field name="voyage_number" attrs="{'readonly': [('parent_id', '!=', False)]}"/> <button title="Search Voyage Number" class="oe_edit_only btn btn-dark fa fa-search" type="object" name="action_fetch_voyage_number" attrs="{'invisible': [('state', 'in', ['completed', 'cancelled'])]}"/>
                </div>
            </xpath>
        </field>
    </record>

    <!--Button always Visible for Super admin-->
    <record id="freight_house_shipment_super_admin_form_ship_scheduled" model="ir.ui.view">
        <field name="name">freight.house.shipment.super.admin.view.form.ship.scheduled</field>
        <field name="model">freight.house.shipment</field>
        <field name="groups_id" eval="[(4, ref('freight_management.group_super_admin'))]"/>
        <field name="inherit_id" ref="freight_management.freight_house_shipment_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_fetch_voyage_number']" position="attributes">
                <attribute name="attrs">{}</attribute>
            </xpath>
        </field>
    </record>

</odoo>
