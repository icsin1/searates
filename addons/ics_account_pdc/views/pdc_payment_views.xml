<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="pdc_payment_view_form" model="ir.ui.view">
        <field name="name">pdc.payment.view.form</field>
        <field name="model">pdc.payment</field>
        <field name="arch" type="xml">
            <form delete="0">
                <header>
                    <field name="state" widget="statusbar" clickable="0"/>
                    <button string="Mark Deposited" name="action_mark_deposited" type="object" states="registered"
                            class="oe_highlight"/>
                    <button string="Mark Done" name="action_mark_done" type="object" states="deposited"
                            class="oe_highlight"/>
                    <button string="Mark Returned" name="action_mark_returned" states="registered"
                            type="object" confirm="Are you sure you want to mark this as returned?"/>
                    <button string="Mark Bounced" name="action_mark_bounced" type="object" states="deposited"
                            confirm="Are you sure you want to mark this as bounced?"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_invoice" type="object" class="oe_stat_button" icon="fa-bars" attrs="{'invisible': [('move_count', '=', 0)]}">
                            <field string="Invoices/Bills" name="move_count" widget="statinfo"/>
                        </button>
                        <button name="action_open_move" type="object" class="oe_stat_button" icon="fa-bars"
                                string="Journal Entry" attrs="{'invisible': [('move_id', '=', False)]}" />
                    </div>
                    <label for="name"/>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="cheque_ref" readonly="1"/>
                            <field name="payment_id" readonly="1"/>
                            <field name="company_id" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                            <field name="company_currency_id" invisible="1"/>
                            <field name="amount_company_currency_signed" invisible="1"/>
                            <field name="move_id" invisible="1"/>
                            <field name="is_reconciled" invisible="1"/>
                            <field name="journal_id" options="{'no_create': True}" readonly="1"/>
                            <field name="partner_id" options="{'no_create': True}" readonly="1"/>
                            <label for="amount"/>
                            <div name="amount_div" class="o_row">
                                <field name="amount" readonly="1"/>
                                <field name="currency_id" options="{'no_create': True, 'no_open': True}" required="1" readonly="1" groups="base.group_multi_currency"/>
                            </div>
                        </group>
                        <group>
                            <field name="payment_date" readonly="1"/>
                            <field name="date" readonly="1"/>
                            <field name="clearing_date" attrs="{'required': [('state', '=', 'done')], 'readonly': [('state', '=', 'done')]}" />
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                    <field name="activity_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="pdc_payment_view_tree" model="ir.ui.view">
        <field name="name">pdc.payment.view.tree</field>
        <field name="model">pdc.payment</field>
        <field name="arch" type="xml">
            <tree delete="0">
                <field name="payment_date" />
                <field name="move_ids" widget="many2many_tags"/>
                <field name="journal_id" />
                <field name="partner_id" />
                <field name="date" />
                <field name="name" />
                <field name="amount" />
                <field name="state" />
                <field name="clearing_date" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="pdc_payment_view_search" model="ir.ui.view">
        <field name="name">pdc.payment.view.tree.search</field>
        <field name="model">pdc.payment</field>
        <field name="arch" type="xml">
            <search>
                <filter string="Late Activities" name="activities_overdue"
                        domain="[('my_activity_date_deadline', '&lt;', context_today().strftime('%Y-%m-%d'))]" />
                <filter string="Today Activities" name="activities_today"
                        domain="[('my_activity_date_deadline', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter string="Future Activities" name="activities_upcoming_all"
                        domain="[('my_activity_date_deadline', '&gt;', context_today().strftime('%Y-%m-%d'))]"/>
            </search>
        </field>
    </record>

    <record id="action_pdc_payment" model="ir.actions.act_window">
        <field name="name">PDC Payment</field>
        <field name="res_model">pdc.payment</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'create': 0}</field>
    </record>

    <menuitem
        id="pdc_payment_menu"
        name="PDC Payment"
        action="action_pdc_payment"
        parent="freight_base.root_freight_master_configuration"/>

</odoo>
