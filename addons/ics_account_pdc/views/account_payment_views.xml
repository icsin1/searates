<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="ics_account_pdc_view_account_payment_form" model="ir.ui.view">
        <field name="name">ics_account_pdc.account.payment.form</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="button_open_pdc_payment" type="object" string="PDC Payment"
                        class="oe_stat_button" icon="fa-bars" attrs="{'invisible': [('pdc_payment_id', '=', False)]}"/>
                <field name="pdc_payment_id" invisible="1" />
                <field name="pdc_payment_returned" invisible="1" />
            </xpath>
            <xpath expr="//field[@name='payment_method_line_id']" position="after">
                <field name="show_cheque_information" invisible="1" />
                <field name="cheque_no"
                       attrs="{'invisible': [('show_cheque_information', '=', False)],
                       'required': [('show_cheque_information', '=', True)], 'readonly':[('state', '!=', 'draft')]}"/>
                <field name="cheque_date"
                       attrs="{'invisible': [('show_cheque_information', '=', False)],
                       'required': [('show_cheque_information', '=', True)], 'readonly':[('state', '!=', 'draft')]}"/>
                <field name="cheque_ref"
                       attrs="{'invisible': [('show_cheque_information', '=', False)],
                       'required': [('show_cheque_information', '=', True)], 'readonly':[('state', '!=', 'draft')]}"/>
            </xpath>
            <xpath expr="//button[@name='button_open_opening_invoice_bill_ids']/span" position="attributes">
                <attribute name="attrs">{'invisible': [('pdc_payment_returned', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//button[@name='button_open_opening_invoice_bill_ids']/span" position="after">
                <span attrs="{'invisible': [('pdc_payment_returned', '=', False)]}">Returned</span>
            </xpath>
        </field>
    </record>
</odoo>