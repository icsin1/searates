<odoo>
    <data noupdate="1">
        <record id="email_template_pdc_payment_reminder" model="mail.template">
            <field name="name">PDC Payment: Cheque Deposit Reminder</field>
            <field name="model_id" ref="ics_account_pdc.model_pdc_payment"/>
            <field name="subject">Reminder for Cheque</field>
            <field name="email_from">{{ user.email_formatted }}</field>
            <field name="partner_to">{{ object.create_uid.partner_id.id }}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Hello,
                        <br/><br/>
                        Reminder to deposit the cheque
                        <br/><br/>
                        <b>Cheque Number: </b> <t t-out="object.name" /> <br/>
                        <b>Customer: </b> <t t-out="object.partner_id.display_name" /> <br/>
                        <b>Invoice: </b> <t t-out="object.move_id.display_name" /> <br/>
                        <b>Cheque Date: </b> <t t-out="object.date" /> <br/>
                        <b>Amount: </b> <t t-out="object.amount" /> <br/>
                        <b>Clearing Date: </b> <t t-out="object.clearing_date" />
                        <br/>
                    </p>
                </div>
            </field>
            <field name="auto_delete" eval="False"/>
        </record>
    </data>
</odoo>
