<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_shipping_line" model="ir.ui.view">
        <field name="name">res.config.settings.quote.routing.view.form.shipping.line</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='crm']" position="inside">
                <h2>Enable Shipping Line and Agent Free Time</h2>
                <div class="row mt16 o_settings_container" name="free_time_settings">
                    <div class="col-12 col-lg-6 o_setting_box" id="free_time_settings">
                        <div class="o_setting_left_pane">
                            <field name="enable_shipping_line_free_time" class="oe_inline"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="enable_shipping_line_free_time"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
