<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="inherit_view_tariff_service_wizard_form" model="ir.ui.view">
        <field name="name">tariff.service.wizard.form.inherit</field>
        <field name="model">tariff.service.wizard</field>
        <field name="inherit_id" ref="fm_tariff_quote.view_tariff_service_wizard_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vendor_ids']/../.." position="after">
                <group name="shipment_quote_multi_carrier" attrs="{'invisible': ['|', '|', ('multi_carrier_quote', '=', False), ('tariff_for', '!=', 'shipment'),
                    ('tariff_type', '=', 'charge_master')]}">
                    <group>
                        <div class="o_td_label" name="carrier_label" attrs="{'invisible': [('mode_type', '=', False)]}">
                            <label for="carrier_id" string="Shipping Line" attrs="{'invisible': [('mode_type', '!=', 'sea')]}"/>
                            <label for="carrier_id" string="Airline" attrs="{'invisible': [('mode_type', '!=', 'air')]}"/>
                            <label for="carrier_id" string="Transporter Name" attrs="{'invisible': [('mode_type', '!=', 'land')]}"/>
                        </div>
                        <div class="o_row" name="carrier_name" attrs="{'invisible': [('mode_type', '=', False)]}">
                            <field name="carrier_id" domain="[('transport_mode_id', '=', transport_mode_id)]" options="{'no_create':1}" nolabel="1"
                                attrs="{'required': [('multi_carrier_quote', '=', True), ('tariff_type', '!=', 'charge_master')]}"/>
                        </div>
                        <field name="multi_carrier_quote" invisible="1"/>
                        <field name="mode_type" invisible="1"/>
                    </group>
                    <group>
                        <field name="incoterm_id" options="{'no_create':1}" attrs="{'invisible': [('multi_carrier_quote', '=', False)], 
                            'required': [('multi_carrier_quote', '=', True), ('tariff_type', '!=', 'charge_master')]}"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
