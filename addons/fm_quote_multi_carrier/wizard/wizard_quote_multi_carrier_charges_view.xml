<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_wizard_quote_multi_carrier_charges_form" model="ir.ui.view">
        <field name="name">wizard.quote.multi.carrier.charges.form</field>
        <field name="model">wizard.quote.multi.carrier.charges</field>
        <field name="arch" type="xml">
            <form string="Apply Carrier Charges">
                <group>
                    <group>
                        <div class="o_td_label" name="carrier_label" attrs="{'invisible': [('mode_type', '=', False)]}">
                            <label for="carrier_id" string="Shipping Line" attrs="{'invisible': [('mode_type', '!=', 'sea')]}"/>
                            <label for="carrier_id" string="Airline" attrs="{'invisible': [('mode_type', '!=', 'air')]}"/>
                            <label for="carrier_id" string="Transporter Name" attrs="{'invisible': [('mode_type', '!=', 'land')]}"/>
                        </div>
                        <div class="o_row" name="carrier_name" attrs="{'invisible': [('mode_type', '=', False)]}">
                            <field name="carrier_id" domain="[('id', '=', context.get('carrier_ids'))]" options="{'no_create':1}" nolabel="1" required="1"/>
                        </div>
                    </group>
                    <group>
                        <field name="incoterm_id" options="{'no_create':1}" required="1" domain="[('id', '=', context.get('incoterm_ids'))]"/>
                    </group>
                    <field name="shipment_quote_id" invisible="1"/>
                    <field name="transport_mode_id" invisible="1"/>
                    <field name="mode_type" invisible="1"/>
                </group>
                <label for="include_all_quote_charges"/>
                <field name="include_all_quote_charges" widget="boolean_toggle"/>
                <field name="shipment_quote_charge_ids">
                    <tree editable="bottom" create="0">
                        <field name="include_charge" string="#" widget="boolean_toggle" attrs="{'column_invisible': [('parent.include_all_quote_charges', '=', True)]}"/>
                        <field name="product_id" readonly="1" force_save="1"/>
                        <field name="service_name" readonly="1" force_save="1"/>
                        <field name="measurement_basis_id" readonly="1" force_save="1"/>
                        <field name="quantity" readonly="1" force_save="1"/>
                        <field name="cost_currency_id" invisible="1"/>
                        <field name="cost_amount_rate" readonly="1" force_save="1"/>
                        <field name="sell_currency_id" invisible="1"/>
                        <field name="sell_amount_rate" readonly="1" force_save="1"/>
                        <field name="shipment_quote_charge_line_id" invisible="1"/>
                    </tree>
                </field>
                <footer>
                    <button string="Create Shipment" type="object" name="action_create_house_shipment" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
